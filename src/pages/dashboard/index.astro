---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
---

<DashboardLayout title="Dashboard - NexOne">
    <!-- Header Area -->
    <!-- Header Area -->
    <div
        class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-8"
    >
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight mb-2">
                Dashboard
            </h1>
            <p class="text-gray-400 font-medium text-sm">
                Welcome, Let's dive into your personalized setup guide.
            </p>
        </div>
        <button
            class="flex items-center gap-2 px-5 py-2.5 bg-[#D4F24F] hover:bg-[#c3e33b] text-[#0F1F1C] rounded-xl font-bold transition-all shadow-lg hover:-translate-y-0.5 active:scale-95 text-sm"
        >
            <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg
            >
            Deposit Baru
        </button>
    </div>

    <!-- Stats Section (Unified Card) -->
    <div class="mb-8">
        <div
            class="bg-gray-50 rounded-[1.5rem] border border-gray-200 p-8 shadow-sm"
        >
            <!-- Card Header -->
            <div class="flex items-start justify-between mb-8">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 tracking-tight">
                        Ringkasan Akun
                    </h2>
                    <p class="text-sm text-gray-500 mt-1 font-medium">
                        29 Sept, 2024
                    </p>
                </div>
                <!-- Filter Actions -->
                <div class="flex gap-2">
                    <button
                        class="flex items-center gap-2 px-3 py-1.5 text-xs font-bold text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 shadow-sm transition-all"
                    >
                        <svg
                            class="w-4 h-4 text-gray-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"
                            ></path></svg
                        >
                        Short
                    </button>
                    <button
                        class="flex items-center gap-2 px-3 py-1.5 text-xs font-bold text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 shadow-sm transition-all"
                    >
                        <svg
                            class="w-4 h-4 text-gray-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                            ></path></svg
                        >
                        Filter
                    </button>
                    <button
                        class="flex items-center justify-center w-8 h-8 text-gray-500 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 shadow-sm transition-all"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"
                            ></path></svg
                        >
                    </button>
                </div>
            </div>

            <!-- Divider -->
            <!-- Divider -->
            <!-- Divider -->
            <div class="h-px bg-gray-200 w-full mb-8"></div>

            <!-- Metrics Grid (Divided) -->
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-0 lg:divide-x divide-gray-200"
            >
                <!-- Metric 1: Saldo -->
                <div class="lg:px-8 first:pl-0">
                    <p class="text-gray-500 text-sm font-semibold mb-3">
                        Sisa Saldo
                    </p>
                    <div class="flex items-center gap-3">
                        <h3
                            class="text-3xl font-bold text-gray-900 tracking-tight"
                        >
                            1.5jt
                        </h3>
                        <span
                            class="flex items-center gap-1 text-[11px] font-bold text-emerald-600 bg-emerald-50 border border-emerald-100/50 px-2 py-0.5 rounded-full"
                        >
                            +0.02%
                            <svg
                                class="w-3 h-3"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg
                            >
                        </span>
                    </div>
                </div>

                <!-- Metric 2: Total Pesanan -->
                <div class="lg:px-8">
                    <p class="text-gray-500 text-sm font-semibold mb-3">
                        Total Pesanan
                    </p>
                    <div class="flex items-center gap-3">
                        <h3
                            class="text-3xl font-bold text-gray-900 tracking-tight"
                        >
                            1,240
                        </h3>
                        <span
                            class="flex items-center gap-1 text-[11px] font-bold text-red-500 bg-red-50 border border-red-100/50 px-2 py-0.5 rounded-full"
                        >
                            -0.05%
                            <svg
                                class="w-3 h-3 rotate-180"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg
                            >
                        </span>
                    </div>
                </div>

                <!-- Metric 3: Total Pengeluaran -->
                <div class="lg:px-8">
                    <p class="text-gray-500 text-sm font-semibold mb-3">
                        Total Pengeluaran
                    </p>
                    <div class="flex items-center gap-3">
                        <h3
                            class="text-3xl font-bold text-gray-900 tracking-tight"
                        >
                            5.4jt
                        </h3>
                        <span
                            class="flex items-center gap-1 text-[11px] font-bold text-emerald-600 bg-emerald-50 border border-emerald-100/50 px-2 py-0.5 rounded-full"
                        >
                            +0.02%
                            <svg
                                class="w-3 h-3"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg
                            >
                        </span>
                    </div>
                </div>

                <!-- Metric 4: Level Akun -->
                <div class="lg:px-8">
                    <p class="text-gray-500 text-sm font-semibold mb-3">
                        Status Akun
                    </p>
                    <div class="flex items-center gap-3">
                        <h3
                            class="text-3xl font-bold text-gray-900 tracking-tight"
                        >
                            Gold
                        </h3>
                        <span
                            class="flex items-center gap-1 text-[11px] font-bold text-emerald-600 bg-emerald-50 border border-emerald-100/50 px-2 py-0.5 rounded-full"
                        >
                            Member
                            <svg
                                class="w-3 h-3"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg
                            >
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Widgets -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Chart: Campaign Performance -->
        <!-- Main Chart: Campaign Performance -->
        <!-- Main Chart: Campaign Performance -->
        <!-- Main Chart: Campaign Performance -->
        <!-- Main Chart: Campaign Performance -->
        <div
            class="lg:col-span-2 bg-gray-50 p-8 rounded-[2rem] border border-gray-200 shadow-sm relative overflow-hidden"
        >
            <!-- Header -->
            <div class="flex items-start justify-between mb-8">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 tracking-tight">
                        Campaign Performance
                    </h2>
                </div>
                <button
                    class="text-gray-400 hover:text-gray-600 p-1 rounded-lg hover:bg-gray-50 transition-colors"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"
                        ></path></svg
                    >
                </button>
            </div>

            <!-- Main Stat & Badge -->
            <div class="flex items-start justify-between mb-12">
                <div>
                    <h3
                        class="text-4xl font-bold text-gray-900 tracking-tight mb-1"
                    >
                        $24,747.01
                    </h3>
                    <p class="text-sm text-gray-500 font-medium">
                        29 Sept, 2024
                    </p>
                </div>
                <span
                    class="px-2.5 py-1.5 rounded-lg bg-emerald-50 text-emerald-600 text-xs font-bold flex items-center gap-1.5"
                >
                    <svg
                        class="w-3.5 h-3.5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg
                    >
                    12% <span class="text-gray-900 font-medium ml-1"
                        >vs last month</span
                    >
                </span>
            </div>

            <!-- Chart Container -->
            <div class="relative h-64">
                <!-- Average Line & Label (Left aligned) -->
                <div
                    class="absolute top-[45%] left-0 right-0 border-t-2 border-dotted border-gray-300 z-0"
                >
                </div>
                <div class="absolute top-[41%] left-0 z-10">
                    <div
                        class="bg-[#152A26] text-white text-[10px] font-bold px-3 py-1.5 rounded-r-md shadow-md flex items-center gap-1"
                    >
                        Avg $150k
                    </div>
                </div>

                <!-- Bars -->
                <div
                    class="h-full flex items-end justify-between gap-4 pl-4 pr-4 z-10 relative pt-8"
                >
                    <!-- Bar 1 -->
                    <div class="w-full flex flex-col items-center gap-4 group">
                        <div class="relative w-full h-full flex items-end">
                            <div
                                class="w-full bg-gray-100 rounded-xl h-[40%] relative group-hover:bg-gray-200 transition-all"
                            >
                                <span
                                    class="absolute -top-8 left-1/2 -translate-x-1/2 text-xs font-bold text-gray-500"
                                    >78%</span
                                >
                            </div>
                        </div>
                        <span class="text-sm font-medium text-gray-400"
                            >Jan</span
                        >
                    </div>
                    <!-- Bar 2 -->
                    <div class="w-full flex flex-col items-center gap-4 group">
                        <div class="relative w-full h-full flex items-end">
                            <div
                                class="w-full bg-gray-100 rounded-xl h-[60%] relative group-hover:bg-gray-200 transition-all"
                            >
                                <span
                                    class="absolute -top-8 left-1/2 -translate-x-1/2 text-xs font-bold text-gray-500"
                                    >34%</span
                                >
                            </div>
                        </div>
                        <span class="text-sm font-bold text-gray-900">Feb</span>
                    </div>
                    <!-- Bar 3 (Active) -->
                    <div class="w-full flex flex-col items-center gap-4 group">
                        <div class="relative w-full h-full flex items-end">
                            <div
                                class="w-full bg-[#FF7F57] rounded-xl h-[90%] relative shadow-[0_8px_16px_-4px_rgba(255,127,87,0.4)] transform transition-transform group-hover:-translate-y-1"
                            >
                                <span
                                    class="absolute top-4 left-1/2 -translate-x-1/2 text-xs font-bold text-white/90"
                                    >67%</span
                                >
                            </div>
                        </div>
                        <span class="text-sm font-medium text-gray-400"
                            >Mar</span
                        >
                    </div>
                    <!-- Bar 4 -->
                    <div class="w-full flex flex-col items-center gap-4 group">
                        <div class="relative w-full h-full flex items-end">
                            <div
                                class="w-full bg-gray-100 rounded-xl h-[35%] relative group-hover:bg-gray-200 transition-all"
                            >
                                <span
                                    class="absolute -top-8 left-1/2 -translate-x-1/2 text-xs font-bold text-gray-500"
                                    >28%</span
                                >
                            </div>
                        </div>
                        <span class="text-sm font-medium text-gray-400"
                            >Apr</span
                        >
                    </div>
                    <!-- Bar 5 -->
                    <div class="w-full flex flex-col items-center gap-4 group">
                        <div class="relative w-full h-full flex items-end">
                            <div
                                class="w-full bg-gray-100 rounded-xl h-[50%] relative group-hover:bg-gray-200 transition-all"
                            >
                                <span
                                    class="absolute -top-8 left-1/2 -translate-x-1/2 text-xs font-bold text-gray-500"
                                    >39%</span
                                >
                            </div>
                        </div>
                        <span class="text-sm font-medium text-gray-400"
                            >May</span
                        >
                    </div>
                    <!-- Bar 6 -->
                    <div class="w-full flex flex-col items-center gap-4 group">
                        <div class="relative w-full h-full flex items-end">
                            <div
                                class="w-full bg-gray-100 rounded-xl h-[70%] relative group-hover:bg-gray-200 transition-all"
                            >
                                <span
                                    class="absolute -top-8 left-1/2 -translate-x-1/2 text-xs font-bold text-gray-500"
                                    >80%</span
                                >
                            </div>
                        </div>
                        <span class="text-sm font-medium text-gray-400"
                            >Jun</span
                        >
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Widget: Schedule Campaign -->
        <div
            class="bg-gray-50 p-8 rounded-[2rem] border border-gray-200 shadow-sm flex flex-col"
        >
            <h2 class="text-xl font-bold text-gray-900 tracking-tight mb-6">
                Schedule Campaign
            </h2>

            <p class="text-sm font-bold text-gray-900 mb-4">September 2024</p>

            <!-- Calendar Strip -->
            <div class="flex justify-between mb-8">
                <div class="flex flex-col items-center gap-2">
                    <span class="text-[10px] text-gray-400 font-bold uppercase"
                        >Mon</span
                    >
                    <span class="text-sm font-bold text-gray-900">15</span>
                </div>
                <div class="flex flex-col items-center gap-2">
                    <span class="text-[10px] text-gray-400 font-bold uppercase"
                        >Tue</span
                    >
                    <span class="text-sm font-bold text-gray-900">16</span>
                </div>
                <div class="flex flex-col items-center gap-2">
                    <span class="text-[10px] text-gray-400 font-bold uppercase"
                        >Wed</span
                    >
                    <span class="text-sm font-bold text-gray-900">17</span>
                </div>
                <div class="flex flex-col items-center gap-2">
                    <span class="text-[10px] text-gray-400 font-bold uppercase"
                        >Thu</span
                    >
                    <span class="text-sm font-bold text-gray-900">18</span>
                </div>
                <div
                    class="flex flex-col items-center gap-2 p-1.5 -m-1.5 rounded-xl bg-purple-50"
                >
                    <span
                        class="text-[10px] text-purple-600 font-bold uppercase"
                        >Fri</span
                    >
                    <div
                        class="w-6 h-6 rounded-full bg-purple-200 flex items-center justify-center text-xs font-bold text-purple-700"
                    >
                        19
                    </div>
                </div>
                <div class="flex flex-col items-center gap-2">
                    <span class="text-[10px] text-gray-400 font-bold uppercase"
                        >Sat</span
                    >
                    <span class="text-sm font-bold text-gray-900">20</span>
                </div>
                <div class="flex flex-col items-center gap-2">
                    <span class="text-[10px] text-gray-400 font-bold uppercase"
                        >Sun</span
                    >
                    <span class="text-sm font-bold text-gray-900">21</span>
                </div>
            </div>

            <div class="flex items-center justify-between mb-2">
                <p class="text-xs font-medium text-gray-400">Today</p>
            </div>

            <!-- Schedule Items -->
            <div class="space-y-4">
                <!-- Yellow Card -->
                <div
                    class="bg-[#FFF2C2] p-4 rounded-xl flex items-center justify-between group cursor-pointer hover:shadow-md transition-all"
                >
                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 rounded-lg bg-white/50 flex items-center justify-center border border-white/20"
                        >
                            <svg
                                class="w-5 h-5 text-gray-700"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                                ></path></svg
                            >
                        </div>
                        <div>
                            <h4 class="font-bold text-[#4A4011] text-sm">
                                Element of Design Test
                            </h4>
                            <p
                                class="text-[11px] text-[#857526] font-medium mt-0.5"
                            >
                                10:00 - 11:00 AM
                            </p>
                        </div>
                    </div>
                    <button class="text-[#857526] hover:text-[#4A4011]">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"
                            ></path></svg
                        >
                    </button>
                </div>

                <div class="mb-2 mt-4">
                    <p class="text-xs font-medium text-gray-400">Sat, Jan 20</p>
                </div>

                <!-- Pink Card -->
                <div
                    class="bg-[#FFE2FD] p-4 rounded-xl flex items-center justify-between group cursor-pointer hover:shadow-md transition-all"
                >
                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 rounded-lg bg-white/50 flex items-center justify-center border border-white/20"
                        >
                            <svg
                                class="w-5 h-5 text-gray-700"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
                            >
                        </div>
                        <div>
                            <h4 class="font-bold text-[#5C2B59] text-sm">
                                Design Principle Test
                            </h4>
                            <p
                                class="text-[11px] text-[#8F4F8B] font-medium mt-0.5"
                            >
                                10:00 - 11:00 AM
                            </p>
                        </div>
                    </div>
                    <button class="text-[#8F4F8B] hover:text-[#5C2B59]">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"
                            ></path></svg
                        >
                    </button>
                </div>

                <div class="mb-2 mt-4">
                    <p class="text-xs font-medium text-gray-400">Sat, Jan 20</p>
                </div>
            </div>
        </div>
    </div>
