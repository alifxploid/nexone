        submitDate: "31 Jan 2026, 20:00 WIB",
        reason: "Screenshot tidak valid, belum subscribe",
    },
    {
        id: "HST-2024004",
        taskTitle: "Repost Reels Racun Shopee",
        platform: "Instagram",
        icon: "https://img.icons8.com/color/48/instagram-new.png",
        type: "Clipper Viral",
        fee: 12500,
        status: "Approved",
        submitDate: "31 Jan 2026, 14:20 WIB",
        link: "instagram.com/reel/123",
    },
    {
        id: "HST-2024005",
        taskTitle: "Share Video Viral Lebaran",
        platform: "Facebook",
        icon: "https://img.icons8.com/color/48/facebook-new.png",
        type: "Clipper Viral",
        fee: 8000,
        status: "Pending",
        submitDate: "30 Jan 2026, 18:45 WIB",
        link: "facebook.com/share/123",
    },
    {
        id: "HST-2024006",
        taskTitle: "Nonton Video Masak 3 Menit",
        platform: "Youtube",
        icon: "https://img.icons8.com/color/48/youtube-play.png",
        type: "Social Booster",
        fee: 600,
