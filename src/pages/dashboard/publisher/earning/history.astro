const stats = {
    pending: { count: 12, amount: 45000 },
    approved: { count: 85, amount: 1250000 },
    rejected: { count: 3, amount: 0 },
};
---

<DashboardLayout title="Riwayat Task">
    <div class="space-y-8">
        <!-- Header Section -->
        <div>
            <h1 class="text-2xl font-bold text-gray-800 tracking-tight">
                Riwayat Pengerjaan
            </h1>
            <p class="text-gray-500 mt-1 text-sm">
                Pantau status validasi tugas Social Booster & Clipper kamu
                disini.
            </p>
        </div>

        <!-- Summary Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Pending -->
            <div
                class="bg-amber-50 p-5 rounded-2xl border border-amber-100 relative overflow-hidden group hover:shadow-lg hover:shadow-amber-100 transition-all"
            >
                <div
                    class="absolute right-0 top-0 w-24 h-24 bg-amber-100 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"
                >
                </div>
                <p
                    class="text-[10px] text-amber-600 font-bold uppercase tracking-wider mb-2 flex items-center gap-2"
                >
                    <span
                        class="w-1.5 h-1.5 rounded-full bg-amber-500 animate-pulse"
                    ></span>
                    Menunggu Validasi
                </p>
                <h3 class="text-2xl font-black text-amber-800">
                    Rp {
                        new Intl.NumberFormat("id-ID").format(
                            stats.pending.amount,
                        )
                    }
                </h3>
                <p class="text-xs text-amber-600/80 mt-1 font-medium">
                    {stats.pending.count} Tasks Pending
                </p>
            </div>

            <!-- Approved -->
            <div
                class="bg-emerald-50 p-5 rounded-2xl border border-emerald-100 relative overflow-hidden group hover:shadow-lg hover:shadow-emerald-100 transition-all"
            >
                <div
                    class="absolute right-0 top-0 w-24 h-24 bg-emerald-100 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"
                >
                </div>
                <p
                    class="text-[10px] text-emerald-600 font-bold uppercase tracking-wider mb-2 flex items-center gap-2"
                >
                    <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"
                    ></span>
                    Sudah Cair
                </p>
                <h3 class="text-2xl font-black text-emerald-800">
                    Rp {
                        new Intl.NumberFormat("id-ID").format(
                            stats.approved.amount,
                        )
                    }
                </h3>
                <p class="text-xs text-emerald-600/80 mt-1 font-medium">
                    {stats.approved.count} Tasks Approved
                </p>
            </div>

            <!-- Rejected -->
            <div
                class="bg-red-50 p-5 rounded-2xl border border-red-100 relative overflow-hidden group hover:shadow-lg hover:shadow-red-100 transition-all"
            >
                <div
                    class="absolute right-0 top-0 w-24 h-24 bg-red-100 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"
                >
                </div>
                <p
                    class="text-[10px] text-red-600 font-bold uppercase tracking-wider mb-2 flex items-center gap-2"
                >
                    <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span>
                    Ditolak
                </p>
                <h3 class="text-2xl font-black text-red-800/80">Rp 0</h3>
                <p class="text-xs text-red-600/80 mt-1 font-medium">
                    {stats.rejected.count} Tasks Rejected
                </p>
            </div>
        </div>

        <!-- Main Content -->
        <div
            class="soft-card flex flex-col min-h-[500px] border border-gray-100"
        >
            <!-- Table Header / Filters -->
            <div
                class="p-6 border-b border-gray-100 flex flex-col md:flex-row md:items-center justify-between gap-4"
            >
                <h2 class="text-lg font-bold text-gray-800">
                    Daftar Aktifitas
                </h2>

                <div
                    class="flex items-center gap-2 overflow-x-auto pb-2 md:pb-0 no-scrollbar"
                >
                    <button
                        class="px-4 py-2 bg-[#ff6b6b] text-white text-xs font-bold rounded-lg whitespace-nowrap shadow-lg shadow-red-200"
                    >
                        Semua Status
                    </button>
                    <button
                        class="px-4 py-2 bg-white text-gray-500 hover:bg-gray-50 hover:text-gray-800 text-xs font-bold rounded-lg whitespace-nowrap transition-colors border border-gray-200"
                    >
                        Pending
                    </button>
                    <button
                        class="px-4 py-2 bg-white text-gray-500 hover:bg-gray-50 hover:text-gray-800 text-xs font-bold rounded-lg whitespace-nowrap transition-colors border border-gray-200"
                    >
                        Approved
                    </button>
                    <button
                        class="px-4 py-2 bg-white text-gray-500 hover:bg-gray-50 hover:text-gray-800 text-xs font-bold rounded-lg whitespace-nowrap transition-colors border border-gray-200"
                    >
                        Rejected
                    </button>
                </div>
            </div>

            <!-- List View -->
            <div class="flex-1 overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-gray-50/50 border-b border-gray-100">
                            <th
                                class="p-5 text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Task Info</th
                            >
                            <th
                                class="p-5 text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Tipe & Submit</th
                            >
                            <th
                                class="p-5 text-[10px] font-bold text-gray-400 uppercase tracking-wider text-right"
                                >Komisi</th
                            >
                            <th
                                class="p-5 text-[10px] font-bold text-gray-400 uppercase tracking-wider text-center"
                                >Status</th
                            >
                            <th
                                class="p-5 text-[10px] font-bold text-gray-400 uppercase tracking-wider text-center"
                                >Action</th
                            >
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        {
                            historyData.map((item) => (
                                <tr class="hover:bg-gray-50/80 transition-colors group">
                                    <td class="p-5">
                                        <div class="flex items-start gap-4">
                                            <div class="w-10 h-10 rounded-xl bg-gray-50 flex items-center justify-center shrink-0 border border-gray-100 group-hover:scale-105 transition-transform">
                                                <img
                                                    src={item.icon}
                                                    alt={item.platform}
                                                    class="w-5 h-5"
                                                />
                                            </div>
                                            <div>
                                                <h4 class="text-sm font-bold text-gray-800 line-clamp-1">
                                                    {item.taskTitle}
                                                </h4>
                                                <p class="text-[11px] text-gray-400 font-medium mt-0.5">
                                                    {item.platform} â€¢ {item.id}
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-5">
                                        <div class="flex flex-col gap-1">
                                            <span
                                                class={`text-[10px] font-bold px-2 py-0.5 rounded-md w-fit ${item.type === "Social Booster" ? "bg-blue-50 text-blue-600 ring-1 ring-blue-100" : "bg-purple-50 text-purple-600 ring-1 ring-purple-100"}`}
                                            >
                                                {item.type}
                                            </span>
                                            <span class="text-[11px] text-gray-500">
                                                {item.submitDate}
                                            </span>
                                        </div>
                                    </td>
                                    <td class="p-5 text-right">
                                        <p class="text-sm font-bold text-gray-800">
                                            Rp{" "}
                                            {new Intl.NumberFormat(
                                                "id-ID",
                                            ).format(item.fee)}
                                        </p>
                                    </td>
                                    <td class="p-5 text-center">
                                        {item.status === "Approved" && (
                                            <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-emerald-100 text-emerald-700 text-[10px] font-bold rounded-full border border-emerald-200">
                                                <i class="fa-solid fa-check-circle" />
                                                Berhasil
                                            </span>
                                        )}
                                        {item.status === "Pending" && (
                                            <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-amber-100 text-amber-700 text-[10px] font-bold rounded-full border border-amber-200">
                                                <i class="fa-solid fa-clock animate-pulse" />
                                                Cek Admin
                                            </span>
                                        )}
                                        {item.status === "Rejected" && (
                                            <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-red-100 text-red-700 text-[10px] font-bold rounded-full border border-red-200">
                                                <i class="fa-solid fa-circle-xmark" />
                                                Ditolak
                                            </span>
                                        )}
                                    </td>
                                    <td class="p-5 text-center">
                                        <button class="w-8 h-8 rounded-lg text-gray-400 hover:bg-gray-100 hover:text-gray-800 transition-all flex items-center justify-center mx-auto border border-transparent hover:border-gray-200">
                                            <i class="fa-solid fa-eye text-sm" />
                                        </button>
                                    </td>
                                </tr>
                            ))
                        }

                        <!-- Empty State (Hidden by default, show if logic requires) -->
                        <tr class="hidden">
                            <td
                                colspan="5"
                                class="p-10 text-center text-gray-500 text-sm"
                            >
                                Belum ada riwayat task. Yuk kerjain misi dulu!
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div
                class="p-6 border-t border-gray-100 flex justify-between items-center"
            >
                <p class="text-xs text-gray-400">
                    Menampilkan <span class="font-bold text-gray-800">1-6</span> dari
                    <span class="font-bold text-gray-800">6</span> data
                </p>
                <div class="flex items-center gap-2">
                    <button
                        class="w-8 h-8 rounded-lg border border-gray-200 flex items-center justify-center text-gray-400 cursor-not-allowed bg-gray-50"
                        disabled
                    >
                        <i class="fa-solid fa-chevron-left text-xs"></i>
                    </button>
                    <button
                        class="w-8 h-8 rounded-lg border border-gray-200 flex items-center justify-center text-gray-400 cursor-not-allowed bg-gray-50"
                        disabled
                    >
                        <i class="fa-solid fa-chevron-right text-xs"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</DashboardLayout>

<style>
    /* Hide Scrollbar */
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
