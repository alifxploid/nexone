const filters = ["Semua", "TikTok", "Instagram", "Youtube", "Facebook"];
---

<DashboardLayout title="Clipper Viral">
    <div class="space-y-8">
        <!-- Header Section -->
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <h1 class="text-2xl font-bold text-white tracking-tight">Clipper Viral</h1>
                <p class="text-gray-400 mt-1 text-sm">Repost konten viral & dapatkan komisi affiliate.</p>
            </div>
            
            <!-- Filter Tabs -->
            <div class="flex overflow-x-auto pb-2 md:pb-0 gap-2 no-scrollbar">
                {
                    filters.map((filter, index) => (
                        <button
                            class={`px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap transition-all ${
                                index === 0
                                    ? "bg-[#D4F24F] text-[#0F1F1C] font-bold shadow-lg shadow-[#D4F24F]/20"
                                    : "bg-[#142925] text-gray-400 hover:text-white hover:bg-[#1F3D36] border border-[#1F3D36]"
                            }`}
                        >
                            {filter}
                        </button>
                    ))
                }
            </div>
        </div>

        <!-- Task Grid (Consistent with Social Booster) -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                tasks.map((task) => (
                    <div class="bg-white rounded-[2rem] p-6 shadow-sm hover:shadow-lg transition-all duration-300 relative group border border-gray-100/50">
                        <!-- Card Header -->
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 bg-gray-50 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <img src={task.icon} alt={task.platform} class="w-7 h-7" />
                            </div>
                            <span class="px-3 py-1.5 rounded-xl bg-emerald-50 text-emerald-600 text-xs font-bold ring-1 ring-emerald-100">
                                Rp {new Intl.NumberFormat("id-ID").format(task.fee)}
                            </span>
                        </div>

                        <!-- Card Body -->
                        <div class="mb-6">
                            <h3 class="text-lg font-bold text-gray-800 mb-2 line-clamp-2 leading-tight min-h-[3rem]">
                                {task.title}
                            </h3>
                            <div class="flex items-center gap-2 text-xs font-medium text-gray-400">
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>Sisa {task.quota} slot campaign</span>
                            </div>
                        </div>

                        <!-- Card Footer -->
                        <button
                            onclick={`openModal('${JSON.stringify(task).replace(/'/g, "\\'")}')`}
                            class="w-full py-3 rounded-xl border border-[#0C1A18] text-[#0C1A18] font-bold hover:bg-[#0C1A18] hover:text-[#D4F24F] transition-all duration-300 active:scale-95 text-sm"
                        >
                            Ambil Materi
                        </button>
                    </div>
                ))
            }
        </div>
    </div>

    <!-- Detail Modal (Consistent with Social Booster) -->
    <div
        id="taskModal"
        class="fixed inset-0 z-50 hidden"
    >
        <!-- Backdrop -->
        <div 
            class="absolute inset-0 bg-black/60 backdrop-blur-sm transition-opacity"
            onclick="closeModal()"
        ></div>

        <!-- Modal Box -->
        <div
            class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full max-w-sm md:max-w-md p-4"
        >
            <div id="modalBox" class="bg-white rounded-[2rem] shadow-2xl overflow-hidden max-h-[90vh] overflow-y-auto">
                <!-- Modal Content -->
                <div id="modalContent" class="p-6 md:p-8">
                    <!-- Content injected via JS -->
                </div>
            </div>
        </div>
    </div>
</DashboardLayout>

<style>
    /* Hide Scrollbar for filter tabs */
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-up {
        animation: fadeInUp 0.3s ease-out forwards;
    }
</style>

<script is:inline>
    const modal = document.getElementById("taskModal");
    const modalContent = document.getElementById("modalContent");
    const modalBox = document.getElementById("modalBox");

    window.openModal = (taskStr) => {
        const task = JSON.parse(taskStr);
        
        const html = `
            <div class="flex items-center justify-between mb-6">
                <div>
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-wider">ID: ${task.id}</span>
                    <h2 class="text-2xl font-bold text-gray-800 mt-1">Detail Campaign</h2>
                </div>
                <div class="px-3 py-1 rounded-full bg-emerald-100 text-emerald-600 text-xs font-bold uppercase">
                    Active
                </div>
            </div>

            <div class="space-y-6">
                <!-- Info Utama -->
                <div class="bg-gray-50 rounded-2xl p-5 border border-gray-100">
                    <div class="flex items-center gap-4 mb-4 border-b border-gray-100 pb-4">
                        <img src="${task.icon}" class="w-10 h-10" />
                        <div>
                            <p class="text-xs font-bold text-gray-400 uppercase tracking-wider">Platform</p>
                            <p class="font-bold text-gray-800 text-lg">${task.platform}</p>
                        </div>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-1">Judul Project</p>
                        <p class="font-bold text-gray-800 leading-snug">${task.title}</p>
                    </div>
                </div>

                <!-- Komisi -->
                <div class="text-center">
                    <p class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1">Komisi Kamu</p>
                    <p class="text-4xl font-black text-[#0C1A18] tracking-tight">Rp ${new Intl.NumberFormat("id-ID").format(task.fee)}</p>
                </div>

                <!-- Instruksi -->
                <div>
                    <h3 class="font-bold text-gray-800 mb-3 text-sm uppercase tracking-wider">Instruksi Repost:</h3>
                    <ul class="space-y-2">
                        ${task.instructions.map(inst => `
                            <li class="flex items-start gap-3 text-sm text-gray-600">
                                <svg class="w-5 h-5 text-[#D4F24F] shrink-0 fill-current" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/></svg>
                                ${inst}
                            </li>
                        `).join('')}
                    </ul>
                </div>

                <!-- Action -->
                <div class="pt-4 space-y-3">
                    <!-- Download Material Button -->
                    <button class="w-full py-3 bg-gray-100 hover:bg-gray-200 text-gray-800 font-bold rounded-xl transition-colors text-sm flex items-center justify-center gap-2 mb-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                        Download Materi Video
                    </button>

                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Link Postingan Kamu</label>
                        <input type="text" placeholder="Paste link hasil repost disini..." class="w-full px-4 py-3.5 rounded-xl border border-gray-200 focus:outline-none focus:border-[#0C1A18] focus:ring-1 focus:ring-[#0C1A18] transition-colors bg-gray-50 text-sm font-medium" />
                    </div>
                    
                    <button class="w-full py-4 bg-[#0C1A18] text-white font-bold rounded-xl shadow-lg shadow-[#0C1A18]/20 hover:bg-[#152A26] transition-all hover:-translate-y-1 active:scale-95 text-sm">
                        Submit Hasil Kerja
                    </button>
                    
                    <button onclick="closeModal()" class="w-full py-3.5 rounded-xl border border-gray-200 font-bold text-gray-600 hover:bg-gray-50 transition-colors text-sm">
                        Batalkan
                    </button>
                </div>
            </div>
        `;

        modalContent.innerHTML = html;
        modal.classList.remove("hidden");
        
        // Reset animation
        modalBox.classList.remove("animate-fade-in-up");
        void modalBox.offsetWidth;
        modalBox.classList.add("animate-fade-in-up");
    };

    window.closeModal = () => {
        modal.classList.add("hidden");
    };
</script>
