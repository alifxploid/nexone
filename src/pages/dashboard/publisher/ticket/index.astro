---
import DashboardLayout from "../../../../layouts/DashboardLayout.astro";

// Mock Data for Tickets
const tickets = [
    {
        id: "T-8821",
        subject: "Deposit Belum Masuk",
        category: "Deposit",
        date: "30 Jan 2026",
        status: "open",
    },
    {
        id: "T-8755",
        subject: "Gagal Transaksi Pulsa",
        category: "PPOB",
        date: "28 Jan 2026",
        status: "answered",
    },
    {
        id: "T-8210",
        subject: "Cara menggunakan Clipper",
        category: "General",
        date: "20 Jan 2026",
        status: "closed",
    },
];
---

<DashboardLayout title="Pusat Bantuan - Tiket">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-800 tracking-tight">
            Pusat Bantuan
        </h1>
        <p class="text-gray-500 text-sm mt-1">
            Kami siap membantu kendala Anda 24/7.
        </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
        <!-- LEFT: Create Ticket Form -->
        <div class="lg:col-span-7">
            <div class="soft-card p-6 md:p-8 border border-gray-100">
                <h2 class="text-lg font-bold text-gray-800 mb-6">
                    Buat Tiket Baru
                </h2>

                <form class="space-y-5">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <div class="space-y-1.5">
                            <label
                                class="text-[10px] font-bold text-gray-500 uppercase tracking-wider ml-1"
                                >Kategori</label
                            >
                            <div class="relative">
                                <select
                                    class="w-full bg-white text-gray-900 font-bold text-sm px-4 py-3 rounded-xl border border-gray-200 focus:border-[#0C1A18] focus:ring-1 focus:ring-[#0C1A18] outline-none shadow-sm appearance-none cursor-pointer"
                                >
                                    <option>Kendala Transaksi</option>
                                    <option>Deposit & Saldo</option>
                                    <option>Akun & Keamanan</option>
                                    <option>Lainnya</option>
                                </select>
                                <div
                                    class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none"
                                >
                                    <svg
                                        class="w-4 h-4 text-gray-400"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M19 9l-7 7-7-7"></path></svg
                                    >
                                </div>
                            </div>
                        </div>
                        <div class="space-y-1.5">
                            <label
                                class="text-[10px] font-bold text-gray-500 uppercase tracking-wider ml-1"
                                >ID Transaksi (Opsional)</label
                            >
                            <input
                                type="text"
                                class="w-full bg-white text-gray-900 font-bold text-sm px-4 py-3 rounded-xl border border-gray-200 focus:border-[#0C1A18] focus:ring-1 focus:ring-[#0C1A18] outline-none shadow-sm placeholder:text-gray-300"
                                placeholder="Contoh: TRX-123..."
                            />
                        </div>
                    </div>

                    <div class="space-y-1.5">
                        <label
                            class="text-[10px] font-bold text-gray-500 uppercase tracking-wider ml-1"
                            >Subjek Masalah</label
                        >
                        <input
                            type="text"
                            class="w-full bg-white text-gray-900 font-bold text-sm px-4 py-3 rounded-xl border border-gray-200 focus:border-[#0C1A18] focus:ring-1 focus:ring-[#0C1A18] outline-none shadow-sm placeholder:text-gray-300"
                            placeholder="Jelaskan masalah secara singkat..."
                        />
                    </div>

                    <div class="space-y-1.5">
                        <label
                            class="text-[10px] font-bold text-gray-500 uppercase tracking-wider ml-1"
                            >Detail Pesan</label
                        >
                        <textarea
                            rows="5"
                            class="w-full bg-white text-gray-900 font-bold text-sm px-4 py-3 rounded-xl border border-gray-200 focus:border-[#0C1A18] focus:ring-1 focus:ring-[#0C1A18] outline-none shadow-sm placeholder:text-gray-300 resize-none"
                            placeholder="Ceritakan kendala yang Anda alami sedetail mungkin..."
                        ></textarea>
                    </div>

                    <div class="pt-2">
                        <button
                            type="button"
                            class="w-full py-3.5 bg-[#ff6b6b] hover:bg-[#ff5252] text-white font-bold rounded-xl shadow-lg shadow-red-200 transition-all flex items-center justify-center gap-2 text-sm transform active:scale-95"
                        >
                            <i class="fa-solid fa-paper-plane"></i>
                            Kirim Tiket
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- RIGHT: Recent Tickets -->
        <div class="lg:col-span-5 space-y-6">
            <!-- Ticket List -->
            <div>
                <div class="flex items-center justify-between mb-3 px-1">
                    <h3 class="text-gray-800 font-bold text-sm">
                        Tiket Terbaru Anda
                    </h3>
                    <a
                        href="#"
                        class="text-[#ff6b6b] text-xs font-bold hover:underline"
                        >Lihat Semua</a
                    >
                </div>

                <div class="space-y-3">
                    {
                        tickets.map((ticket) => (
                            <div class="soft-card p-4 border border-gray-100 transition-all group cursor-pointer hover:shadow-md hover:border-gray-200">
                                <div class="flex justify-between items-start mb-3">
                                    <div class="flex items-center gap-2">
                                        <div class="w-8 h-8 rounded-lg bg-gray-100 flex items-center justify-center text-gray-500 group-hover:bg-gray-200 transition-colors">
                                            <i class="fa-solid fa-ticket text-xs" />
                                        </div>
                                        <span class="text-gray-400 font-mono text-[10px] font-bold">
                                            {ticket.id}
                                        </span>
                                    </div>
                                    {ticket.status === "open" && (
                                        <span class="text-[10px] font-bold text-emerald-600 bg-emerald-50 px-2.5 py-1 rounded-full">
                                            <i class="fa-solid fa-circle text-[6px] mr-1 animate-pulse" />
                                            Open
                                        </span>
                                    )}
                                    {ticket.status === "answered" && (
                                        <span class="text-[10px] font-bold text-blue-600 bg-blue-50 px-2.5 py-1 rounded-full">
                                            <i class="fa-solid fa-reply text-[8px] mr-1" />
                                            Dijawab
                                        </span>
                                    )}
                                    {ticket.status === "closed" && (
                                        <span class="text-[10px] font-bold text-gray-500 bg-gray-100 px-2.5 py-1 rounded-full">
                                            <i class="fa-solid fa-check text-[8px] mr-1" />
                                            Closed
                                        </span>
                                    )}
                                </div>
                                <h4 class="text-gray-800 font-bold text-sm leading-tight mb-2 group-hover:text-gray-900">
                                    {ticket.subject}
                                </h4>
                                <div class="flex items-center gap-2 text-[10px] text-gray-400 font-medium">
                                    <span class="bg-gray-50 px-2 py-0.5 rounded">
                                        {ticket.category}
                                    </span>
                                    <span class="w-1 h-1 rounded-full bg-gray-300" />
                                    <span>{ticket.date}</span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Quick FAQ -->
            <div class="soft-card p-6 bg-blue-50 border border-blue-100">
                <h3 class="text-gray-800 font-black text-lg">
                    Butuh Jawaban Cepat?
                </h3>
                <p
                    class="text-gray-600 text-xs font-medium mt-1 mb-4 leading-relaxed"
                >
                    Cek halaman FAQ kami sebelum membuat tiket. Banyak masalah
                    umum sudah ada solusinya di sana.
                </p>
                <button
                    class="px-4 py-2 bg-[#ff6b6b] text-white rounded-lg text-xs font-bold hover:bg-[#ff5252] transition-all shadow-lg shadow-red-200"
                >
                    <i class="fa-solid fa-book-open mr-1"></i>
                    Baca FAQ
                </button>
            </div>
        </div>
    </div>
</DashboardLayout>
