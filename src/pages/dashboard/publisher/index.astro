---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import { ChartOverview } from "@/components/shared/ChartOverview";

// Mock Data Stats
const stats = {
    ppobBalance: 1500000,
    socialBalance: 1000000,
    withdraw: 5400000,
    earnings: 15450000,
    status: "Publisher",
};

// Mock Data History PPOB
const ppobHistory = Array.from({ length: 15 }).map((_, i) => ({
    id: `TRX-${15200 + i}`,
    product: ["Pulsa Telkomsel 10K", "Token PLN 20K", "GoPay 50K", "Dana 100K"][
        Math.floor(Math.random() * 4)
    ],
    target: "0812" + Math.floor(Math.random() * 90000000),
    price: (Math.floor(Math.random() * 10) + 1) * 10000 + 1500,
    date: new Date(
        Date.now() - Math.floor(Math.random() * 1000 * 60 * 60 * 24 * 7),
    ).toLocaleDateString("id-ID", {
        day: "numeric",
        month: "short",
        year: "numeric",
    }),
    status: ["success", "pending", "failed"][
        Math.floor(Math.random() * (i < 3 ? 2 : 3))
    ],
}));

// Mock Data History Earnings
const earningsHistory = Array.from({ length: 15 }).map((_, i) => ({
    id: `EARN-${8800 + i}`,
    task: ["Social Booster", "Clipper Main", "Referral Bonus"][
        Math.floor(Math.random() * 3)
    ],
    amount: (Math.floor(Math.random() * 50) + 1) * 1000,
    date: new Date(
        Date.now() - Math.floor(Math.random() * 1000 * 60 * 60 * 24 * 7),
    ).toLocaleDateString("id-ID", {
        day: "numeric",
        month: "short",
        year: "numeric",
    }),
    status: ["success", "pending"][Math.floor(Math.random() * 2)],
}));
---

<DashboardLayout title="Dashboard - Ringkasan">
    <!-- Custom Styles for New Template -->
    <style>
        .chart-grid-bg {
            background-image: radial-gradient(#e5e7eb 1px, transparent 1px);
            background-size: 20px 20px;
        }
        .nav-pill-active {
            background-color: #ff6b6b;
            color: white;
            box-shadow: 0 4px 14px rgba(255, 107, 107, 0.25);
        }
    </style>

    <!-- BEGIN: Hero Section -->
    <section class="mb-4 md:mb-8">
        <h1 class="text-2xl md:text-4xl font-bold text-gray-800 mb-1 md:mb-2">
            Good day, <span class="text-[#ff6b6b]">NexOne Publisher!</span>
        </h1>
        <p class="text-gray-400 font-light text-base md:text-lg">
            Ready to discover new creative milestones and scale your vision
            today?
        </p>
    </section>
    <!-- END: Hero Section -->

    <!-- BEGIN: Dashboard Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 md:gap-6">
        <!-- Left Column: Financial Stats -->
        <div class="lg:col-span-2 grid grid-cols-2 gap-3 md:gap-6">
            <!-- Card 1: Saldo PPOB -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-between h-auto min-h-[140px] md:h-40"
            >
                <div class="flex justify-between items-start">
                    <h3 class="text-gray-600 font-medium">Saldo PPOB</h3>
                </div>
                <div>
                    <div
                        class="text-xl md:text-3xl font-bold text-gray-800 mb-2 break-all"
                    >
                        Rp {
                            new Intl.NumberFormat("id-ID").format(
                                stats.ppobBalance,
                            )
                        }
                    </div>
                    <div
                        class="inline-flex items-center gap-1 bg-emerald-50 text-emerald-500 px-3 py-1 rounded-full text-xs font-bold"
                    >
                        <i class="fa-solid fa-arrow-trend-up"></i> +5%
                    </div>
                </div>
            </div>

            <!-- Card 2: Social Earnings -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-between h-auto min-h-[140px] md:h-40"
            >
                <div class="flex justify-between items-start">
                    <h3 class="text-gray-600 font-medium">Social Earnings</h3>
                </div>
                <div>
                    <div
                        class="text-xl md:text-3xl font-bold text-gray-800 mb-2 break-all"
                    >
                        Rp {
                            new Intl.NumberFormat("id-ID").format(
                                stats.socialBalance,
                            )
                        }
                    </div>
                    <div
                        class="inline-flex items-center gap-1 bg-emerald-50 text-emerald-500 px-3 py-1 rounded-full text-xs font-bold"
                    >
                        <i class="fa-solid fa-arrow-trend-up"></i> +10%
                    </div>
                </div>
            </div>

            <!-- Card 3: Total Withdraw -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-center h-auto min-h-[140px] md:h-40 relative overflow-hidden"
            >
                <div
                    class="w-12 h-12 rounded-xl bg-red-50 flex items-center justify-center mb-3"
                >
                    <img
                        src="https://img.icons8.com/?size=100&id=rb7SAr3UOu4l&format=png&color=FA5252"
                        alt="Withdraw"
                        class="w-6 h-6"
                    />
                </div>
                <h3 class="text-gray-500 text-sm font-medium mb-1">
                    Total Withdraw
                </h3>
                <div
                    class="text-xl md:text-3xl font-bold text-gray-800 break-all"
                >
                    Rp {new Intl.NumberFormat("id-ID").format(stats.withdraw)}
                </div>
            </div>

            <!-- Card 4: Total Pendapatan -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-center h-auto min-h-[140px] md:h-40 relative overflow-hidden"
            >
                <div
                    class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center mb-3"
                >
                    <img
                        src="https://img.icons8.com/?size=100&id=64896&format=png&color=000000"
                        alt="Income"
                        class="w-6 h-6"
                    />
                </div>
                <h3 class="text-gray-500 text-sm font-medium mb-1">
                    Total Pendapatan
                </h3>
                <div
                    class="text-xl md:text-3xl font-bold text-gray-800 break-all"
                >
                    Rp {new Intl.NumberFormat("id-ID").format(stats.earnings)}
                </div>
            </div>
        </div>

        <!-- Right Column: Financial Pulse Chart -->
        <div class="soft-card p-4 md:p-6 lg:col-span-1 flex flex-col">
            <div class="flex justify-between items-start mb-4 md:mb-6">
                <div>
                    <h3 class="text-base md:text-xl font-bold text-gray-800">
                        Financial Pulse
                    </h3>
                    <p
                        class="text-[10px] text-gray-400 uppercase tracking-widest mt-1"
                    >
                        Efficiency Report 2026
                    </p>
                </div>
                <div class="flex items-center gap-3 text-[10px] md:text-xs">
                    <div class="flex items-center gap-1">
                        <span class="w-2 h-2 rounded-full bg-[#ff6b6b]"></span>
                        <span class="text-gray-500">PPOB</span>
                    </div>
                    <div class="flex items-center gap-1">
                        <span class="w-2 h-2 rounded-full bg-[#4d96ff]"></span>
                        <span class="text-gray-500">Earnings</span>
                    </div>
                </div>
            </div>
            <!-- Chart Visualization (CSS Only Representation) -->
            <div
                class="flex-1 flex items-end justify-between px-1 md:px-2 gap-1 md:gap-2 h-40 md:h-64 mt-2 md:mt-4 chart-grid-bg"
            >
                <!-- JAN -->
                <div
                    class="flex flex-col items-center gap-2 group w-full h-full justify-end"
                >
                    <div
                        class="flex gap-1.5 items-end h-full w-full justify-center"
                    >
                        <div
                            class="w-2.5 bg-[#ff6b6b] rounded-t-[10px] h-[35%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                        <div
                            class="w-2.5 bg-[#4d96ff] rounded-t-[10px] h-[45%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                    </div>
                    <span class="text-[10px] text-gray-400 font-medium mt-1"
                        >JAN</span
                    >
                </div>
                <!-- FEB -->
                <div
                    class="flex flex-col items-center gap-2 group w-full h-full justify-end"
                >
                    <div
                        class="flex gap-1.5 items-end h-full w-full justify-center"
                    >
                        <div
                            class="w-2.5 bg-[#ff6b6b] rounded-t-[10px] h-[45%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                        <div
                            class="w-2.5 bg-[#4d96ff] rounded-t-[10px] h-[55%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                    </div>
                    <span class="text-[10px] text-gray-400 font-medium mt-1"
                        >FEB</span
                    >
                </div>
                <!-- MAR -->
                <div
                    class="flex flex-col items-center gap-2 group w-full h-full justify-end"
                >
                    <div
                        class="flex gap-1.5 items-end h-full w-full justify-center"
                    >
                        <div
                            class="w-2.5 bg-[#ff6b6b] rounded-t-[10px] h-[58%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                        <div
                            class="w-2.5 bg-[#4d96ff] rounded-t-[10px] h-[70%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                    </div>
                    <span class="text-[10px] text-gray-400 font-medium mt-1"
                        >MAR</span
                    >
                </div>
                <!-- APR -->
                <div
                    class="flex flex-col items-center gap-2 group w-full h-full justify-end"
                >
                    <div
                        class="flex gap-1.5 items-end h-full w-full justify-center"
                    >
                        <div
                            class="w-2.5 bg-[#ff6b6b] rounded-t-[10px] h-[72%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                        <div
                            class="w-2.5 bg-[#4d96ff] rounded-t-[10px] h-[85%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                    </div>
                    <span class="text-[10px] text-gray-400 font-medium mt-1"
                        >APR</span
                    >
                </div>
                <!-- MAY -->
                <div
                    class="flex flex-col items-center gap-2 group w-full h-full justify-end"
                >
                    <div
                        class="flex gap-1.5 items-end h-full w-full justify-center"
                    >
                        <div
                            class="w-2.5 bg-[#ff6b6b] rounded-t-[10px] h-[85%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                        <div
                            class="w-2.5 bg-[#4d96ff] rounded-t-[10px] h-[95%] opacity-90 group-hover:opacity-100 transition-all"
                        >
                        </div>
                    </div>
                    <span class="text-[10px] text-gray-400 font-medium mt-1"
                        >MAY</span
                    >
                </div>
            </div>
        </div>
    </div>
    <!-- END: Dashboard Grid -->

    <!-- BEGIN: Bottom Section -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 md:gap-6 mt-4 md:mt-8">
        <!-- Quick Action Center -->
        <div class="soft-card p-4 lg:col-span-1 h-fit self-start">
            <div class="flex justify-between items-center mb-4">
                <div>
                    <h3 class="text-base font-bold text-gray-800">
                        Quick Action Center
                    </h3>
                    <p
                        class="text-[10px] text-gray-400 uppercase tracking-widest mt-0.5"
                    >
                        Frequently Used
                    </p>
                </div>
                <i class="fa-solid fa-bolt text-[#4d96ff] text-sm"></i>
            </div>
            <div class="grid grid-cols-2 gap-2">
                <!-- Button 1: Deposit -->
                <a
                    href="/dashboard/deposit"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-red-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-red-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=IQcQ5T9wEyFV&format=png&color=000000"
                            class="w-8 h-8"
                            alt="Deposit"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >Deposit</span
                    >
                </a>
                <!-- Button 2: Withdraw -->
                <a
                    href="/dashboard/publisher/withdraw"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-blue-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-blue-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=rb7SAr3UOu4l&format=png&color=000000"
                            class="w-8 h-8"
                            alt="Withdraw"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >Withdraw</span
                    >
                </a>
                <!-- Button 3: Share (formerly Social) -->
                <a
                    href="/dashboard/publisher/share"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-emerald-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-emerald-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=67414&format=png&color=000000"
                            class="w-8 h-8"
                            alt="Share"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >Share</span
                    >
                </a>
                <!-- Button 4: Referral -->
                <a
                    href="/dashboard/publisher/referral"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-purple-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-purple-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=dQr0GlAlElvz&format=png&color=000000"
                            class="w-8 h-8"
                            alt="Referral"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >Referral</span
                    >
                </a>
            </div>
        </div>

        <!-- Activity Table -->
        <div class="soft-card p-4 md:p-6 lg:col-span-2" id="history-section">
            <div
                class="flex flex-wrap justify-between items-center mb-4 md:mb-6 gap-4"
            >
                <h3 class="text-lg md:text-xl font-bold text-gray-800">
                    Riwayat Aktivitas
                </h3>
                <!-- Toggle Switch -->
                <div
                    class="flex items-center gap-1 bg-gray-100 rounded-full p-1 text-xs font-medium"
                >
                    <button
                        onclick="switchTab('ppob')"
                        id="tab-ppob"
                        class="px-3 md:px-4 py-1.5 rounded-full transition-all nav-pill-active"
                    >
                        PPOB
                    </button>
                    <button
                        onclick="switchTab('earnings')"
                        id="tab-earnings"
                        class="px-3 md:px-4 py-1.5 rounded-full transition-all text-gray-500 hover:text-gray-800"
                    >
                        Earnings
                    </button>
                </div>
            </div>

            <!-- PPOB Content -->
            <div id="table-ppob" class="block">
                <div class="overflow-x-auto">
                    <table
                        class="w-full min-w-[600px] text-left border-collapse"
                    >
                        <thead>
                            <tr
                                class="text-[10px] text-gray-400 uppercase tracking-wider border-b border-gray-100"
                            >
                                <th class="pb-3 font-medium">ID Transaksi</th>
                                <th class="pb-3 font-medium">Produk</th>
                                <th class="pb-3 font-medium">Tujuan</th>
                                <th class="pb-3 font-medium text-right"
                                    >Harga</th
                                >
                                <th class="pb-3 font-medium text-right"
                                    >Status</th
                                >
                            </tr>
                        </thead>
                        <tbody class="text-sm">
                            {
                                ppobHistory.slice(0, 5).map((item) => (
                                    <tr class="group hover:bg-gray-50 transition-colors">
                                        <td class="py-4 font-semibold text-gray-800">
                                            #{item.id}
                                        </td>
                                        <td class="py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-8 h-8 rounded-full bg-blue-50 text-[#4d96ff] flex items-center justify-center text-xs">
                                                    <i class="fa-solid fa-receipt" />
                                                </div>
                                                <div>
                                                    <div class="font-bold text-gray-800">
                                                        {item.product}
                                                    </div>
                                                    <div class="text-[10px] text-gray-400">
                                                        {item.date}
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-4 font-mono text-xs text-gray-500">
                                            {item.target}
                                        </td>
                                        <td class="py-4 text-right font-bold text-gray-800">
                                            Rp{" "}
                                            {new Intl.NumberFormat(
                                                "id-ID",
                                            ).format(item.price)}
                                        </td>
                                        <td class="py-4 text-right">
                                            {item.status === "success" && (
                                                <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-emerald-50 text-emerald-500">
                                                    <span class="inline-block w-1.5 h-1.5 bg-emerald-500 rounded-full mr-1" />{" "}
                                                    SUKSES
                                                </span>
                                            )}
                                            {item.status === "pending" && (
                                                <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-amber-50 text-amber-500">
                                                    <span class="inline-block w-1.5 h-1.5 bg-amber-500 rounded-full mr-1" />{" "}
                                                    PROSES
                                                </span>
                                            )}
                                            {item.status === "failed" && (
                                                <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-red-50 text-[#ff6b6b]">
                                                    <span class="inline-block w-1.5 h-1.5 bg-[#ff6b6b] rounded-full mr-1" />{" "}
                                                    GAGAL
                                                </span>
                                            )}
                                        </td>
                                    </tr>
                                ))
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Pagination -->
                <div
                    class="flex items-center justify-between mt-6 pt-6 border-t border-gray-100"
                >
                    <span class="text-xs font-bold text-gray-400"
                        >1-5 dari 50</span
                    >
                    <div class="flex gap-2">
                        <button
                            disabled
                            class="px-3 py-1.5 rounded-lg border border-gray-200 text-gray-400 font-bold text-xs cursor-not-allowed"
                            >Prev</button
                        >
                        <button
                            class="px-3 py-1.5 rounded-lg bg-[#ff6b6b] text-white font-bold text-xs hover:bg-[#e55a5a] transition-all shadow-sm"
                            >Next</button
                        >
                    </div>
                </div>
            </div>

            <!-- Earnings Content -->
            <div id="table-earnings" class="hidden">
                <div class="overflow-x-auto">
                    <table
                        class="w-full min-w-[600px] text-left border-collapse"
                    >
                        <thead>
                            <tr
                                class="text-[10px] text-gray-400 uppercase tracking-wider border-b border-gray-100"
                            >
                                <th class="pb-3 font-medium">ID Earnings</th>
                                <th class="pb-3 font-medium">Task / Sumber</th>
                                <th class="pb-3 font-medium">Tanggal</th>
                                <th class="pb-3 font-medium text-right"
                                    >Reward</th
                                >
                                <th class="pb-3 font-medium text-right"
                                    >Status</th
                                >
                            </tr>
                        </thead>
                        <tbody class="text-sm">
                            {
                                earningsHistory.slice(0, 5).map((item) => (
                                    <tr class="group hover:bg-gray-50 transition-colors">
                                        <td class="py-4 font-semibold text-gray-800">
                                            #{item.id}
                                        </td>
                                        <td class="py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-8 h-8 rounded-full bg-red-50 text-[#ff6b6b] flex items-center justify-center text-xs">
                                                    <i class="fa-solid fa-coins" />
                                                </div>
                                                <div class="font-bold text-gray-800">
                                                    {item.task}
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-4 text-gray-500">
                                            {item.date}
                                        </td>
                                        <td class="py-4 text-right font-bold text-emerald-500">
                                            + Rp{" "}
                                            {new Intl.NumberFormat(
                                                "id-ID",
                                            ).format(item.amount)}
                                        </td>
                                        <td class="py-4 text-right">
                                            {item.status === "success" && (
                                                <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-emerald-50 text-emerald-500">
                                                    <span class="inline-block w-1.5 h-1.5 bg-emerald-500 rounded-full mr-1" />{" "}
                                                    CAIR
                                                </span>
                                            )}
                                            {item.status === "pending" && (
                                                <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-amber-50 text-amber-500">
                                                    <span class="inline-block w-1.5 h-1.5 bg-amber-500 rounded-full mr-1" />{" "}
                                                    PENDING
                                                </span>
                                            )}
                                        </td>
                                    </tr>
                                ))
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Pagination -->
                <div
                    class="flex items-center justify-between mt-6 pt-6 border-t border-gray-100"
                >
                    <span class="text-xs font-bold text-gray-400"
                        >1-5 dari 24</span
                    >
                    <div class="flex gap-2">
                        <button
                            disabled
                            class="px-3 py-1.5 rounded-lg border border-gray-200 text-gray-400 font-bold text-xs cursor-not-allowed"
                            >Prev</button
                        >
                        <button
                            class="px-3 py-1.5 rounded-lg bg-[#ff6b6b] text-white font-bold text-xs hover:bg-[#e55a5a] transition-all shadow-sm"
                            >Next</button
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: Bottom Section -->

    <script is:inline>
        function switchTab(tab) {
            const ppobTab = document.getElementById("tab-ppob");
            const earningsTab = document.getElementById("tab-earnings");
            const ppobTable = document.getElementById("table-ppob");
            const earningsTable = document.getElementById("table-earnings");

            if (tab === "ppob") {
                ppobTable.classList.remove("hidden");
                earningsTable.classList.add("hidden");

                ppobTab.classList.add("nav-pill-active");
                ppobTab.classList.remove("text-gray-500");

                earningsTab.classList.remove("nav-pill-active");
                earningsTab.classList.add("text-gray-500");
            } else {
                ppobTable.classList.add("hidden");
                earningsTable.classList.remove("hidden");

                earningsTab.classList.add("nav-pill-active");
                earningsTab.classList.remove("text-gray-500");

                ppobTab.classList.remove("nav-pill-active");
                ppobTab.classList.add("text-gray-500");
            }
        }
    </script>
</DashboardLayout>
