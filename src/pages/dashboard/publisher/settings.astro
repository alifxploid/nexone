---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";

// Mock User Data
const user = {
    name: "James Passaquindici",
    email: "jamespass@emi.com",
    role: "Publisher",
    avatar: "https://api.dicebear.com/7.x/avataaars/svg?seed=Felix",
    securityScore: 85,
    twoFactor: true,
};

// Mock Sessions
const sessions = [
    {
        device: "Windows PC - Chrome",
        location: "Jakarta, Indonesia",
        ip: "192.168.1.1",
        active: true,
        lastActive: "Sekarang",
        icon: "desktop",
    },
    {
        device: "iPhone 13 - Safari",
        location: "Jakarta, Indonesia",
        ip: "192.168.1.20",
        active: false,
        lastActive: "2 jam yang lalu",
        icon: "mobile",
    },
];
---

<DashboardLayout title="Pengaturan Akun">
    <!-- Header Section (Light Theme) -->
    <div class="mb-8">
        <h1 class="text-xl font-bold text-gray-800 tracking-tight">
            Pengaturan Akun
        </h1>
        <p class="text-gray-500 mt-1 text-xs">
            Kelola keamanan, notifikasi, dan privasi akun Anda.
        </p>
    </div>

    <!-- Main Content Container -->
    <div
        class="w-full max-w-7xl mx-auto flex flex-col lg:flex-row gap-8 items-start"
    >
        <!-- Left Column: Sidebar -->
        <div class="w-full lg:w-[350px] shrink-0 space-y-6 lg:sticky lg:top-8">
            <!-- Card 1: Security Score -->
            <div
                class="soft-card p-8 border border-gray-100 relative overflow-hidden text-center"
            >
                <div class="relative w-32 h-32 mx-auto mb-6">
                    <div
                        class="w-full h-full rounded-full bg-gradient-to-br from-[#ff6b6b]/10 to-[#ff5252]/10 flex items-center justify-center relative border-4 border-white shadow-lg overflow-hidden"
                    >
                        <i
                            class="fa-solid fa-shield-halved text-5xl text-[#ff6b6b]"
                        ></i>
                    </div>
                    <!-- Badge -->
                    <div
                        class="absolute bottom-0 right-0 bg-[#ff6b6b] text-white text-xs font-bold px-3 py-1 rounded-full border-2 border-white shadow-md"
                    >
                        {user.securityScore}%
                    </div>
                </div>

                <h2 class="text-xl font-bold text-gray-800 mb-1">
                    Keamanan Akun
                </h2>
                <div class="flex items-center justify-center gap-2 mb-4">
                    <span
                        class="px-3 py-1 bg-green-50 text-green-600 text-xs font-bold rounded-full border border-green-100"
                    >
                        <i class="fa-solid fa-check-circle mr-1"></i> Protected
                    </span>
                </div>
                <p class="text-xs text-gray-400 font-medium">
                    <i class="fa-regular fa-clock mr-1"></i> Terakhir update: 2 menit
                    yang lalu
                </p>
            </div>

            <!-- Card 2: Help Center (Light Theme) -->
            <div
                class="soft-card p-6 border border-gray-100 relative overflow-hidden"
            >
                <div
                    class="absolute top-0 right-0 w-24 h-24 bg-[#ff6b6b]/10 rounded-full blur-xl -translate-y-1/2 translate-x-1/2"
                >
                </div>

                <div class="flex items-center gap-3 mb-3 relative z-10">
                    <div
                        class="w-10 h-10 bg-[#ff6b6b]/10 rounded-xl flex items-center justify-center"
                    >
                        <i class="fa-solid fa-headset text-[#ff6b6b]"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800">
                        Butuh Bantuan?
                    </h3>
                </div>
                <p
                    class="text-gray-500 text-xs mb-4 relative z-10 leading-relaxed"
                >
                    Jika menemukan aktivitas mencurigakan, segera hubungi kami.
                </p>
                <a
                    href="/dashboard/publisher/help"
                    class="w-full py-2.5 bg-[#ff6b6b] hover:bg-[#ff5252] text-white text-sm font-bold rounded-xl flex items-center justify-center gap-2 transition-all active:scale-95 relative z-10 shadow-lg shadow-red-200"
                >
                    <i class="fa-solid fa-paper-plane"></i>
                    Hubungi Support
                </a>
            </div>
        </div>

        <!-- Right Column: Settings Forms -->
        <div class="flex-1 min-w-0 w-full">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Card 1: Security Settings -->
                <div class="soft-card p-6 border border-gray-100 md:col-span-2">
                    <div class="mb-8">
                        <h3 class="text-lg font-bold text-gray-800">
                            <i class="fa-solid fa-lock mr-2 text-[#ff6b6b]"></i>
                            Keamanan Login & Transaksi
                        </h3>
                        <p class="text-xs text-gray-400 mt-1">
                            Update password dan PIN secara berkala untuk
                            keamanan.
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <!-- Change Password -->
                        <div class="space-y-4">
                            <h4
                                class="text-sm font-bold text-gray-800 flex items-center gap-2"
                            >
                                <i class="fa-solid fa-key text-[#ff6b6b]"></i>
                                Ganti Password
                            </h4>
                            <div class="space-y-3">
                                <div class="space-y-1">
                                    <label
                                        class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                        >Password Lama</label
                                    >
                                    <input
                                        type="password"
                                        placeholder="••••••••"
                                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium text-sm"
                                    />
                                </div>
                                <div class="space-y-1">
                                    <label
                                        class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                        >Password Baru</label
                                    >
                                    <input
                                        type="password"
                                        placeholder="••••••••"
                                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium text-sm"
                                    />
                                </div>
                            </div>
                        </div>

                        <!-- Change PIN -->
                        <div
                            class="md:border-l md:border-dashed md:border-gray-200 md:pl-8 space-y-4"
                        >
                            <h4
                                class="text-sm font-bold text-gray-800 flex items-center gap-2"
                            >
                                <i class="fa-solid fa-hashtag text-[#ff6b6b]"
                                ></i>
                                PIN Transaksi
                            </h4>
                            <div class="space-y-3">
                                <div class="space-y-1">
                                    <label
                                        class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                        >PIN Lama</label
                                    >
                                    <input
                                        type="password"
                                        maxlength="6"
                                        placeholder="* * * * * *"
                                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium text-sm tracking-[0.5em] text-center"
                                    />
                                </div>
                                <div class="space-y-1">
                                    <label
                                        class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                        >PIN Baru</label
                                    >
                                    <input
                                        type="password"
                                        maxlength="6"
                                        placeholder="* * * * * *"
                                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium text-sm tracking-[0.5em] text-center"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div
                        class="mt-8 flex justify-end border-t border-gray-100 pt-6"
                    >
                        <button
                            class="px-8 py-3 bg-[#ff6b6b] text-white font-bold rounded-xl shadow-lg shadow-red-200 hover:bg-[#ff5252] transition-all hover:-translate-y-1 active:scale-95 text-sm"
                        >
                            <i class="fa-solid fa-floppy-disk mr-2"></i>
                            Simpan Perubahan
                        </button>
                    </div>
                </div>

                <!-- Card 2: Notifications -->
                <div
                    class="soft-card p-6 border border-gray-100 flex flex-col h-full"
                >
                    <div class="mb-6">
                        <h3 class="text-lg font-bold text-gray-800">
                            <i class="fa-solid fa-bell mr-2 text-[#ff6b6b]"></i>
                            Notifikasi
                        </h3>
                        <p class="text-xs text-gray-400 mt-1">
                            Atur preferensi pesan masuk.
                        </p>
                    </div>

                    <div class="space-y-4 flex-1">
                        <div
                            class="flex items-center justify-between p-3 bg-gray-50 rounded-xl"
                        >
                            <div>
                                <p class="text-sm font-bold text-gray-800">
                                    <i
                                        class="fa-solid fa-receipt text-[#ff6b6b] mr-1"
                                    ></i> Transaksi
                                </p>
                                <p class="text-[10px] text-gray-500">
                                    Info topup & withdraw
                                </p>
                            </div>
                            <label
                                class="relative inline-flex items-center cursor-pointer"
                            >
                                <input
                                    type="checkbox"
                                    value=""
                                    class="sr-only peer"
                                    checked
                                />
                                <div
                                    class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-[#ff6b6b]"
                                >
                                </div>
                            </label>
                        </div>
                        <div
                            class="flex items-center justify-between p-3 bg-gray-50 rounded-xl"
                        >
                            <div>
                                <p class="text-sm font-bold text-gray-800">
                                    <i
                                        class="fa-solid fa-bullhorn text-[#ff6b6b] mr-1"
                                    ></i> Promo & Info
                                </p>
                                <p class="text-[10px] text-gray-500">
                                    Update fitur baru
                                </p>
                            </div>
                            <label
                                class="relative inline-flex items-center cursor-pointer"
                            >
                                <input
                                    type="checkbox"
                                    value=""
                                    class="sr-only peer"
                                />
                                <div
                                    class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-[#ff6b6b]"
                                >
                                </div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Card 3: Active Sessions -->
                <div
                    class="soft-card p-6 border border-gray-100 flex flex-col h-full"
                >
                    <div class="mb-6 flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-bold text-gray-800">
                                <i
                                    class="fa-solid fa-desktop mr-2 text-[#ff6b6b]"
                                ></i>
                                Sesi Aktif
                            </h3>
                            <p class="text-xs text-gray-400 mt-1">
                                Perangkat login saat ini.
                            </p>
                        </div>
                    </div>

                    <div class="space-y-3 flex-1">
                        {
                            sessions.map((session) => (
                                <div class="flex items-start gap-3 p-3 border border-gray-100 rounded-xl bg-gray-50/50">
                                    <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center shrink-0 text-gray-500 shadow-sm border border-gray-100">
                                        {session.icon === "desktop" ? (
                                            <i class="fa-solid fa-desktop text-sm" />
                                        ) : (
                                            <i class="fa-solid fa-mobile-screen text-sm" />
                                        )}
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center justify-between mb-0.5">
                                            <h5 class="text-xs font-bold text-gray-800 truncate">
                                                {session.device}
                                            </h5>
                                            {session.active && (
                                                <span class="w-2 h-2 rounded-full bg-green-500 shadow-green-200 shadow-lg" />
                                            )}
                                        </div>
                                        <p class="text-[10px] text-gray-500 truncate">
                                            {session.location}
                                        </p>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Card 4: Danger Zone -->
                <div
                    class="bg-red-50 rounded-[2rem] p-6 shadow-sm border border-red-100 md:col-span-2"
                >
                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center shrink-0 text-red-600 border border-red-200"
                        >
                            <i class="fa-solid fa-trash"></i>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-sm font-bold text-red-900">
                                Hapus Akun
                            </h3>
                            <p class="text-xs text-red-700 mt-1">
                                Tindakan ini permanen. Data tidak dapat
                                dipulihkan.
                            </p>
                        </div>
                        <button
                            class="px-6 py-2.5 bg-white border border-red-200 text-red-600 font-bold text-xs rounded-xl hover:bg-red-600 hover:text-white transition-colors shadow-sm whitespace-nowrap"
                        >
                            <i class="fa-solid fa-trash mr-1"></i>
                            Hapus Akun
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</DashboardLayout>
