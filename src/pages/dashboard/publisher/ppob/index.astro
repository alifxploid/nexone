---
import DashboardLayout from "../../../../layouts/DashboardLayout.astro";
import InvoiceModal from "../../../../components/dashboard/ppob/InvoiceModal.astro";
---

<DashboardLayout title="Pesanan Baru - Pulsa & PPOB">
    <!-- Page Header -->
    <div class="mb-6">
        <h1 class="text-xl font-bold text-white tracking-tight">
            Transaksi Baru
        </h1>
        <p class="text-gray-400 text-xs mt-0.5">
            Isi ulang pulsa, data, dan pembayaran tagihan.
        </p>
    </div>

    <!-- Main Container -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 items-start">
        <!-- LEFT COLUMN: Config -->
        <div class="lg:col-span-5 space-y-4">
            <!-- Mode Cards (Compact) -->
            <div class="grid grid-cols-2 gap-3">
                <button
                    id="btn-mode-prabayar"
                    class="mode-btn active group relative overflow-hidden bg-[#0C1A18] text-white p-4 rounded-2xl text-left shadow-md transition-all hover:-translate-y-0.5"
                    onclick="setMode('prabayar')"
                >
                    <div
                        class="relative z-10 flex flex-col justify-between h-full gap-2"
                    >
                        <div
                            class="p-2 bg-white/10 w-fit rounded-lg text-emerald-400 group-hover:text-white transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                                ></path></svg
                            >
                        </div>
                        <div>
                            <h3 class="font-bold text-sm leading-tight">
                                Prabayar
                            </h3>
                            <p class="text-[10px] text-gray-400 mt-0.5">
                                Isi Ulang
                            </p>
                        </div>
                    </div>
                </button>

                <button
                    id="btn-mode-pascabayar"
                    class="mode-btn relative overflow-hidden bg-white border border-gray-200 text-gray-500 p-4 rounded-2xl text-left transition-all hover:border-[#0C1A18] hover:text-[#0C1A18] hover:-translate-y-0.5"
                    onclick="setMode('pascabayar')"
                >
                    <div
                        class="relative z-10 flex flex-col justify-between h-full gap-2"
                    >
                        <div
                            class="p-2 bg-gray-50 w-fit rounded-lg group-hover:bg-[#0C1A18] transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                ></path></svg
                            >
                        </div>
                        <div>
                            <h3 class="font-bold text-sm leading-tight">
                                Pascabayar
                            </h3>
                            <p class="text-[10px] text-gray-400 mt-0.5">
                                Tagihan
                            </p>
                        </div>
                    </div>
                </button>
            </div>

            <!-- Configuration Card -->
            <div class="bg-gray-50 p-5 rounded-[1.5rem] border border-gray-200">
                <!-- PRABAYAR CONFIG -->
                <div id="config-prabayar" class="space-y-5">
                    <!-- Category Grid (Expanded for Desktop) -->
                    <div class="space-y-2">
                        <label
                            class="text-[10px] font-bold text-gray-500 uppercase tracking-wider ml-1"
                            >Layanan</label
                        >
                        <div class="grid grid-cols-4 lg:grid-cols-3 gap-2">
                            <!-- 1. Token PLN -->
                            <button
                                class="cat-btn active flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-[#0C1A18] text-[#0C1A18] shadow-sm transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Token PLN</span
                                >
                            </button>
                            <!-- 2. Pulsa -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Pulsa</span
                                >
                            </button>
                            <!-- 3. Paket Data -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Data</span
                                >
                            </button>
                            <!-- 4. Topup Game -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                                    ></path><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Game</span
                                >
                            </button>

                            <!-- 5. E-money -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >E-Money</span
                                >
                            </button>
                            <!-- 6. Voucher -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Voucher</span
                                >
                            </button>
                            <!-- 7. Paket Telpon -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Tlp/SMS</span
                                >
                            </button>
                            <!-- 8. Aktivasi Voucher -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Aktivasi</span
                                >
                            </button>

                            <!-- 9. Pertagas -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Pertagas</span
                                >
                            </button>
                            <!-- 10. Streaming -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                                    ></path><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Streaming</span
                                >
                            </button>
                            <!-- 11. Masa Aktif -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Masa Aktif</span
                                >
                            </button>
                            <!-- 12. Layanan TV -->
                            <button
                                class="cat-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategory(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Layanan TV</span
                                >
                            </button>
                        </div>
                    </div>

                    <!-- Compact Phone Input -->
                    <div class="space-y-1.5">
                        <label
                            class="text-[10px] font-bold text-gray-500 uppercase tracking-wider ml-1"
                            >Nomor Tujuan</label
                        >
                        <div class="relative group">
                            <input
                                type="text"
                                class="w-full bg-white text-gray-900 font-bold text-sm px-4 py-3 rounded-xl border border-gray-200 focus:border-[#0C1A18] focus:ring-1 focus:ring-[#0C1A18] outline-none shadow-sm transition-all placeholder:text-gray-300"
                                placeholder="0812..."
                            />
                            <div
                                class="absolute right-3 top-1/2 -translate-y-1/2"
                            >
                                <span
                                    class="bg-gray-100 text-gray-400 text-[9px] font-bold px-1.5 py-0.5 rounded border border-gray-200"
                                    >Auto</span
                                >
                            </div>
                        </div>
                    </div>
                </div>

                <!-- PASCABAYAR CONFIG (Hidden by default) -->
                <div id="config-pascabayar" class="hidden space-y-5">
                    <!-- Category Grid Pascabayar (12 Items) -->
                    <div class="space-y-2">
                        <label
                            class="text-[10px] font-bold text-gray-500 uppercase tracking-wider ml-1"
                            >Layanan Tagihan</label
                        >
                        <div class="grid grid-cols-4 lg:grid-cols-3 gap-2">
                            <!-- 1. PLN Pascabayar -->
                            <button
                                class="cat-pasca-btn active flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-[#0C1A18] text-[#0C1A18] shadow-sm transition-all text-center"
                                onclick="selectCategoryPasca(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >PLN Pasca</span
                                >
                            </button>
                            <!-- 2. BPJS Kesehatan -->
                            <button
                                class="cat-pasca-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategoryPasca(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >BPJS Kes</span
                                >
                            </button>
                            <!-- 3. PDAM -->
                            <button
                                class="cat-pasca-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategoryPasca(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >PDAM</span
                                >
                            </button>
                            <!-- 4. Internet Pasca -->
                            <button
                                class="cat-pasca-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategoryPasca(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Internet</span
                                >
                            </button>

                            <!-- 5. PLN Nontaglis -->
                            <button
                                class="cat-pasca-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategoryPasca(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"
                                    ></path></svg
                                >
                                <span
                                    class="text-[9px] lg:text-[10px] font-bold leading-tight"
                                    >Nontaglis</span
                                >
                            </button>
                            <!-- 6. PBB -->
                            <button
                                class="cat-pasca-btn flex flex-col items-center gap-1.5 p-2 lg:p-3 rounded-xl bg-white border border-gray-200 text-gray-400 hover:text-[#0C1A18] hover:border-[#0C1A18] transition-all text-center"
                                onclick="selectCategoryPasca(this)"
                            >
                                <svg
                                    class="w-4 h-4 lg:w-5 lg:h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
