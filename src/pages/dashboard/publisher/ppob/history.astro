const formatCurrency = (amount: number) => {
    return new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(amount);
};
---

<DashboardLayout title="Riwayat Pesanan - Pulsa & PPOB">
    <!-- Page Header (Light Theme) -->
    <div class="mb-6">
        <div class="flex items-center gap-2 mb-2">
            <span class="px-2.5 py-0.5 rounded-full bg-[#ff6b6b]/10 border border-[#ff6b6b]/20 text-[10px] font-bold text-[#ff6b6b] uppercase tracking-wider">
                <i class="fa-solid fa-database mr-1"></i> Database
            </span>
        </div>
        <h1 class="text-xl font-bold text-gray-800 tracking-tight">Riwayat Transaksi</h1>
        <p class="text-gray-500 text-xs mt-0.5">
            Rekapitulasi data transaksi PPOB secara lengkap dan real-time.
        </p>
    </div>

    <!-- Search & Filter Bar -->
    <div class="flex gap-3 mb-6">
        <div class="relative group flex-1">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <i class="fa-solid fa-magnifying-glass text-gray-400 group-focus-within:text-[#ff6b6b] transition-colors"></i>
            </div>
            <input 
                type="text" 
                class="block w-full pl-11 pr-4 py-3 rounded-xl bg-white border border-gray-200 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#ff6b6b]/20 focus:border-[#ff6b6b] text-sm transition-all shadow-sm" 
                placeholder="Cari ID / Nomor..."
            >
        </div>
        <button class="bg-[#ff6b6b] hover:bg-[#ff5252] text-white w-12 h-12 md:w-auto md:h-auto md:px-4 md:py-3 rounded-xl shadow-lg shadow-red-200 transition-colors flex items-center justify-center gap-2 text-sm font-bold flex-shrink-0">
            <i class="fa-solid fa-filter"></i>
            <span class="hidden md:inline">Filter</span>
        </button>
    </div>

    <!-- Modern Data Table Layout -->
    <div class="soft-card border border-gray-100 overflow-hidden flex flex-col min-h-[500px]">
        
        <!-- Table Toolbar -->
        <div class="px-6 py-4 border-b border-gray-100 flex items-center gap-3 overflow-x-auto no-scrollbar">
             <button class="px-4 py-1.5 rounded-full bg-[#ff6b6b] text-white text-xs font-bold shadow-md whitespace-nowrap">
                 <i class="fa-solid fa-list mr-1"></i> Semua
             </button>
             <button class="px-4 py-1.5 rounded-full bg-white border border-gray-200 text-gray-500 text-xs font-bold hover:border-[#ff6b6b] hover:text-[#ff6b6b] whitespace-nowrap transition-colors">
                 <i class="fa-solid fa-circle-check mr-1"></i> Berhasil
             </button>
             <button class="px-4 py-1.5 rounded-full bg-white border border-gray-200 text-gray-500 text-xs font-bold hover:border-[#ff6b6b] hover:text-[#ff6b6b] whitespace-nowrap transition-colors">
                 <i class="fa-solid fa-clock mr-1"></i> Proses
             </button>
             <button class="px-4 py-1.5 rounded-full bg-white border border-gray-200 text-gray-500 text-xs font-bold hover:border-[#ff6b6b] hover:text-[#ff6b6b] whitespace-nowrap transition-colors">
                 <i class="fa-solid fa-circle-xmark mr-1"></i> Gagal
             </button>
        </div>

        <!-- Scrollable Table Area -->
        <div class="overflow-x-auto flex-1">
            <table class="w-full text-left border-separate border-spacing-y-2 px-4">
                <thead>
                    <tr class="text-xs text-gray-400 font-bold uppercase tracking-wider">
                        <th class="px-4 py-3 pb-2">ID & Layanan</th>
                        <th class="px-4 py-3 pb-2">Tujuan</th>
                        <th class="px-4 py-3 pb-2">Tanggal</th>
                        <th class="px-4 py-3 pb-2 text-right">Nominal</th>
                        <th class="px-4 py-3 pb-2 text-center rounded-r-2xl">Status</th>
                    </tr>
                </thead>
                <tbody class="text-sm">
                    {historyData.map((item) => (
                        <tr class="group relative bg-white hover:bg-gray-50 transition-colors shadow-sm hover:shadow-md rounded-2xl">
                             <!-- Service -->
                            <td class="px-4 py-4 rounded-l-2xl border-l border-y border-gray-100 group-hover:border-gray-200 align-middle">
                                <div class="flex items-center gap-3">
                                    <div class={`w-10 h-10 rounded-xl flex items-center justify-center ${
                                        item.status === 'success' ? 'bg-green-50 text-green-600' :
                                        item.status === 'pending' ? 'bg-amber-50 text-amber-600' :
                                        'bg-red-50 text-red-600'
                                    }`}>
                                        <i class={`fa-solid ${item.icon} text-lg`}></i>
                                    </div>
                                    <div>
                                        <p class="font-bold text-gray-800 leading-tight">{item.service}</p>
                                        <p class="text-[10px] text-gray-400 font-bold">{item.id}</p>
                                    </div>
                                </div>
                            </td>
                            
                            <!-- Destination -->
                            <td class="px-4 py-4 border-y border-gray-100 group-hover:border-gray-200 align-middle">
                                <div>
                                    <p class="font-bold text-gray-700 font-mono tracking-tight">{item.number}</p>
                                    <p class="text-[10px] text-gray-400">{item.provider}</p>
                                </div>
                            </td>

                            <!-- Date -->
                            <td class="px-4 py-4 border-y border-gray-100 group-hover:border-gray-200 align-middle">
                                <span class="text-xs font-medium text-gray-500">{item.date}</span>
                            </td>

                             <!-- Price -->
                            <td class="px-4 py-4 border-y border-gray-100 group-hover:border-gray-200 align-middle text-right">
                                <span class="font-bold text-gray-800">{formatCurrency(item.price)}</span>
                            </td>

                            <!-- Status -->
                            <td class="px-4 py-4 rounded-r-2xl border-r border-y border-gray-100 group-hover:border-gray-200 align-middle text-center">
                                {item.status === 'success' && (
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-green-50 border border-green-100 text-green-600 text-[10px] font-bold">
                                        <i class="fa-solid fa-circle-check"></i> Berhasil
                                    </span>
                                )}
                                {item.status === 'pending' && (
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-amber-50 border border-amber-100 text-amber-600 text-[10px] font-bold">
                                        <i class="fa-solid fa-spinner fa-spin"></i> Proses
                                    </span>
                                )}
                                {item.status === 'failed' && (
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-red-50 border border-red-100 text-red-600 text-[10px] font-bold">
                                        <i class="fa-solid fa-circle-xmark"></i> Gagal
                                    </span>
                                )}
                            </td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </div>

        <!-- Custom Pagination -->
        <div class="px-6 py-4 border-t border-gray-100 flex flex-col md:flex-row items-center justify-between gap-4">
            <p class="text-xs text-gray-500 font-medium">
                Menampilkan <span class="font-bold text-gray-800">1-7</span> dari <span class="font-bold text-gray-800">128</span> transaksi
            </p>
            
            <div class="flex items-center gap-2">
                <button class="w-8 h-8 flex items-center justify-center rounded-lg border border-gray-200 text-gray-400 hover:border-[#ff6b6b] hover:text-[#ff6b6b] transition-all disabled:opacity-50">
                    <i class="fa-solid fa-chevron-left text-xs"></i>
                </button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-lg bg-[#ff6b6b] text-white font-bold text-xs shadow-md">1</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-gray-200 text-gray-500 hover:border-[#ff6b6b] hover:text-[#ff6b6b] font-bold text-xs transition-all">2</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-gray-200 text-gray-500 hover:border-[#ff6b6b] hover:text-[#ff6b6b] font-bold text-xs transition-all">3</button>
                <span class="text-gray-400 text-xs">...</span>
                <button class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-gray-200 text-gray-500 hover:border-[#ff6b6b] hover:text-[#ff6b6b] font-bold text-xs transition-all">12</button>

                <button class="w-8 h-8 flex items-center justify-center rounded-lg border border-gray-200 text-gray-400 hover:border-[#ff6b6b] hover:text-[#ff6b6b] transition-all">
                    <i class="fa-solid fa-chevron-right text-xs"></i>
                </button>
            </div>
        </div>

    </div>
</DashboardLayout>
