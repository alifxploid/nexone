---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import { ChartOverview } from "@/components/shared/ChartOverview";

// Mock Data Stats
const stats = {
    socialBalance: 1500000,
    ppobBalance: 1000000,
    totalDeposit: 15450000,
    activeCampaigns: 12,
    status: "Advertiser",
};

// Mock Data History PPOB
const ppobHistory = Array.from({ length: 15 }).map((_, i) => ({
    id: `TRX-${15200 + i}`,
    product: ["Pulsa Telkomsel 10K", "Token PLN 20K", "GoPay 50K", "Dana 100K"][
        Math.floor(Math.random() * 4)
    ],
    target: "0812" + Math.floor(Math.random() * 90000000),
    price: (Math.floor(Math.random() * 10) + 1) * 10000 + 1500,
    date: new Date(
        Date.now() - Math.floor(Math.random() * 1000 * 60 * 60 * 24 * 7),
    ).toLocaleDateString("id-ID", {
        day: "numeric",
        month: "short",
        year: "numeric",
    }),
    status: ["success", "pending", "failed"][
        Math.floor(Math.random() * (i < 3 ? 2 : 3))
    ],
}));
---

<DashboardLayout title="Dashboard Advertiser - Ringkasan">
    <!-- Header -->
    <div
        class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4"
    >
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">
                Dashboard Advertiser
            </h1>
            <p class="text-gray-400 text-sm mt-1">
                Ringkasan aktivitas kampanye dan saldo Anda.
            </p>
        </div>
        <a
            href="/dashboard/advertiser/deposit"
            class="flex items-center gap-2 px-5 py-2.5 bg-[#D4F24F] hover:bg-[#c3e33b] text-[#0F1F1C] rounded-xl font-bold transition-all shadow-lg hover:-translate-y-0.5 active:scale-95 text-sm"
        >
            <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg
            >
            Deposit Baru
        </a>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <!-- Card 1: Saldo Iklan (Social Booster) -->
        <div
            class="bg-white rounded-[2rem] p-6 border border-gray-200 shadow-sm relative overflow-hidden group hover:border-blue-500 transition-colors"
        >
            <div
                class="absolute top-0 right-0 w-32 h-32 bg-blue-500/5 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"
            >
            </div>
            <p
                class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
            >
                Saldo Iklan
            </p>
            <h3 class="text-2xl font-black text-[#0C1A18]">
                Rp {new Intl.NumberFormat("id-ID").format(stats.socialBalance)}
            </h3>
            <div class="mt-4 flex items-center gap-2">
                <span
                    class="text-[10px] font-bold text-blue-600 bg-blue-50 px-2 py-0.5 rounded-lg border border-blue-100"
                    >Social Booster</span
                >
            </div>
        </div>

        <!-- Card 2: Saldo PPOB -->
        <div
            class="bg-white rounded-[2rem] p-6 border border-gray-200 shadow-sm relative overflow-hidden group hover:border-[#D4F24F] transition-colors"
        >
            <div
                class="absolute top-0 right-0 w-32 h-32 bg-emerald-500/5 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"
            >
            </div>
            <p
                class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
            >
                Saldo PPOB
            </p>
            <h3 class="text-2xl font-black text-[#0C1A18]">
                Rp {new Intl.NumberFormat("id-ID").format(stats.ppobBalance)}
            </h3>
            <div class="mt-4 flex items-center gap-2">
                <span
                    class="text-[10px] font-bold text-emerald-600 bg-emerald-50 px-2 py-0.5 rounded-lg border border-emerald-100"
                    >Transaksi</span
                >
            </div>
        </div>

        <!-- Card 2: Total Deposit -->
        <div
            class="bg-white rounded-[2rem] p-6 border border-gray-200 shadow-sm relative overflow-hidden group hover:border-[#D4F24F] transition-colors"
        >
            <div
                class="absolute top-0 right-0 w-32 h-32 bg-blue-500/5 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"
            >
            </div>
            <p
                class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
            >
                Total Deposit
            </p>
            <h3 class="text-2xl font-black text-[#0C1A18]">
                Rp {new Intl.NumberFormat("id-ID").format(stats.totalDeposit)}
            </h3>
            <div class="mt-4 flex items-center gap-2">
                <span class="text-[10px] text-gray-400 font-medium"
                    >Sepanjang waktu</span
                >
            </div>
        </div>

        <!-- Card 3: Status Akun -->
        <div
            class="bg-white rounded-[2rem] p-6 border border-gray-200 shadow-sm relative overflow-hidden group hover:border-[#D4F24F] transition-colors"
        >
            <div
                class="absolute top-0 right-0 w-32 h-32 bg-[#D4F24F]/10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"
            >
            </div>
            <p
                class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
            >
                Status Akun
            </p>
            <div class="flex items-center gap-2">
                <div
                    class="w-8 h-8 rounded-full bg-[#0C1A18] flex items-center justify-center border border-[#D4F24F]"
                >
                    <svg
                        class="w-4 h-4 text-[#D4F24F]"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path></svg
                    >
                </div>
                <h3 class="text-2xl font-black text-[#0C1A18]">
                    {stats.status}
                </h3>
            </div>
            <div class="mt-4 flex items-center gap-2">
                <span
                    class="text-[10px] font-bold text-[#0C1A18] bg-[#D4F24F] px-2 py-0.5 rounded-lg border border-[#D4F24F]"
                    >Verified</span
                >
            </div>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="mb-8">
        <ChartOverview client:load />
    </div>

    <!-- History Tables (PPOB Only) -->
    <div
        class="bg-white rounded-[2rem] p-6 md:p-8 border border-gray-200 shadow-sm"
        id="history-section"
    >
        <div
            class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6"
        >
            <h3 class="text-lg font-bold text-[#0C1A18]">Riwayat Aktivitas</h3>
        </div>

        <!-- PPOB Content -->
        <div id="table-ppob" class="block">
            <!-- Desktop Table -->
            <div class="hidden md:block overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="text-left border-b border-gray-100">
                            <th
                                class="pb-4 text-xs font-bold text-gray-400 uppercase tracking-wider"
                                >ID Transaksi</th
                            >
                            <th
                                class="pb-4 text-xs font-bold text-gray-400 uppercase tracking-wider"
                                >Produk</th
                            >
                            <th
                                class="pb-4 text-xs font-bold text-gray-400 uppercase tracking-wider"
                                >Tujuan</th
                            >
                            <th
                                class="pb-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                                >Harga</th
                            >
                            <th
                                class="pb-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                                >Status</th
                            >
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        {
                            ppobHistory.slice(0, 5).map((item) => (
                                <tr class="group hover:bg-gray-50/50 transition-colors">
                                    <td class="py-4 font-mono text-xs text-gray-400 group-hover:text-[#0C1A18] transition-colors">
                                        #{item.id}
                                    </td>
                                    <td class="py-4">
                                        <span class="font-bold text-sm text-[#0C1A18]">
                                            {item.product}
                                        </span>
                                    </td>
                                    <td class="py-4 text-sm font-mono text-gray-500">
                                        {item.target}
                                    </td>
                                    <td class="py-4 text-right font-bold text-sm text-[#0C1A18]">
                                        Rp{" "}
                                        {new Intl.NumberFormat("id-ID").format(
                                            item.price,
                                        )}
                                    </td>
                                    <td class="py-4 text-right">
                                        {item.status === "success" && (
                                            <span class="inline-flex items-center gap-1 text-[10px] font-bold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-lg border border-emerald-100">
                                                Berhasil
                                            </span>
                                        )}
                                        {item.status === "pending" && (
                                            <span class="inline-flex items-center gap-1 text-[10px] font-bold text-amber-600 bg-amber-50 px-2 py-1 rounded-lg border border-amber-100">
                                                Proses
                                            </span>
                                        )}
                                        {item.status === "failed" && (
                                            <span class="inline-flex items-center gap-1 text-[10px] font-bold text-red-600 bg-red-50 px-2 py-1 rounded-lg border border-red-100">
                                                Gagal
                                            </span>
                                        )}
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mobile Cards -->
            <div class="md:hidden space-y-3">
                {
                    ppobHistory.slice(0, 5).map((item) => (
                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                            <div class="flex justify-between items-start mb-3">
                                <div>
                                    <span class="text-[10px] font-bold text-gray-400 mb-1 block">
                                        #{item.id}
                                    </span>
                                    <h4 class="font-bold text-sm text-[#0C1A18]">
                                        {item.product}
                                    </h4>
                                </div>
                                {item.status === "success" && (
                                    <span class="text-[10px] font-bold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-lg border border-emerald-100">
                                        Berhasil
                                    </span>
                                )}
                                {item.status === "pending" && (
                                    <span class="text-[10px] font-bold text-amber-600 bg-amber-50 px-2 py-1 rounded-lg border border-amber-100">
                                        Proses
                                    </span>
                                )}
                                {item.status === "failed" && (
                                    <span class="text-[10px] font-bold text-red-600 bg-red-50 px-2 py-1 rounded-lg border border-red-100">
                                        Gagal
                                    </span>
                                )}
                            </div>
                            <div class="flex justify-between items-center pt-3 border-t border-gray-200/50">
                                <span class="text-xs font-mono text-gray-500 bg-white px-2 py-1 rounded border border-gray-100">
                                    {item.target}
                                </span>
                                <span class="font-black text-sm text-[#0C1A18]">
                                    Rp{" "}
                                    {new Intl.NumberFormat("id-ID").format(
                                        item.price,
                                    )}
                                </span>
                            </div>
                        </div>
                    ))
                }
            </div>

            <!-- Simple Pagination -->
            <div
                class="flex items-center justify-between mt-6 pt-6 border-t border-gray-100"
            >
                <span class="text-xs font-bold text-gray-400">1-5 dari 50</span>
                <div class="flex gap-2">
                    <button
                        disabled
                        class="px-3 py-1.5 rounded-lg border border-gray-200 text-gray-400 font-bold text-xs cursor-not-allowed"
                        >Prev</button
                    >
                    <button
                        class="px-3 py-1.5 rounded-lg bg-[#0C1A18] text-white font-bold text-xs hover:bg-[#152A26] transition-all"
                        >Next</button
                    >
                </div>
            </div>
        </div>
    </div>
</DashboardLayout>
