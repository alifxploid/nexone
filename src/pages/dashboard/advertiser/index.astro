---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import { ChartOverview } from "@/components/shared/ChartOverview";

// Mock Data Stats
const stats = {
    socialBalance: 1500000,
    ppobBalance: 1000000,
    totalDeposit: 15450000,
    activeCampaigns: 12,
    spending: 8750000,
};

// Mock Data History PPOB
const ppobHistory = Array.from({ length: 15 }).map((_, i) => ({
    id: `TRX-${15200 + i}`,
    product: ["Pulsa Telkomsel 10K", "Token PLN 20K", "GoPay 50K", "Dana 100K"][
        Math.floor(Math.random() * 4)
    ],
    target: "0812" + Math.floor(Math.random() * 90000000),
    price: (Math.floor(Math.random() * 10) + 1) * 10000 + 1500,
    date: new Date(
        Date.now() - Math.floor(Math.random() * 1000 * 60 * 60 * 24 * 7),
    ).toLocaleDateString("id-ID", {
        day: "numeric",
        month: "short",
        year: "numeric",
    }),
    status: ["success", "pending", "failed"][
        Math.floor(Math.random() * (i < 3 ? 2 : 3))
    ],
}));
---

<DashboardLayout title="Dashboard Advertiser - Ringkasan">
    <!-- Custom Styles -->
    <style>
        .nav-pill-active {
            background-color: #ff6b6b;
            color: white;
            box-shadow: 0 4px 14px rgba(255, 107, 107, 0.25);
        }
    </style>

    <!-- BEGIN: Hero Section -->
    <section class="mb-4 md:mb-8">
        <h1 class="text-2xl md:text-4xl font-bold text-gray-800 mb-1 md:mb-2">
            Good day, <span class="text-[#ff6b6b]">Advertiser!</span>
        </h1>
        <p class="text-gray-400 font-light text-base md:text-lg">
            Kelola kampanye dan saldo iklan Anda dengan mudah.
        </p>
    </section>
    <!-- END: Hero Section -->

    <!-- BEGIN: Dashboard Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 md:gap-6">
        <!-- Left Column: Financial Stats -->
        <div class="lg:col-span-2 grid grid-cols-2 gap-3 md:gap-6">
            <!-- Card 1: Saldo Iklan -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-between h-auto min-h-[140px] md:h-40"
            >
                <div class="flex justify-between items-start">
                    <h3 class="text-gray-600 font-medium">Saldo Iklan</h3>
                </div>
                <div>
                    <div
                        class="text-xl md:text-3xl font-bold text-gray-800 mb-2 break-all"
                    >
                        Rp {
                            new Intl.NumberFormat("id-ID").format(
                                stats.socialBalance,
                            )
                        }
                    </div>
                    <div
                        class="inline-flex items-center gap-1 bg-blue-50 text-blue-500 px-3 py-1 rounded-full text-xs font-bold"
                    >
                        <i class="fa-solid fa-bullhorn"></i> Social Booster
                    </div>
                </div>
            </div>

            <!-- Card 2: Saldo PPOB -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-between h-auto min-h-[140px] md:h-40"
            >
                <div class="flex justify-between items-start">
                    <h3 class="text-gray-600 font-medium">Saldo PPOB</h3>
                </div>
                <div>
                    <div
                        class="text-xl md:text-3xl font-bold text-gray-800 mb-2 break-all"
                    >
                        Rp {
                            new Intl.NumberFormat("id-ID").format(
                                stats.ppobBalance,
                            )
                        }
                    </div>
                    <div
                        class="inline-flex items-center gap-1 bg-emerald-50 text-emerald-500 px-3 py-1 rounded-full text-xs font-bold"
                    >
                        <i class="fa-solid fa-wallet"></i> Transaksi
                    </div>
                </div>
            </div>

            <!-- Card 3: Total Deposit -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-center h-auto min-h-[140px] md:h-40 relative overflow-hidden"
            >
                <div
                    class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center mb-3"
                >
                    <img
                        src="https://img.icons8.com/?size=100&id=IQcQ5T9wEyFV&format=png&color=000000"
                        alt="Deposit"
                        class="w-6 h-6"
                    />
                </div>
                <h3 class="text-gray-500 text-sm font-medium mb-1">
                    Total Deposit
                </h3>
                <div
                    class="text-xl md:text-3xl font-bold text-gray-800 break-all"
                >
                    Rp {
                        new Intl.NumberFormat("id-ID").format(
                            stats.totalDeposit,
                        )
                    }
                </div>
            </div>

            <!-- Card 4: Total Pengeluaran -->
            <div
                class="soft-card p-4 md:p-6 flex flex-col justify-center h-auto min-h-[140px] md:h-40 relative overflow-hidden"
            >
                <div
                    class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center mb-3"
                >
                    <img
                        src="https://img.icons8.com/?size=100&id=64896&format=png&color=000000"
                        alt="Spending"
                        class="w-6 h-6"
                    />
                </div>
                <h3 class="text-gray-500 text-sm font-medium mb-1">
                    Total Pengeluaran
                </h3>
                <div
                    class="text-xl md:text-3xl font-bold text-gray-800 break-all"
                >
                    Rp {new Intl.NumberFormat("id-ID").format(stats.spending)}
                </div>
            </div>
        </div>

        <!-- Right Column: Quick Actions -->
        <div class="soft-card p-4 lg:col-span-1 h-fit self-start">
            <div class="flex justify-between items-center mb-4">
                <div>
                    <h3 class="text-base font-bold text-gray-800">
                        Quick Action Center
                    </h3>
                    <p
                        class="text-[10px] text-gray-400 uppercase tracking-widest mt-0.5"
                    >
                        Frequently Used
                    </p>
                </div>
                <i class="fa-solid fa-bolt text-[#4d96ff] text-sm"></i>
            </div>
            <div class="grid grid-cols-2 gap-2">
                <!-- Button 1: Deposit -->
                <a
                    href="/dashboard/advertiser/deposit"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-red-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-red-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=IQcQ5T9wEyFV&format=png&color=000000"
                            class="w-8 h-8"
                            alt="Deposit"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >Deposit</span
                    >
                </a>
                <!-- Button 2: Campaign -->
                <a
                    href="/dashboard/advertiser/campaign"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-blue-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-blue-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=67414&format=png&color=000000"
                            class="w-8 h-8"
                            alt="Campaign"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >Campaign</span
                    >
                </a>
                <!-- Button 3: PPOB -->
                <a
                    href="/dashboard/advertiser/ppob"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-emerald-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-emerald-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=46576&format=png&color=000000"
                            class="w-8 h-8"
                            alt="PPOB"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >PPOB</span
                    >
                </a>
                <!-- Button 4: Referral -->
                <a
                    href="/dashboard/advertiser/referral"
                    class="flex flex-col items-center justify-center p-3 rounded-xl bg-gray-50 hover:bg-purple-50 transition-colors group"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-purple-100 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                    >
                        <img
                            src="https://img.icons8.com/?size=100&id=dQr0GlAlElvz&format=png&color=000000"
                            class="w-8 h-8"
                            alt="Referral"
                        />
                    </div>
                    <span
                        class="text-sm font-semibold text-gray-800 text-center leading-tight"
                        >Referral</span
                    >
                </a>
            </div>
        </div>
    </div>
    <!-- END: Dashboard Grid -->

    <!-- BEGIN: Chart Section -->
    <div class="mt-4 md:mt-8">
        <div class="soft-card p-4 md:p-6">
            <ChartOverview client:load />
        </div>
    </div>
    <!-- END: Chart Section -->

    <!-- BEGIN: Activity Table -->
    <div class="soft-card p-4 md:p-6 mt-4 md:mt-8" id="history-section">
        <div
            class="flex flex-wrap justify-between items-center mb-4 md:mb-6 gap-4"
        >
            <h3 class="text-lg md:text-xl font-bold text-gray-800">
                Riwayat Aktivitas PPOB
            </h3>
        </div>

        <!-- PPOB Table -->
        <div class="overflow-x-auto">
            <table class="w-full min-w-[600px] text-left border-collapse">
                <thead>
                    <tr
                        class="text-[10px] text-gray-400 uppercase tracking-wider border-b border-gray-100"
                    >
                        <th class="pb-3 font-medium">ID Transaksi</th>
                        <th class="pb-3 font-medium">Produk</th>
                        <th class="pb-3 font-medium">Tujuan</th>
                        <th class="pb-3 font-medium text-right">Harga</th>
                        <th class="pb-3 font-medium text-right">Status</th>
                    </tr>
                </thead>
                <tbody class="text-sm">
                    {
                        ppobHistory.slice(0, 5).map((item) => (
                            <tr class="group hover:bg-gray-50 transition-colors">
                                <td class="py-4 font-semibold text-gray-800">
                                    #{item.id}
                                </td>
                                <td class="py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-full bg-blue-50 text-[#4d96ff] flex items-center justify-center text-xs">
                                            <i class="fa-solid fa-receipt" />
                                        </div>
                                        <div>
                                            <div class="font-bold text-gray-800">
                                                {item.product}
                                            </div>
                                            <div class="text-[10px] text-gray-400">
                                                {item.date}
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-4 font-mono text-xs text-gray-500">
                                    {item.target}
                                </td>
                                <td class="py-4 text-right font-bold text-gray-800">
                                    Rp{" "}
                                    {new Intl.NumberFormat("id-ID").format(
                                        item.price,
                                    )}
                                </td>
                                <td class="py-4 text-right">
                                    {item.status === "success" && (
                                        <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-emerald-50 text-emerald-500">
                                            <span class="inline-block w-1.5 h-1.5 bg-emerald-500 rounded-full mr-1" />{" "}
                                            SUKSES
                                        </span>
                                    )}
                                    {item.status === "pending" && (
                                        <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-amber-50 text-amber-500">
                                            <span class="inline-block w-1.5 h-1.5 bg-amber-500 rounded-full mr-1" />{" "}
                                            PROSES
                                        </span>
                                    )}
                                    {item.status === "failed" && (
                                        <span class="px-3 py-1 rounded-full text-[10px] font-bold bg-red-50 text-[#ff6b6b]">
                                            <span class="inline-block w-1.5 h-1.5 bg-[#ff6b6b] rounded-full mr-1" />{" "}
                                            GAGAL
                                        </span>
                                    )}
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div
            class="flex items-center justify-between mt-6 pt-6 border-t border-gray-100"
        >
            <span class="text-xs font-bold text-gray-400">1-5 dari 50</span>
            <div class="flex gap-2">
                <button
                    disabled
                    class="px-3 py-1.5 rounded-lg border border-gray-200 text-gray-400 font-bold text-xs cursor-not-allowed"
                    >Prev</button
                >
                <button
                    class="px-3 py-1.5 rounded-lg bg-[#ff6b6b] text-white font-bold text-xs hover:bg-[#e55a5a] transition-all shadow-sm"
                    >Next</button
                >
            </div>
        </div>
    </div>
    <!-- END: Activity Table -->
</DashboardLayout>
