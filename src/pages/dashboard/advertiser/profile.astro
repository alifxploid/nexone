---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";

// Mock User Data
const user = {
    name: "James Passaquindici",
    email: "jamespass@emi.com",
    username: "james_cuan",
    phone: "081234567890",
    whatsapp: "081234567890",
    instagram: "james_cuan",
    threads: "james_cuan",
    twitter: "james_cuan",
    tiktok: "james_cuan",
    facebook: "James Passaquindici",
    shopee: "james_shop",
    tokopedia: "james_store",
    bankName: "BCA",
    bankAccount: "1234567890",
    bankHolder: "JAMES PASSAQUINDICI",
    ewalletType: "DANA",
    ewalletNumber: "081234567890",
    role: "Publisher",
    joinDate: "12 Jan 2026",
    balance: 2500000,
    avatar: "https://api.dicebear.com/7.x/avataaars/svg?seed=Felix",
};
---

<DashboardLayout title="Profile Saya">
    <!-- Header Section (Light Theme) -->
    <div class="mb-8">
        <h1 class="text-xl font-bold text-gray-800 tracking-tight">
            Profile Saya
        </h1>
        <p class="text-gray-500 mt-1 text-xs">
            Kelola informasi pribadi dan keamanan akun Anda.
        </p>
    </div>

    <!-- Main Content Container -->
    <div
        class="w-full max-w-7xl mx-auto flex flex-col lg:flex-row gap-8 items-start"
    >
        <!-- Left Column: Profile Card -->
        <div class="w-full lg:w-[350px] shrink-0 space-y-6 lg:sticky lg:top-8">
            <div
                class="soft-card p-8 border border-gray-100 relative overflow-hidden text-center"
            >
                <div class="relative w-32 h-32 mx-auto mb-6">
                    <div
                        class="w-full h-full rounded-full bg-gradient-to-br from-[#ff6b6b] to-[#ff5252] flex items-center justify-center overflow-hidden border-4 border-white shadow-lg shadow-red-200"
                    >
                        <img
                            src={user.avatar}
                            alt="User Avatar"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <!-- Edit Avatar Button -->
                    <button
                        class="absolute bottom-0 right-0 w-8 h-8 bg-[#ff6b6b] rounded-full border-2 border-white flex items-center justify-center text-white hover:scale-110 transition-transform shadow-md"
                        title="Ganti Foto"
                    >
                        <i class="fa-solid fa-camera text-xs"></i>
                    </button>
                </div>

                <h2 class="text-xl font-bold text-gray-800 mb-1">
                    {user.name}
                </h2>
                <div class="flex items-center justify-center gap-2 mb-4">
                    <span
                        class="px-3 py-1 bg-[#ff6b6b] text-white text-xs font-bold rounded-full shadow-sm"
                    >
                        <i class="fa-solid fa-star mr-1"></i>
                        {user.role}
                    </span>
                </div>
                <p class="text-xs text-gray-400 font-medium">
                    <i class="fa-regular fa-calendar mr-1"></i> Member sejak {
                        user.joinDate
                    }
                </p>
            </div>

            <!-- Stats Mini (Light Theme) -->
            <div
                class="soft-card p-6 border border-gray-100 relative overflow-hidden"
            >
                <div
                    class="absolute top-0 right-0 w-24 h-24 bg-[#ff6b6b]/10 rounded-full blur-xl -translate-y-1/2 translate-x-1/2"
                >
                </div>
                <p
                    class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1"
                >
                    <i class="fa-solid fa-wallet mr-1"></i> Total Saldo
                </p>
                <h3 class="text-2xl font-black text-gray-800 tracking-tight">
                    Rp {new Intl.NumberFormat("id-ID").format(user.balance)}
                </h3>
                <a
                    href="/dashboard/advertiser/deposit"
                    class="mt-4 w-full py-2.5 bg-[#ff6b6b] hover:bg-[#ff5252] text-white text-sm font-bold rounded-xl flex items-center justify-center gap-2 transition-all active:scale-95 shadow-lg shadow-red-200"
                >
                    <i class="fa-solid fa-plus"></i>
                    Topup Saldo
                </a>
            </div>
        </div>

        <!-- Right Column: Edit Form -->
        <div class="flex-1 min-w-0 w-full">
            <form class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Card 1: Personal Info -->
                <div class="soft-card p-6 border border-gray-100">
                    <div class="flex items-center justify-between mb-8">
                        <h3 class="text-lg font-bold text-gray-800">
                            <i class="fa-solid fa-user-pen mr-2 text-[#ff6b6b]"
                            ></i>
                            Edit Informasi
                        </h3>
                        <button
                            type="button"
                            class="text-sm font-bold text-[#ff6b6b] hover:text-[#ff5252] transition-colors"
                        >
                            <i class="fa-solid fa-key mr-1"></i> Ganti Password?
                        </button>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Full Name -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Nama Lengkap</label
                            >
                            <input
                                type="text"
                                value={user.name}
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- Username -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Username</label
                            >
                            <div class="relative">
                                <span
                                    class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 font-bold"
                                    >@</span
                                >
                                <input
                                    type="text"
                                    value={user.username}
                                    class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                                />
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Email Address</label
                            >
                            <input
                                type="email"
                                value={user.email}
                                disabled
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-100 text-gray-500 font-medium cursor-not-allowed text-sm"
                            />
                            <p class="text-[10px] text-gray-400 italic">
                                <i class="fa-solid fa-lock mr-1"></i> Email tidak
                                dapat diubah
                            </p>
                        </div>

                        <!-- Phone -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Nomor HP</label
                            >
                            <input
                                type="tel"
                                value={user.phone}
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- WhatsApp -->
                        <div class="space-y-2 md:col-span-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                ><i
                                    class="fa-brands fa-whatsapp mr-1 text-green-500"
                                ></i> Nomor WhatsApp (Aktif)</label
                            >
                            <input
                                type="tel"
                                value={user.whatsapp}
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                            <p class="text-[11px] text-gray-400">
                                Pastikan nomor WhatsApp aktif untuk menerima
                                notifikasi transaksi dan misi.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Card 2: Social Media Info -->
                <div class="soft-card p-6 border border-gray-100">
                    <div class="mb-8">
                        <h3 class="text-lg font-bold text-gray-800">
                            <i
                                class="fa-solid fa-share-nodes mr-2 text-[#ff6b6b]"
                            ></i>
                            Social Media Link
                        </h3>
                        <p class="text-xs text-gray-400 mt-1">
                            Tautkan akun sosial media Anda untuk verifikasi
                            misi.
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Instagram -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1"
                                ><i class="fa-brands fa-instagram text-pink-500"
                                ></i> Instagram</label
                            >
                            <input
                                type="text"
                                value={user.instagram}
                                placeholder="Username tanpa @"
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- Threads -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1"
                                ><i class="fa-brands fa-threads text-gray-800"
                                ></i> Threads</label
                            >
                            <input
                                type="text"
                                value={user.threads}
                                placeholder="Username tanpa @"
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- X / Twitter -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1"
                                ><i class="fa-brands fa-x-twitter text-gray-800"
                                ></i> X / Twitter</label
                            >
                            <input
                                type="text"
                                value={user.twitter}
                                placeholder="Username tanpa @"
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- TikTok -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1"
                                ><i class="fa-brands fa-tiktok text-gray-800"
                                ></i> TikTok</label
                            >
                            <input
                                type="text"
                                value={user.tiktok}
                                placeholder="Username tanpa @"
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- Facebook -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1"
                                ><i class="fa-brands fa-facebook text-blue-600"
                                ></i> Facebook</label
                            >
                            <input
                                type="text"
                                value={user.facebook}
                                placeholder="Username / Link profil"
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- Shopee Video -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1"
                                ><i
                                    class="fa-solid fa-bag-shopping text-orange-500"
                                ></i> Shopee Video</label
                            >
                            <input
                                type="text"
                                value={user.shopee}
                                placeholder="Username Shopee"
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- Tokopedia -->
                        <div class="space-y-2 md:col-span-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1"
                                ><i class="fa-solid fa-shop text-green-600"></i> Tokopedia</label
                            >
                            <input
                                type="text"
                                value={user.tokopedia}
                                placeholder="Username Tokopedia"
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>
                    </div>
                </div>

                <!-- Card 3: Payment Info -->
                <div class="soft-card p-6 border border-gray-100 md:col-span-2">
                    <div class="mb-8">
                        <h3 class="text-lg font-bold text-gray-800">
                            <i
                                class="fa-solid fa-credit-card mr-2 text-[#ff6b6b]"
                            ></i>
                            Rekening & E-Wallet
                        </h3>
                        <p class="text-xs text-gray-400 mt-1">
                            Informasi untuk pencairan dana (Withdraw). Pastikan
                            data valid.
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Bank Name -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                ><i class="fa-solid fa-building-columns mr-1"
                                ></i> Nama Bank</label
                            >
                            <select
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium text-sm"
                            >
                                <option
                                    value="BCA"
                                    selected={user.bankName === "BCA"}
                                    >BCA</option
                                >
                                <option
                                    value="MANDIRI"
                                    selected={user.bankName === "MANDIRI"}
                                    >Mandiri</option
                                >
                                <option
                                    value="BRI"
                                    selected={user.bankName === "BRI"}
                                    >BRI</option
                                >
                                <option
                                    value="BNI"
                                    selected={user.bankName === "BNI"}
                                    >BNI</option
                                >
                                <option
                                    value="JAGO"
                                    selected={user.bankName === "JAGO"}
                                    >Jago</option
                                >
                                <option
                                    value="SEABANK"
                                    selected={user.bankName === "SEABANK"}
                                    >SeaBank</option
                                >
                            </select>
                        </div>

                        <!-- Account Number -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Nomor Rekening</label
                            >
                            <input
                                type="text"
                                value={user.bankAccount}
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>

                        <!-- Account Holder -->
                        <div class="space-y-2 md:col-span-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Atas Nama Rekening</label
                            >
                            <input
                                type="text"
                                value={user.bankHolder}
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 uppercase"
                            />
                            <p class="text-[11px] text-gray-400">
                                <i class="fa-solid fa-id-card mr-1"></i> Harus sesuai
                                dengan KTP pemilik akun.
                            </p>
                        </div>

                        <div
                            class="md:col-span-2 border-t-2 border-dashed border-gray-200 my-4"
                        >
                        </div>

                        <!-- E-Wallet Type -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                ><i class="fa-solid fa-wallet mr-1"></i> E-Wallet
                                Utama</label
                            >
                            <select
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium text-sm"
                            >
                                <option
                                    value="DANA"
                                    selected={user.ewalletType === "DANA"}
                                    >DANA</option
                                >
                                <option
                                    value="OVO"
                                    selected={user.ewalletType === "OVO"}
                                    >OVO</option
                                >
                                <option
                                    value="GOPAY"
                                    selected={user.ewalletType === "GOPAY"}
                                    >GoPay</option
                                >
                                <option
                                    value="SHOPEEPAY"
                                    selected={user.ewalletType === "SHOPEEPAY"}
                                    >ShopeePay</option
                                >
                            </select>
                        </div>

                        <!-- E-Wallet Number -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-wider"
                                >Nomor E-Wallet</label
                            >
                            <input
                                type="tel"
                                value={user.ewalletNumber}
                                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-[#ff6b6b] focus:ring-2 focus:ring-[#ff6b6b]/20 transition-colors bg-gray-50 text-gray-800 font-medium placeholder-gray-400 text-sm"
                            />
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div
                        class="pt-6 flex items-center gap-4 border-t border-gray-100 mt-6"
                    >
                        <button
                            type="submit"
                            class="px-8 py-3.5 bg-[#ff6b6b] text-white font-bold rounded-xl shadow-lg shadow-red-200 hover:bg-[#ff5252] transition-all hover:-translate-y-1 active:scale-95 text-sm"
                        >
                            <i class="fa-solid fa-floppy-disk mr-2"></i>
                            Simpan Perubahan
                        </button>
                        <button
                            type="button"
                            class="px-8 py-3.5 rounded-xl border border-gray-200 font-bold text-gray-600 hover:bg-gray-50 transition-colors text-sm"
                        >
                            Batal
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</DashboardLayout>
