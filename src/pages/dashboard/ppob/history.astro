    { id: "TRX-882901", service: "E-Money", provider: "GoPay", number: "0812-9988-7766", price: 150000, date: "28 Jan 2026, 09:30", status: "success", icon: "M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" },
