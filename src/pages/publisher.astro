---
/**
 * Publisher Page
 * Cara Kerja for Publishers - Social Task Workers, Link Monetization, PPOB Business
 * @version Astro 5.17 compatible
 */
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/landing/Navbar.astro";
import Footer from "../components/landing/Footer.astro";
import CTA from "../components/landing/CallToAction.astro";

interface Feature {
    icon: string;
    title: string;
    description: string;
}

interface Step {
    number: number;
    title: string;
    description: string;
}

const features: Feature[] = [
    {
        icon: "fa-solid fa-thumbs-up",
        title: "Social Task Worker",
        description:
            "Cuan dari jempolmu! Dapatkan bayaran dari setiap Like, Komen, Share, Subscribe, atau Rating Google Maps yang kamu kerjakan sesuai order Advertiser.",
    },
    {
        icon: "fa-solid fa-link",
        title: "Link Monetization",
        description:
            "Ubah link biasa jadi sumber cuan! Pasang link di bio sosmed, share ke grup, dan dapatkan komisi dari setiap klik. Passive income tanpa ribet.",
    },
    {
        icon: "fa-solid fa-mobile-screen-button",
        title: "Bisnis & Pakai PPOB",
        description:
            "Gunakan saldo hasil kerjamu untuk topup pulsa, data, atau token PLN sendiri. Atau jual lagi ke orang lain untuk profit tambahan.",
    },
];

const steps: Step[] = [
    {
        number: 1,
        title: "Daftar Akun",
        description:
            'Pilih tipe akun "Publisher" saat pendaftaran. Gratis 100%.',
    },
    {
        number: 2,
        title: "Pilih Projek",
        description:
            "Ambil misi Like/Komen, monetisasi link, atau buka toko PPOB.",
    },
    {
        number: 3,
        title: "Tarik Saldo",
        description:
            "Kumpulkan profit dan tarik ke rekening bank atau E-Wallet kapanpun.",
    },
];
---

<Layout title="Publisher - NexOne">
    <Navbar />
    <main>
        <!-- Publisher Hero -->
        <section
            class="pt-28 pb-16 md:pt-36 md:pb-24 lg:pt-44 lg:pb-32 overflow-hidden relative"
        >
            <div
                class="absolute inset-0 -z-10 h-full w-full bg-[#FAFAFA] bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:40px_40px]"
            >
            </div>

            <div
                class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10"
            >
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white shadow-sm border border-gray-100 text-gray-800 text-[10px] md:text-xs font-bold uppercase tracking-widest mb-8 md:mb-10 hover:shadow-md transition-shadow cursor-default select-none"
                >
                    <span
                        class="w-2 h-2 rounded-full bg-[#f97316] animate-pulse"
                    ></span>
                    Untuk Content Creator & Bisnis PPOB
                </div>

                <h1
                    class="text-4xl sm:text-5xl md:text-7xl font-bold text-[#0f172a] tracking-tight mb-6 md:mb-8 max-w-5xl mx-auto leading-[1.15] md:leading-[1.1]"
                >
                    Ubah Traffic & Skill Jadi <br class="hidden md:block" />
                    <span class="relative inline-block">
                        <span class="text-[#0f172a]">Sumber Penghasilan</span>
                        <span
                            class="absolute w-full h-3 md:h-4 -bottom-1 left-0 bg-gradient-to-r from-[#f97316] to-[#fb923c] rounded-full opacity-30 -z-10"
                        ></span>
                    </span>
                </h1>

                <p
                    class="text-base sm:text-lg md:text-xl text-gray-500 mb-8 md:mb-12 max-w-2xl mx-auto leading-relaxed font-medium px-4"
                >
                    Gabung sebagai Publisher di NexOne. Kerjakan misi sosial
                    media (Like, Komen, Share), monetisasi link, atau bisnis
                    PPOB. Cuan mengalir dari aktivitas harianmu!
                </p>

                <div
                    class="flex flex-col sm:flex-row gap-4 sm:gap-5 justify-center items-center w-full sm:w-auto px-4 sm:px-0"
                >
                    <a
                        href="/auth/register?role=publisher"
                        class="w-full sm:w-auto px-8 py-4 md:px-10 md:py-5 bg-[#0f172a] text-white rounded-2xl font-bold text-base md:text-lg hover:bg-[#1e293b] transition-all shadow-xl hover:shadow-2xl hover:-translate-y-1 active:scale-[0.98]"
                    >
                        <i class="fa-solid fa-user-plus mr-2"></i> Daftar Jadi Publisher
                    </a>
                </div>
            </div>
        </section>

        <!-- Publisher Features -->
        <section class="py-16 md:py-24 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        features.map((feature) => (
                            <div class="bg-gradient-to-br from-orange-50 to-amber-50 rounded-[2rem] p-8 hover:shadow-lg transition-all group">
                                <div class="w-14 h-14 bg-white rounded-2xl flex items-center justify-center mb-6 shadow-sm group-hover:scale-110 transition-transform">
                                    <i
                                        class={`${feature.icon} text-[#f97316] text-2xl`}
                                    />
                                </div>
                                <h3 class="text-2xl font-bold text-[#0f172a] mb-3">
                                    {feature.title}
                                </h3>
                                <p class="text-gray-600 leading-relaxed">
                                    {feature.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Publisher Steps -->
        <section class="py-20 bg-white border-t border-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-[#0f172a] mb-4 tracking-tight"
                    >
                        Cara Mulai Cuan
                    </h2>
                    <p class="text-xl text-gray-500 max-w-2xl mx-auto">
                        Tiga langkah simpel buat mulai penghasilan tambahanmu.
                    </p>
                </div>

                <div class="relative grid grid-cols-1 md:grid-cols-3 gap-12">
                    <div
                        class="hidden md:block absolute top-[2.25rem] left-[16%] right-[16%] h-0.5 bg-gradient-to-r from-orange-200 via-orange-300 to-orange-200 z-0"
                    >
                    </div>

                    {
                        steps.map((step) => (
                            <div class="relative z-10 flex flex-col items-center text-center group">
                                <div class="w-18 h-18 bg-white border-4 border-gray-50 rounded-full flex items-center justify-center mb-6 shadow-sm group-hover:border-orange-50 transition-colors duration-300">
                                    <div class="w-14 h-14 bg-gradient-to-br from-[#f97316] to-[#ea580c] rounded-full flex items-center justify-center text-white font-bold text-xl shadow-lg">
                                        {step.number}
                                    </div>
                                </div>
                                <h3 class="text-xl font-bold text-[#0f172a] mb-3">
                                    {step.title}
                                </h3>
                                <p class="text-gray-500 leading-relaxed">
                                    {step.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <CTA />
    </main>
    <Footer />
</Layout>
