---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Login Admin - NexOne">
    <div class="min-h-screen flex font-sans">
        <!-- Left Column: Form Section -->
        <div
            class="w-full lg:w-1/2 flex flex-col justify-center items-center p-6 lg:p-12 bg-gray-50 relative"
        >
            <!-- Card Container -->
            <div
                class="w-full max-w-[550px] bg-white p-8 md:p-10 rounded-[2rem] shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1)] border border-gray-100 transition-all hover:shadow-[0_25px_50px_-12px_rgba(15,57,46,0.1)]"
            >
                <!-- Logo inside card for cohesion -->
                <div class="mb-8 flex justify-center">
                    <a href="/" class="flex items-center gap-2 group">
                        <div
                            class="w-10 h-10 bg-[#0F392E] rounded-xl flex items-center justify-center text-[#D4F24F] font-bold text-xl group-hover:scale-110 transition-transform shadow-lg shadow-[#0F392E]/20"
                        >
                            N
                        </div>
                        <span
                            class="text-2xl font-bold text-[#0F1F1C] tracking-tight"
                            >NexOne</span
                        >
                    </a>
                </div>

                <div class="text-center mb-8">
                    <h1
                        class="text-2xl font-bold text-[#0F1F1C] mb-2 tracking-tight"
                    >
                        Welcome Admin
                    </h1>
                    <p class="text-gray-500 text-sm">
                        Masukan detail akun administrator untuk melanjutkan.
                    </p>
                </div>

                <form class="space-y-4" onsubmit="handleLogin(event)">
                    <!-- Username Input -->
                    <div class="space-y-1.5 text-left">
                        <label
                            for="username"
                            class="text-xs font-bold text-[#0F1F1C] ml-1"
                            >Username</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                    ></path></svg
                                >
                            </div>
                            <input
                                type="text"
                                id="username"
                                name="username"
                                placeholder="Username Admin"
                                class="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-100 rounded-xl text-gray-900 placeholder-gray-400 text-sm focus:outline-none focus:ring-2 focus:ring-[#0F392E]/20 focus:border-[#0F392E] transition-all font-medium"
                                required
                            />
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div class="space-y-1.5 text-left">
                        <label
                            for="password"
                            class="text-xs font-bold text-[#0F1F1C] ml-1"
                            >Password</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                    ></path></svg
                                >
                            </div>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                placeholder="••••••••"
                                class="w-full pl-12 pr-12 py-3 bg-gray-50 border border-gray-100 rounded-xl text-gray-900 placeholder-gray-400 text-sm focus:outline-none focus:ring-2 focus:ring-[#0F392E]/20 focus:border-[#0F392E] transition-all font-medium"
                                required
                            />
                            <!-- Visibility Toggle -->
                            <button
                                type="button"
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none transition-colors"
                                onclick="togglePassword('password', this)"
                            >
                                <svg
                                    class="w-5 h-5 eye-open"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    ></path></svg
                                >
                                <svg
                                    class="w-5 h-5 eye-closed hidden"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"
                                    ></path></svg
                                >
                            </button>
                        </div>
                    </div>

                    <!-- Action Button -->
                    <button
                        type="submit"
                        class="w-full py-3.5 bg-[#0F392E] text-white rounded-xl font-bold text-base hover:bg-[#164e3f] transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5 active:scale-[0.98] mt-2 group-hover:shadow-[#0F392E]/20"
                    >
                        Masuk Dashboard
                    </button>
                </form>

                <div class="text-center mt-6">
                    <a
                        href="/auth/forgot-password"
                        class="inline-block text-xs font-semibold text-gray-400 hover:text-[#0F392E] transition-colors"
                        >Lupa Password Admin?</a
                    >
                </div>
            </div>
        </div>

        <!-- Right Column: Visual Branding -->
        <div
            class="hidden lg:block w-1/2 relative overflow-hidden bg-[#0F392E]"
        >
            <div
                class="absolute inset-0 w-full h-full bg-gradient-to-br from-[#0F392E] via-[#0b2b23] to-[#051410]"
            >
            </div>
            <div
                class="absolute -top-[20%] -right-[20%] w-[80%] h-[80%] bg-[#D4F24F] rounded-full blur-[120px] opacity-10 animate-float-slow"
            >
            </div>
            <div
                class="absolute top-[40%] -left-[20%] w-[60%] h-[60%] bg-[#1a5f4c] rounded-full blur-[100px] opacity-40 animate-float-delayed"
            >
            </div>

            <div
                class="relative z-10 h-full flex flex-col justify-center px-16 text-white"
            >
                <div class="mb-8 inline-flex">
                    <div class="w-12 h-1 bg-[#D4F24F] rounded-full"></div>
                </div>
                <h2
                    class="text-4xl xl:text-5xl font-bold leading-tight mb-6 tracking-tight"
                >
                    Administrator <br />
                    <span class="text-[#D4F24F]">Control Center</span>
                </h2>
                <p
                    class="text-emerald-100 text-lg xl:text-xl leading-relaxed max-w-lg"
                >
                    Kelola seluruh ekosistem NexOne dari satu dashboard pusat
                    yang terintegrasi.
                </p>
            </div>
        </div>
    </div>

    <!-- Script for toggle & login mock -->
    <script is:inline>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const eyeOpen = button.querySelector(".eye-open");
            const eyeClosed = button.querySelector(".eye-closed");
            if (input.type === "password") {
                input.type = "text";
                eyeOpen.classList.add("hidden");
                eyeClosed.classList.remove("hidden");
            } else {
                input.type = "password";
                eyeOpen.classList.remove("hidden");
                eyeClosed.classList.add("hidden");
            }
        }

        function handleLogin(e) {
            e.preventDefault();
            // Mock login - redirect to admin dashboard
            window.location.href = "/admin";
        }
    </script>
</Layout>
