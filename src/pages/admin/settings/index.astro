---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import GeneralSettings from "../../../components/admin/settings/GeneralSettings.astro";
import PaymentSettings from "../../../components/admin/settings/PaymentSettings.astro";
import PPOBSettings from "../../../components/admin/settings/PPOBSettings.astro";
import LegalSettings from "../../../components/admin/settings/LegalSettings.astro";
import FinancialSettings from "../../../components/admin/settings/FinancialSettings.astro";
import SecuritySettings from "../../../components/admin/settings/SecuritySettings.astro";
---

<AdminLayout title="System Settings - NexOne Admin">
    <div
        class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4"
    >
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">
                System Settings
            </h1>
            <p class="text-gray-400 text-sm mt-1">
                Konfigurasi utama sistem dan aplikasi NexOne.
            </p>
        </div>
        <button
            class="px-6 py-2.5 bg-[#D4F24F] text-[#0C1A18] rounded-xl text-sm font-bold hover:bg-[#c3e33b] transition-colors shadow-lg hover:-translate-y-0.5 active:scale-95 flex items-center gap-2"
        >
            <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
            >
            Simpan Perubahan
        </button>
    </div>

    <div class="space-y-8">
        <GeneralSettings />
        <PaymentSettings />
        <PPOBSettings />
        <LegalSettings />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <FinancialSettings />
            <SecuritySettings />
        </div>
    </div>
</AdminLayout>
