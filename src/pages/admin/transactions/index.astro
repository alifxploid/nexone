---
import AdminLayout from "../../../layouts/AdminLayout.astro";

// Mock Transactions Data
const transactions = Array.from({ length: 20 }).map((_, i) => {
    const types = ["Deposit", "Withdraw", "PPOB", "Social Booster", "Clipper"];
    const statuses = ["Success", "Pending", "Failed"];
    const type = types[Math.floor(Math.random() * types.length)];
    const status = statuses[Math.floor(Math.random() * (i < 3 ? 2 : 3))]; // More success/pending

    return {
        id: `TRX-${24000 + i}`,
        user: [
            "Budi Santoso",
            "Siti Aminah",
            "Eko Prasetyo",
            "Dewi Cahyani",
            "Rizky",
        ][i % 5],
        userId: `USER-${1000 + (i % 5)}`,
        type: type,
        detail:
            type === "PPOB"
                ? "Pulsa 10K"
                : type === "Social Booster"
                  ? "1000 Followers"
                  : "-",
        amount:
            (Math.floor(Math.random() * 50) + 1) * 10000 +
            (Math.random() > 0.5 ? 500 : 0),
        date: new Date(
            Date.now() - Math.floor(Math.random() * 1000 * 60 * 60 * 24 * 7),
        ).toLocaleString("id-ID", {
            day: "numeric",
            month: "short",
            year: "numeric",
            hour: "2-digit",
            minute: "2-digit",
        }),
        status: status,
    };
});

// Mock Stats Data
const transactionStats = {
    success: { count: 15234, total: 452500000 },
    pending: { count: 45, total: 1250000 },
    failed: { count: 12, total: 500000 },
};
---

<AdminLayout title="Kelola Transaksi - Admin Dashboard">
    <!-- Header -->
    <div
        class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4"
    >
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">
                Data Transaksi
            </h1>
            <p class="text-gray-400 text-sm mt-1">
                Pantau seluruh arus transaksi keuangan dalam sistem.
            </p>
        </div>
    </div>

    <!-- Transaction Stats Cards -->
    <div class="mb-8">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-white font-bold text-sm">Ringkasan Transaksi</h3>
            <select
                class="bg-[#142925] border border-[#1F3D36] text-gray-300 text-xs rounded-lg px-3 py-1.5 outline-none focus:border-[#D4F24F] cursor-pointer"
            >
                <option>Hari Ini</option>
                <option>7 Hari Terakhir</option>
                <option>Bulan Ini</option>
                <option>Tahun Ini</option>
                <option>Semua Waktu</option>
            </select>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Success Card -->
            <div
                class="bg-[#142925] border border-[#1F3D36] rounded-[1.5rem] p-5 relative overflow-hidden group hover:border-[#D4F24F] transition-all"
            >
                <div
                    class="absolute top-0 right-0 w-20 h-20 bg-emerald-500 rounded-full blur-[50px] opacity-10 group-hover:opacity-20 transition-opacity"
                >
                </div>
                <div class="flex items-center justify-between mb-3">
                    <div
                        class="bg-emerald-500/10 p-2 rounded-xl text-emerald-400"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path></svg
                        >
                    </div>
                    <span
                        class="text-xs font-bold text-emerald-400 bg-emerald-500/10 px-2 py-1 rounded-lg"
                        >Success</span
                    >
                </div>
                <div>
                    <p
                        class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1"
                    >
                        Total Sukses
                    </p>
                    <h3 class="text-2xl font-black text-white">
                        {transactionStats.success.count.toLocaleString("id-ID")}
                        <span class="text-sm font-normal text-gray-500"
                            >Trx</span
                        >
                    </h3>
                    <p class="text-emerald-400 font-bold text-sm mt-1">
                        Rp {
                            new Intl.NumberFormat("id-ID").format(
                                transactionStats.success.total,
                            )
                        }
                    </p>
                </div>
            </div>

            <!-- Pending Card -->
            <div
                class="bg-[#142925] border border-[#1F3D36] rounded-[1.5rem] p-5 relative overflow-hidden group hover:border-amber-400 transition-all"
            >
                <div
                    class="absolute top-0 right-0 w-20 h-20 bg-amber-500 rounded-full blur-[50px] opacity-10 group-hover:opacity-20 transition-opacity"
                >
                </div>
                <div class="flex items-center justify-between mb-3">
                    <div class="bg-amber-500/10 p-2 rounded-xl text-amber-400">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path></svg
                        >
                    </div>
                    <span
                        class="text-xs font-bold text-amber-400 bg-amber-500/10 px-2 py-1 rounded-lg"
                        >Pending</span
                    >
                </div>
                <div>
                    <p
                        class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1"
                    >
                        Total Pending
                    </p>
                    <h3 class="text-2xl font-black text-white">
                        {transactionStats.pending.count}
                        <span class="text-sm font-normal text-gray-500"
                            >Trx</span
                        >
                    </h3>
                    <p class="text-amber-400 font-bold text-sm mt-1">
                        Rp {
                            new Intl.NumberFormat("id-ID").format(
                                transactionStats.pending.total,
                            )
                        }
                    </p>
                </div>
            </div>

            <!-- Failed Card -->
            <div
                class="bg-[#142925] border border-[#1F3D36] rounded-[1.5rem] p-5 relative overflow-hidden group hover:border-red-500 transition-all"
            >
                <div
                    class="absolute top-0 right-0 w-20 h-20 bg-red-500 rounded-full blur-[50px] opacity-10 group-hover:opacity-20 transition-opacity"
                >
                </div>
                <div class="flex items-center justify-between mb-3">
                    <div class="bg-red-500/10 p-2 rounded-xl text-red-400">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path></svg
                        >
                    </div>
                    <span
                        class="text-xs font-bold text-red-400 bg-red-500/10 px-2 py-1 rounded-lg"
                        >Failed</span
                    >
                </div>
                <div>
                    <p
                        class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1"
                    >
                        Total Gagal
                    </p>
                    <h3 class="text-2xl font-black text-white">
                        {transactionStats.failed.count}
                        <span class="text-sm font-normal text-gray-500"
                            >Trx</span
                        >
                    </h3>
                    <p class="text-red-400 font-bold text-sm mt-1">
                        Rp {
                            new Intl.NumberFormat("id-ID").format(
                                transactionStats.failed.total,
                            )
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search -->
    <div
        class="bg-[#142925] rounded-[2rem] p-6 border border-[#1F3D36] mb-8 shadow-sm"
    >
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search -->
            <div class="md:col-span-2 relative">
                <div
                    class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                        ></path></svg
                    >
                </div>
                <input
                    type="text"
                    placeholder="Cari TRX ID atau Nama User..."
                    class="w-full pl-12 pr-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white placeholder-gray-500 text-sm focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all"
                />
            </div>

            <!-- Filters -->
            <select
                class="px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white text-sm outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all cursor-pointer"
            >
                <option value="">Semua Tipe</option>
                <option value="Deposit">Deposit</option>
                <option value="Withdraw">Withdraw</option>
                <option value="PPOB">PPOB</option>
                <option value="Social Booster">Social Booster</option>
                <option value="Clipper">Clipper</option>
            </select>
            <select
                class="px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white text-sm outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all cursor-pointer"
            >
                <option value="">Semua Status</option>
                <option value="Success">Success</option>
                <option value="Pending">Pending</option>
                <option value="Failed">Failed</option>
            </select>
        </div>
    </div>

    <!-- Transactions Table -->
    <div
        class="bg-[#142925] rounded-[2rem] border border-[#1F3D36] overflow-hidden shadow-sm"
    >
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr
                        class="text-left border-b border-[#1F3D36] bg-[#0C1A18]/50"
                    >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider"
                            >ID & Date</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider"
                            >User</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider"
                            >Type / Detail</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                            >Amount</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                            >Status</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                            >Action</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#1F3D36]">
                    {
                        transactions.map((trx) => (
                            <tr class="group hover:bg-[#1F3D36]/30 transition-colors">
                                <td class="px-6 py-4">
                                    <p class="text-white font-bold text-sm font-mono">
                                        {trx.id}
                                    </p>
                                    <p class="text-gray-500 text-[10px] mt-0.5">
                                        {trx.date}
                                    </p>
                                </td>
                                <td class="px-6 py-4">
                                    <p class="text-white font-bold text-sm">
                                        {trx.user}
                                    </p>
                                    <p class="text-gray-500 text-[10px] font-mono">
                                        {trx.userId}
                                    </p>
                                </td>
                                <td class="px-6 py-4">
                                    <span
                                        class={`inline-block px-2 py-0.5 rounded text-[10px] font-bold border mb-1
                                    ${
                                        trx.type === "Deposit"
                                            ? "bg-emerald-500/10 text-emerald-400 border-emerald-500/20"
                                            : trx.type === "Withdraw"
                                              ? "bg-orange-500/10 text-orange-400 border-orange-500/20"
                                              : "bg-blue-500/10 text-blue-400 border-blue-500/20"
                                    }`}
                                    >
                                        {trx.type}
                                    </span>
                                    <p class="text-gray-400 text-xs">
                                        {trx.detail}
                                    </p>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <p
                                        class={`font-bold text-sm tracking-wide ${trx.type === "Deposit" || (trx.status === "Failed" && trx.type === "Withdraw") ? "text-emerald-400" : "text-white"}`}
                                    >
                                        {trx.type === "Deposit" ? "+" : "-"} Rp{" "}
                                        {new Intl.NumberFormat("id-ID").format(
                                            trx.amount,
                                        )}
                                    </p>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    {trx.status === "Success" && (
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 text-xs font-bold">
                                            Success
                                        </span>
                                    )}
                                    {trx.status === "Pending" && (
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg bg-amber-500/10 text-amber-400 border border-amber-500/20 text-xs font-bold">
                                            Pending
                                        </span>
                                    )}
                                    {trx.status === "Failed" && (
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg bg-red-500/10 text-red-400 border border-red-500/20 text-xs font-bold">
                                            Failed
                                        </span>
                                    )}
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <button class="text-gray-400 hover:text-white transition-colors bg-[#0C1A18] hover:bg-[#1F3D36] p-1.5 rounded-lg border border-[#1F3D36]">
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <>
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                                />
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                                />
                                            </>
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div
            class="px-6 py-4 border-t border-[#1F3D36] flex items-center justify-between bg-[#0C1A18]/30"
        >
            <span class="text-xs font-bold text-gray-500"
                >Showing 1 to 20 of 24,500 entries</span
            >
            <div class="flex gap-2">
                <button
                    disabled
                    class="px-3 py-1.5 rounded-lg border border-[#1F3D36] text-gray-600 font-bold text-xs cursor-not-allowed"
                    >Prev</button
                >
                <button
                    class="px-3 py-1.5 rounded-lg bg-[#D4F24F] text-[#0C1A18] font-bold text-xs hover:bg-[#c3e33b] transition-all"
                    >1</button
                >
                <button
                    class="px-3 py-1.5 rounded-lg border border-[#1F3D36] text-gray-400 hover:text-white hover:bg-[#1F3D36] font-bold text-xs transition-all"
                    >2</button
                >
                <button
                    class="px-3 py-1.5 rounded-lg border border-[#1F3D36] text-gray-400 hover:text-white hover:bg-[#1F3D36] font-bold text-xs transition-all"
                    >3</button
                >
                <span class="px-2 py-1.5 text-gray-500 text-xs">...</span>
                <button
                    class="px-3 py-1.5 rounded-lg border border-[#1F3D36] text-gray-400 hover:text-white hover:bg-[#1F3D36] font-bold text-xs transition-all"
                    >Next</button
                >
            </div>
        </div>
    </div>
</AdminLayout>
