<script>
    // Elements
    const editModal = document.getElementById("edit-rule-modal");
    const fullHistoryModal = document.getElementById("full-history-modal");

    // Close buttons logic for Edit Rule Modal
    ["close-edit-rule-modal", "edit-rule-backdrop"].forEach((id) => {
        document.getElementById(id)?.addEventListener("click", () => {
            editModal?.classList.add("hidden");
        });
    });

    // Close buttons logic for Full History Modal
    ["close-full-history-modal", "full-history-backdrop"].forEach((id) => {
        document.getElementById(id)?.addEventListener("click", () => {
            fullHistoryModal?.classList.add("hidden");
        });
    });

    // Handle Edit Buttons
    document.querySelectorAll(".edit-rule-btn").forEach((btn) => {
        btn.addEventListener("click", function (this: HTMLButtonElement) {
            const row = this.closest("tr");
            if (!row) return;

            const name =
                row.querySelector(".rule-name")?.textContent?.trim() || "";
            const target =
                row.querySelector(".rule-target")?.textContent?.trim() || "";

            const valueEl = row.querySelector(".rule-value");
            const value = valueEl?.getAttribute("data-value") || "0";
            const type = valueEl?.getAttribute("data-type") || "fixed";

            // Populate Modal
            const nameInput = document.getElementById(
                "modal-rule-name",
            ) as HTMLInputElement;
            const targetInput = document.getElementById(
                "modal-rule-target",
            ) as HTMLInputElement;
            const valueInput = document.getElementById(
                "modal-rule-value",
            ) as HTMLInputElement;
            const prefixLabel = document.getElementById("modal-rule-prefix");

            if (nameInput) nameInput.value = name;
            if (targetInput) targetInput.value = target;
            if (valueInput) valueInput.value = value;

            if (prefixLabel) {
                prefixLabel.textContent = type === "percentage" ? "%" : "Rp";
            }

            // Show Modal
            editModal?.classList.remove("hidden");
        });
    });

    // Handle "Lihat Semua" Button
    document
        .getElementById("view-all-trx-btn")
        ?.addEventListener("click", () => {
            fullHistoryModal?.classList.remove("hidden");
        });

    // Filter Profit Period Logic
    const profitFilter = document.getElementById(
        "profit-filter",
    ) as HTMLSelectElement | null;
    const label1 = document.getElementById("profit-card-label-1");
    const value1 = document.getElementById("profit-card-value-1");
    const label2 = document.getElementById("profit-card-label-2");
    const value2 = document.getElementById("profit-card-value-2");

    profitFilter?.addEventListener("change", (e) => {
        const target = e.target as HTMLSelectElement;
        const val = target.value;

        // Mock Logic for UI Simulation
        if (val === "today") {
            if (label1) label1.textContent = "Profit Hari Ini";
            if (value1) value1.textContent = "Rp 150.000";
            if (label2) label2.textContent = "Profit Bulan Ini";
            if (value2) value2.textContent = "Rp 4.500.000";
        } else if (val === "yesterday") {
            if (label1) label1.textContent = "Profit Kemarin";
            if (value1) value1.textContent = "Rp 125.000";
            if (label2) label2.textContent = "Profit Bulan Ini"; // Context remains same
            if (value2) value2.textContent = "Rp 4.500.000";
        } else if (val === "7days") {
            if (label1) label1.textContent = "Avg. 7 Hari";
            if (value1) value1.textContent = "Rp 1.050.000";
            if (label2) label2.textContent = "Total 7 Hari";
            if (value2) value2.textContent = "Rp 1.050.000";
        } else if (val === "30days") {
            if (label1) label1.textContent = "Avg. 30 Hari";
            if (value1) value1.textContent = "Rp 4.800.000";
            if (label2) label2.textContent = "Total 30 Hari";
            if (value2) value2.textContent = "Rp 4.800.000";
        } else {
            // Default / Reset
            if (label1) label1.textContent = "Profit Hari Ini";
            if (value1) value1.textContent = "Rp 150.000";
            if (label2) label2.textContent = "Profit Bulan Ini";
            if (value2) value2.textContent = "Rp 4.500.000";
        }
    });

    // Toggle switch interactivity
    document.querySelectorAll(".status-toggle").forEach((toggle) => {
        const checkbox = toggle.querySelector(
            'input[type="checkbox"]',
        ) as HTMLInputElement | null;
        const indicator = toggle.querySelector(
            ".toggle-indicator",
        ) as HTMLElement | null;

        checkbox?.addEventListener("change", () => {
            if (!indicator) return;

            if (checkbox.checked) {
                indicator.style.backgroundColor = "#D4F24F";
            } else {
                indicator.style.backgroundColor = "#4B5563";
            }
        });
    });
</script>

