import AdminLayout from "../../../../layouts/AdminLayout.astro";
import { ChartAreaInteractive } from "@/components/shared/ChartAreaInteractive";

// Mock Data
const profitStats = {
    today: 150000,
    thisMonth: 4500000,
    total: 154500000,
    // New Metrics
    omset: 3850000000, // 3.8 M
    totalTrx: 25480,
};

const profitSettings = [
    {
        id: 2,
        name: "Fee Admin Topup (MANUAL)",
        type: "fixed",
        value: 0,
        target: "Deposit Saldo",
        isActive: false,
    },
    {
        id: 3,
        name: "Fee Tarik Saldo",
        type: "fixed",
        value: 2500,
        target: "Withdrawal",
        isActive: true,
    },
];

const recentTransactions = Array.from({ length: 10 }).map((_, i) => {
    const types = ["PPOB", "Social Booster", "Withdrawal Fee", "Deposit Fee"];
    const type = types[Math.floor(Math.random() * types.length)];
    const amount = (Math.floor(Math.random() * 50) + 1) * 10000;
    const profit = type.includes("Fee") ? amount : Math.floor(amount * 0.05); // 5% profit or full fee

    return {
        id: `TRX-${54000 + i}`,
        user: ["Budi S", "Siti A", "Rizky M", "Dewi L", "Andi P"][i % 5],
        type: type,
        detail:
            type === "PPOB"
                ? "Pulsa 20K"
                : type === "Social Booster"
                  ? "1000 Likes"
                  : "-",
        amount: amount,
        profit: profit,
        status: "Success",
        date: new Date(Date.now() - i * 3600000).toLocaleString("id-ID", {
            day: "numeric",
            month: "short",
            hour: "2-digit",
            minute: "2-digit",
        }),
    };
});

// Full Data for Modal
const allTransactions = Array.from({ length: 50 }).map((_, i) => {
    const types = ["PPOB", "Social Booster", "Withdrawal Fee", "Deposit Fee"];
    const statuses = ["Success", "Pending", "Failed"];
    const type = types[Math.floor(Math.random() * types.length)];
    const status = statuses[Math.floor(Math.random() * (i < 5 ? 2 : 3))]; // Mixed statuses
    const amount = (Math.floor(Math.random() * 100) + 1) * 5000;
    const profit = type.includes("Fee") ? amount : Math.floor(amount * 0.05);

    return {
        id: `TRX-${10000 + i}`,
        user: ["User A", "User B", "User C", "User D", "User E"][i % 5],
        type: type,
        detail: "Transaction Details",
        amount: amount,
        profit: profit,
        status: status,
        date: new Date(
            Date.now() - Math.floor(Math.random() * 1000000000),
        ).toLocaleString("id-ID", {
            day: "numeric",
            month: "short",
            hour: "2-digit",
            minute: "2-digit",
        }),
    };
});
