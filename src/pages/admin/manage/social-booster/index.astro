---

<AdminLayout title={pageTitle}>
    <!-- Header -->
    <div
        class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4"
    >
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">
                Kelola Social Booster
            </h1>
            <p class="text-gray-400 text-sm mt-1">
                Atur harga advertiser, potongan platform, dan pendapatan
                publisher.
            </p>
        </div>
        <button
            class="flex items-center gap-2 px-5 py-2.5 bg-[#D4F24F] hover:bg-[#c3e33b] text-[#0F1F1C] rounded-xl font-bold transition-all shadow-lg hover:-translate-y-0.5 active:scale-95 text-sm"
        >
            <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path></svg
            >
            Simpan Semua
        </button>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-[#142925] rounded-2xl p-5 border border-[#1F3D36]">
            <p
                class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
            >
                Total Layanan
            </p>
            <p class="text-2xl font-bold text-white">{totalServices}</p>
        </div>
        <div class="bg-[#142925] rounded-2xl p-5 border border-[#1F3D36]">
            <p
                class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
            >
                Layanan Aktif
            </p>
            <p class="text-2xl font-bold text-emerald-400">{enabledServices}</p>
        </div>
        <div class="bg-[#142925] rounded-2xl p-5 border border-[#1F3D36]">
            <p
                class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
            >
                Rata-rata Potongan Platform
            </p>
            <p class="text-2xl font-bold text-[#D4F24F]">{avgPlatformCut}%</p>
        </div>
    </div>

    <!-- Global Settings -->
    <div
        class="bg-[#142925] rounded-[2rem] p-6 border border-[#1F3D36] mb-8 shadow-sm"
    >
        <h2 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
            <svg
                class="w-5 h-5 text-[#D4F24F]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                ></path>
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Pengaturan Global
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Default Platform Cut -->
            <div>
                <label
                    class="block text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    Potongan Platform Default
                </label>
                <div class="flex items-center gap-2">
                    <input
                        type="number"
                        value="25"
                        class="w-full px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white text-sm focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all"
                    />
                    <span class="text-gray-400 font-bold">%</span>
                </div>
            </div>
            <!-- Min Advertiser Order -->
            <div>
                <label
                    class="block text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    Min. Order Advertiser
                </label>
                <div class="flex items-center gap-2">
                    <span class="text-gray-400 font-bold text-sm">Rp</span>
                    <input
                        type="number"
                        value="50000"
                        class="w-full px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white text-sm focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all"
                    />
                </div>
            </div>
            <!-- Max Publisher Per Task -->
            <div>
                <label
                    class="block text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    Max Publisher / Task
                </label>
                <input
                    type="number"
                    value="100"
                    class="w-full px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white text-sm focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all"
                />
            </div>
        </div>
    </div>

    <!-- Services Table -->
    <div
        class="bg-[#142925] rounded-[2rem] border border-[#1F3D36] overflow-hidden shadow-sm"
    >
        <div class="p-6 border-b border-[#1F3D36]">
            <h2 class="text-lg font-bold text-white">
                Daftar Layanan Social Booster
            </h2>
            <p class="text-gray-500 text-xs mt-1">
                Atur harga dan potongan untuk setiap jenis layanan
            </p>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr
                        class="text-left border-b border-[#1F3D36] bg-[#0C1A18]/50"
                    >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider"
                            >Layanan</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                            >Harga Advertiser</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                            >Potongan Platform</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right"
                            >Pendapatan Publisher</th
                        >
                        <th
                            class="px-6 py-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-center"
                            >Status</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#1F3D36]">
                    {
                        services.map((service) => {
                            const cutPercentage = (
                                (service.platformCut /
                                    service.advertiserPrice) *
                                100
                            ).toFixed(0);
                            return (
                                <tr class="group hover:bg-[#1F3D36]/30 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 bg-[#0C1A18] rounded-xl flex items-center justify-center text-xl border border-[#1F3D36]">
                                                {service.icon}
                                            </div>
                                            <div>
                                                <p class="text-white font-bold text-sm">
                                                    {service.title}
                                                </p>
                                                <p class="text-gray-600 text-xs">
                                                    per {service.unit}
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end gap-1">
                                            <span class="text-gray-500 text-xs">
                                                Rp
                                            </span>
                                            <input
                                                type="number"
                                                value={service.advertiserPrice}
                                                class="w-24 px-3 py-1.5 bg-[#0C1A18] border border-[#1F3D36] rounded-lg text-white text-sm text-right font-mono focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50"
                                            />
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex flex-col items-end gap-1">
                                            <div class="flex items-center gap-1">
                                                <span class="text-gray-500 text-xs">
                                                    Rp
                                                </span>
                                                <input
                                                    type="number"
                                                    value={service.platformCut}
                                                    class="w-20 px-3 py-1.5 bg-[#0C1A18] border border-amber-500/30 rounded-lg text-amber-400 text-sm text-right font-mono focus:outline-none focus:ring-2 focus:ring-amber-500/50"
                                                />
                                            </div>
                                            <span class="text-amber-500/70 text-[10px] font-bold">
                                                ({cutPercentage}%)
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex flex-col items-end">
                                            <span class="text-emerald-400 font-bold text-base font-mono">
                                                Rp{" "}
                                                {service.publisherEarning.toLocaleString(
                                                    "id-ID",
                                                )}
                                            </span>
                                            <span class="text-gray-600 text-[10px]">
                                                per {service.unit}
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <label class="status-toggle relative inline-flex items-center cursor-pointer">
                                            <input
                                                type="checkbox"
                                                checked={service.enabled}
                                                class="sr-only peer"
                                            />
                                            <div
                                                class="toggle-indicator w-11 h-6 rounded-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full peer-checked:after:border-white transition-colors"
                                                style={`background-color: ${service.enabled ? "#D4F24F" : "#4B5563"}`}
                                            />
                                        </label>
                                    </td>
                                </tr>
                            );
                        })
                    }
                </tbody>
            </table>
        </div>

        <!-- Footer -->
        <div
            class="px-6 py-4 border-t border-[#1F3D36] bg-[#0C1A18]/30 flex items-center justify-between"
        >
            <span class="text-xs font-bold text-gray-500">
                {enabledServices} dari {totalServices} layanan aktif
            </span>
            <div class="flex gap-3">
                <button
                    class="text-xs font-bold text-gray-400 hover:text-white transition-colors"
                >
                    Nonaktifkan Semua
                </button>
                <button
                    class="text-xs font-bold text-[#D4F24F] hover:underline"
                >
                    Aktifkan Semua
                </button>
            </div>
        </div>
    </div>

    <!-- Info Card -->
    <div class="mt-8 bg-[#0C1A18] rounded-2xl p-6 border border-[#1F3D36]">
        <h3 class="text-sm font-bold text-white mb-3 flex items-center gap-2">
            <svg
                class="w-4 h-4 text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
            </svg>
            Cara Kerja Perhitungan
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="bg-[#142925] rounded-xl p-4 border border-[#1F3D36]">
                <p class="text-gray-500 text-xs mb-1">1. Advertiser Bayar</p>
                <p class="text-white font-bold">
                    Rp 2.000 <span class="text-gray-500 font-normal"
                        >/ komen</span
                    >
                </p>
            </div>
            <div class="bg-[#142925] rounded-xl p-4 border border-amber-500/20">
                <p class="text-gray-500 text-xs mb-1">2. Potongan Platform</p>
                <p class="text-amber-400 font-bold">
                    - Rp 500 <span class="text-gray-500 font-normal">(25%)</span
                    >
                </p>
            </div>
            <div
                class="bg-[#142925] rounded-xl p-4 border border-emerald-500/20"
            >
                <p class="text-gray-500 text-xs mb-1">3. Publisher Dapat</p>
                <p class="text-emerald-400 font-bold">
                    Rp 1.500 <span class="text-gray-500 font-normal"
                        >/ komen</span
                    >
                </p>
            </div>
        </div>
    </div>
</AdminLayout>

<script>
    // Toggle switch interactivity
    document.querySelectorAll(".status-toggle").forEach((toggle) => {
        const checkbox = toggle.querySelector(
            'input[type="checkbox"]',
        ) as HTMLInputElement | null;
        const indicator = toggle.querySelector(
            ".toggle-indicator",
        ) as HTMLElement | null;

        checkbox?.addEventListener("change", () => {
            if (!indicator) return;

            if (checkbox.checked) {
                indicator.style.backgroundColor = "#D4F24F";
            } else {
                indicator.style.backgroundColor = "#4B5563";
            }
        });
    });
</script>
