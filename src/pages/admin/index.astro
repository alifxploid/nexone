---
import AdminLayout from "../../layouts/AdminLayout.astro";

// Mock Data Stats
const stats = {
    totalUsers: 1250,
    activeCampaigns: 45,
    pendingTransactions: 12,
    revenue: 15450000,
};
---

<AdminLayout title="Admin Dashboard - Overview">
    <!-- Header -->
    <div
        class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4"
    >
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">
                Admin Overview
            </h1>
            <p class="text-gray-400 text-sm mt-1">
                Ringkasan aktivitas seluruh sistem NexOne.
            </p>
        </div>
        <div class="flex gap-2">
            <button
                class="px-4 py-2 bg-[#142925] text-white rounded-xl text-sm font-bold hover:bg-[#1F3D36] transition-colors border border-[#1F3D36]"
            >
                Download Report
            </button>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <!-- Banner Users -->
        <div
            class="p-6 rounded-[2rem] bg-[#142925] border border-[#1F3D36] relative overflow-hidden group hover:border-[#D4F24F] transition-colors shadow-sm"
        >
            <div
                class="absolute top-0 right-0 w-24 h-24 bg-[#D4F24F] rounded-full blur-[60px] opacity-5 group-hover:opacity-10 transition-opacity"
            >
            </div>
            <div class="relative z-10">
                <p
                    class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    Total Users
                </p>
                <h3 class="text-2xl font-black text-white">
                    {stats.totalUsers}
                </h3>
            </div>
        </div>

        <!-- Banner Active Campaigns -->
        <div
            class="p-6 rounded-[2rem] bg-[#142925] border border-[#1F3D36] relative overflow-hidden group hover:border-[#D4F24F] transition-colors shadow-sm"
        >
            <div
                class="absolute top-0 right-0 w-24 h-24 bg-blue-500 rounded-full blur-[60px] opacity-5 group-hover:opacity-10 transition-opacity"
            >
            </div>
            <div class="relative z-10">
                <p
                    class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    Active Campaigns
                </p>
                <h3 class="text-2xl font-black text-white">
                    {stats.activeCampaigns}
                </h3>
            </div>
        </div>

        <!-- Banner Pending Trx -->
        <div
            class="p-6 rounded-[2rem] bg-[#142925] border border-[#1F3D36] relative overflow-hidden group hover:border-[#D4F24F] transition-colors shadow-sm"
        >
            <div
                class="absolute top-0 right-0 w-24 h-24 bg-orange-500 rounded-full blur-[60px] opacity-5 group-hover:opacity-10 transition-opacity"
            >
            </div>
            <div class="relative z-10">
                <p
                    class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    Pending Trx
                </p>
                <h3 class="text-2xl font-black text-white">
                    {stats.pendingTransactions}
                </h3>
            </div>
        </div>

        <!-- Banner Revenue -->
        <div
            class="p-6 rounded-[2rem] bg-[#D4F24F] border border-[#D4F24F] relative overflow-hidden group shadow-sm hover:shadow-md transition-all"
        >
            <div
                class="absolute -right-6 -bottom-6 w-32 h-32 bg-white rounded-full blur-[60px] opacity-20 group-hover:opacity-30 transition-opacity"
            >
            </div>
            <div class="relative z-10">
                <p
                    class="text-[#0C1A18]/60 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    Total Revenue
                </p>
                <h3 class="text-2xl font-black text-[#0C1A18]">
                    Rp {new Intl.NumberFormat("id-ID").format(stats.revenue)}
                </h3>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section (Placeholder) -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div
            class="lg:col-span-2 bg-[#142925] rounded-[2rem] border border-[#1F3D36] p-8 shadow-sm"
        >
            <h3 class="text-lg font-bold text-white mb-6">
                Recent Transactions
            </h3>
            <div class="space-y-4">
                {
                    [1, 2, 3].map((i) => (
                        <div class="flex items-center justify-between p-4 rounded-xl bg-[#0C1A18] border border-[#1F3D36] hover:border-[#D4F24F] transition-colors group cursor-pointer">
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 rounded-full bg-[#1F3D36] group-hover:bg-[#142925] flex items-center justify-center text-white font-bold transition-colors">
                                    {i}
                                </div>
                                <div>
                                    <p class="text-white font-bold text-sm mb-0.5">
                                        Deposit via Bank Transfer
                                    </p>
                                    <p class="text-gray-400 text-xs">
                                        User #{100 + i}
                                    </p>
                                </div>
                            </div>
                            <span class="text-[#D4F24F] font-bold text-sm">
                                + Rp 150.000
                            </span>
                        </div>
                    ))
                }
            </div>
        </div>

        <div
            class="bg-[#142925] rounded-[2rem] border border-[#1F3D36] p-8 shadow-sm"
        >
            <h3 class="text-lg font-bold text-white mb-6">System Status</h3>
            <div class="space-y-3">
                <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-400">Server Load</span>
                    <span class="text-emerald-400 font-bold">12%</span>
                </div>
                <div
                    class="h-2 w-full bg-[#0C1A18] rounded-full overflow-hidden"
                >
                    <div class="h-full w-[12%] bg-emerald-500 rounded-full">
                    </div>
                </div>

                <div class="flex items-center justify-between text-sm mt-4">
                    <span class="text-gray-400">Database</span>
                    <span class="text-emerald-400 font-bold">Healthy</span>
                </div>
                <div
                    class="h-2 w-full bg-[#0C1A18] rounded-full overflow-hidden"
                >
                    <div class="h-full w-full bg-emerald-500 rounded-full">
                    </div>
                </div>
            </div>
        </div>
    </div>
</AdminLayout>
