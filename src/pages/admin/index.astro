---
import AdminLayout from "../../layouts/AdminLayout.astro";

// Mock Data for "Command Center"
const actionItems = {
    pendingDeposits: 5,
    pendingWithdraws: 3,
    openTickets: 2,
    systemStatus: "Operational",
    ppobConnection: "Connected",
};

const growthStats = {
    newUsersToday: 12,
    newUsersYesterday: 8,
    activeUsersToday: 450,
    totalUsers: 1250,
};

const financialSnapshot = {
    omsetToday: 15450000,
    profitToday: 450000,
};

const recentActivities = [
    {
        type: "register",
        user: "Budi Santoso",
        time: "2 menit lalu",
        detail: "Mendaftar akun baru",
    },
    {
        type: "deposit",
        user: "Rina Amelia",
        time: "5 menit lalu",
        detail: "Deposit Bank BRI Rp 500.000",
        status: "Pending",
    },
    {
        type: "transaction",
        user: "Ahmad Dani",
        time: "12 menit lalu",
        detail: "Pembelian Pulsa 20k",
        status: "Success",
    },
    {
        type: "withdraw",
        user: "Dewi Persik",
        time: "30 menit lalu",
        detail: "Request Withdraw Rp 1.000.000",
        status: "Pending",
    },
    {
        type: "ticket",
        user: "Siti Badriah",
        time: "1 jam lalu",
        detail: "Membuka tiket: 'Deposit belum masuk'",
        status: "Open",
    },
];
---

<AdminLayout title="Dashboard - Admin NexOne">
    <!-- Header -->
    <div
        class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4"
    >
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">
                Dashboard Overview
            </h1>
            <p class="text-gray-400 text-sm mt-1">
                Selamat datang kembali, Admin! Berikut adalah hal yang perlu
                perhatianmu.
            </p>
        </div>
        <div class="flex gap-2">
            <span
                class="px-3 py-1.5 rounded-lg bg-[#142925] border border-[#1F3D36] text-xs font-bold text-emerald-400 flex items-center gap-2"
            >
                <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"
                ></span>
                System Healthy
            </span>
        </div>
    </div>

    <!-- 1. ACTION REQUIRED SECTION (Priority) -->
    <h2 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
        <span class="text-amber-400">‚ö†Ô∏è</span> Perlu Perhatian (Action needed)
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Pending Deposit -->
        <div
            class="bg-[#142925] border border-amber-500/30 rounded-[2rem] p-6 relative overflow-hidden group hover:border-amber-500 transition-colors cursor-pointer"
        >
            <div
                class="absolute top-0 right-0 w-24 h-24 bg-amber-500 rounded-full blur-[60px] opacity-10 group-hover:opacity-20 transition-opacity"
            >
            </div>
            <div class="relative z-10 flex justify-between items-start">
                <div>
                    <p
                        class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
                    >
                        Pending Deposit
                    </p>
                    <h3 class="text-3xl font-black text-white">
                        {actionItems.pendingDeposits}
                    </h3>
                    <p class="text-xs text-amber-500 mt-2 font-bold underline">
                        Review Sekarang &rarr;
                    </p>
                </div>
                <div class="p-3 rounded-xl bg-amber-500/10 text-amber-500">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg
                    >
                </div>
            </div>
        </div>

        <!-- Pending Withdraw -->
        <div
            class="bg-[#142925] border border-red-500/30 rounded-[2rem] p-6 relative overflow-hidden group hover:border-red-500 transition-colors cursor-pointer"
        >
            <div
                class="absolute top-0 right-0 w-24 h-24 bg-red-500 rounded-full blur-[60px] opacity-10 group-hover:opacity-20 transition-opacity"
            >
            </div>
            <div class="relative z-10 flex justify-between items-start">
                <div>
                    <p
                        class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
                    >
                        Pending Withdraw
                    </p>
                    <h3 class="text-3xl font-black text-white">
                        {actionItems.pendingWithdraws}
                    </h3>
                    <p class="text-xs text-red-500 mt-2 font-bold underline">
                        Proses Sekarang &rarr;
                    </p>
                </div>
                <div class="p-3 rounded-xl bg-red-500/10 text-red-500">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg
                    >
                </div>
            </div>
        </div>

        <!-- Open Tickets -->
        <div
            class="bg-[#142925] border border-blue-500/30 rounded-[2rem] p-6 relative overflow-hidden group hover:border-blue-500 transition-colors cursor-pointer"
        >
            <div
                class="absolute top-0 right-0 w-24 h-24 bg-blue-500 rounded-full blur-[60px] opacity-10 group-hover:opacity-20 transition-opacity"
            >
            </div>
            <div class="relative z-10 flex justify-between items-start">
                <div>
                    <p
                        class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
                    >
                        Tiket Support Baru
                    </p>
                    <h3 class="text-3xl font-black text-white">
                        {actionItems.openTickets}
                    </h3>
                    <p class="text-xs text-blue-500 mt-2 font-bold underline">
                        Balas Tiket &rarr;
                    </p>
                </div>
                <div class="p-3 rounded-xl bg-blue-500/10 text-blue-500">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                        ></path></svg
                    >
                </div>
            </div>
        </div>
    </div>

    <!-- 2. GROWTH & SNAPSHOT -->
    <h2 class="text-lg font-bold text-white mb-4">Pertumbuhan & Snapshot</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <!-- New Users -->
        <div
            class="bg-[#142925] border border-[#1F3D36] rounded-[2rem] p-6 relative overflow-hidden hover:border-emerald-500/50 transition-colors"
        >
            <div class="relative z-10">
                <p
                    class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
                >
                    User Baru Hari Ini
                </p>
                <div class="flex items-end gap-2">
                    <h3 class="text-2xl font-black text-white">
                        +{growthStats.newUsersToday}
                    </h3>
                    <span class="text-emerald-400 text-xs font-bold mb-1"
                        >‚ñ≤ vs {growthStats.newUsersYesterday} kmrn</span
                    >
                </div>
            </div>
        </div>

        <!-- Active Users -->
        <div
            class="bg-[#142925] border border-[#1F3D36] rounded-[2rem] p-6 relative overflow-hidden hover:border-emerald-500/50 transition-colors"
        >
            <div class="relative z-10">
                <p
                    class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
                >
                    User Aktif Hari Ini
                </p>
                <h3 class="text-2xl font-black text-white">
                    {growthStats.activeUsersToday}
                </h3>
            </div>
        </div>

        <!-- Omset Snapshot -->
        <div
            class="bg-[#142925] border border-[#1F3D36] rounded-[2rem] p-6 relative overflow-hidden hover:border-[#D4F24F]/50 transition-colors"
        >
            <div class="relative z-10">
                <p
                    class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
                >
                    Omset Hari Ini
                </p>
                <h3 class="text-xl font-black text-[#D4F24F]">
                    Rp {
                        new Intl.NumberFormat("id-ID").format(
                            financialSnapshot.omsetToday,
                        )
                    }
                </h3>
            </div>
        </div>

        <!-- Profit Snapshot -->
        <div
            class="bg-[#142925] border border-[#1F3D36] rounded-[2rem] p-6 relative overflow-hidden hover:border-[#D4F24F]/50 transition-colors"
        >
            <div class="relative z-10">
                <p
                    class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1"
                >
                    Profit Hari Ini
                </p>
                <h3 class="text-xl font-black text-emerald-400">
                    Rp {
                        new Intl.NumberFormat("id-ID").format(
                            financialSnapshot.profitToday,
                        )
                    }
                </h3>
            </div>
        </div>
    </div>

    <!-- 3. RECENT ACTIVITY FEED -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div
            class="lg:col-span-2 bg-[#142925] rounded-[2rem] border border-[#1F3D36] p-8"
        >
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-bold text-white">Aktivitas Terkini</h3>
                <button class="text-xs text-[#D4F24F] font-bold hover:underline"
                    >Lihat Semua</button
                >
            </div>

            <div class="space-y-4">
                {
                    recentActivities.map((activity) => (
                        <div class="flex items-start gap-4 p-4 rounded-2xl bg-[#0C1A18]/50 border border-[#1F3D36] hover:border-[#F3F4F6]/10 transition-colors">
                            <div
                                class={`w-10 h-10 rounded-full flex items-center justify-center shrink-0 font-bold text-sm
                            ${
                                activity.type === "deposit"
                                    ? "bg-amber-500/20 text-amber-500"
                                    : activity.type === "withdraw"
                                      ? "bg-red-500/20 text-red-500"
                                      : activity.type === "register"
                                        ? "bg-emerald-500/20 text-emerald-500"
                                        : "bg-blue-500/20 text-blue-500"
                            }`}
                            >
                                {activity.type === "deposit"
                                    ? "D"
                                    : activity.type === "withdraw"
                                      ? "W"
                                      : activity.type === "register"
                                        ? "U"
                                        : "T"}
                            </div>
                            <div class="flex-1">
                                <div class="flex justify-between items-start">
                                    <h4 class="text-white font-bold text-sm">
                                        {activity.user}
                                    </h4>
                                    <span class="text-gray-500 text-xs">
                                        {activity.time}
                                    </span>
                                </div>
                                <p class="text-gray-400 text-xs mt-0.5">
                                    {activity.detail}
                                </p>
                                {activity.status && (
                                    <span
                                        class={`inline-block mt-2 px-2 py-0.5 rounded text-[10px] font-bold border
                                    ${
                                        activity.status === "Pending"
                                            ? "bg-amber-500/10 text-amber-400 border-amber-500/20 delay-pulse"
                                            : "bg-emerald-500/10 text-emerald-400 border-emerald-500/20"
                                    }`}
                                    >
                                        {activity.status}
                                    </span>
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Quick Links / System Health -->
        <div class="flex flex-col gap-6">
            <div
                class="bg-[#142925] rounded-[2rem] border border-[#1F3D36] p-6"
            >
                <h3 class="text-lg font-bold text-white mb-4">Quick Links</h3>
                <div class="space-y-2">
                    <a
                        href="/admin/deposits"
                        class="block w-full py-3 px-4 rounded-xl bg-[#0C1A18] text-gray-300 font-bold text-sm hover:bg-[#D4F24F] hover:text-[#0C1A18] transition-all"
                    >
                        ‚ö° Approve Deposit
                    </a>
                    <a
                        href="/admin/withdrawals"
                        class="block w-full py-3 px-4 rounded-xl bg-[#0C1A18] text-gray-300 font-bold text-sm hover:bg-[#D4F24F] hover:text-[#0C1A18] transition-all"
                    >
                        üí∏ Process Withdraw
                    </a>
                    <a
                        href="/admin/users"
                        class="block w-full py-3 px-4 rounded-xl bg-[#0C1A18] text-gray-300 font-bold text-sm hover:bg-[#D4F24F] hover:text-[#0C1A18] transition-all"
                    >
                        üë• Manage Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</AdminLayout>
