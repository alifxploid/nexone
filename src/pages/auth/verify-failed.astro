---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Verifikasi Gagal - NexOne">
    <div class="min-h-screen flex font-sans">
        <div
            class="w-full flex items-center justify-center p-4 sm:p-8 bg-gray-50 relative overflow-hidden"
        >
            <div
                class="absolute inset-0 z-0 h-full w-full bg-[#FAFAFA] bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:40px_40px]"
            >
            </div>

            <div
                class="w-full max-w-sm bg-white p-8 md:p-10 rounded-[2.5rem] shadow-2xl shadow-gray-200/50 relative z-10 text-center"
            >
                <div class="mb-8">
                    <a
                        href="/"
                        class="inline-block hover:opacity-80 transition-opacity mb-8"
                    >
                        <span
                            class="text-3xl font-bold tracking-tight text-[#0F1F1C]"
                            >NexOne</span
                        >
                    </a>

                    <!-- Error Icon -->
                    <div
                        class="w-16 h-16 bg-red-50 rounded-full flex items-center justify-center mx-auto mb-6 text-red-500"
                    >
                        <svg
                            class="w-8 h-8"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </div>

                    <h1
                        class="text-2xl font-bold text-[#0F1F1C] mb-3 tracking-tight"
                    >
                        Link Kadaluarsa
                    </h1>
                    <p class="text-gray-500 text-sm leading-relaxed">
                        Link verifikasi yang kamu gunakan sudah tidak berlaku
                        atau salah. Silakan minta link baru.
                    </p>
                </div>

                <a
                    href="#"
                    class="block w-full py-3 px-4 border border-transparent rounded-xl shadow-lg text-sm font-bold text-white bg-[#0F392E] hover:bg-[#164e3f] transition-all hover:-translate-y-0.5"
                >
                    Kirim Ulang Link
                </a>

                <div class="mt-6">
                    <a
                        href="/auth/login"
                        class="text-xs font-medium text-gray-400 hover:text-[#0F392E] transition-colors"
                    >
                        Kembali ke Login
                    </a>
                </div>
            </div>

            <div class="absolute bottom-6 text-center w-full z-10">
                <p class="text-xs text-gray-400">
                    &copy; 2024 NexOne Ecosystem. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</Layout>
