---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Daftar - NexOne">
    <div class="min-h-screen flex font-sans">
        <!-- Left Column: Form Section -->
        <div
            class="w-full lg:w-1/2 flex flex-col justify-center items-center p-6 lg:p-12 bg-gray-50/50 relative"
        >
            <!-- Card Container -->
            <div
                class="w-full max-w-[550px] bg-white p-8 md:p-10 rounded-[2rem] shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1)] border border-gray-100 transition-all hover:shadow-[0_25px_50px_-12px_rgba(15,57,46,0.1)] my-8"
            >
                <!-- Logo inside card -->
                <div class="mb-6 flex justify-center">
                    <a href="/" class="flex items-center gap-2 group">
                        <div
                            class="w-10 h-10 bg-[#0F392E] rounded-xl flex items-center justify-center text-[#D4F24F] font-bold text-xl group-hover:scale-110 transition-transform shadow-lg shadow-[#0F392E]/20"
                        >
                            N
                        </div>
                        <span
                            class="text-2xl font-bold text-[#0F1F1C] tracking-tight"
                            >NexOne</span
                        >
                    </a>
                </div>

                <div class="text-center mb-6">
                    <h1
                        class="text-2xl font-bold text-[#0F1F1C] mb-2 tracking-tight"
                    >
                        Mulai Gratis
                    </h1>
                    <p class="text-gray-500 text-sm">
                        Buat akun hari ini, bangun bisnismu sekarang.
                    </p>
                </div>

                <!-- Tab Switcher -->
                <div
                    class="flex p-1 bg-gray-100/80 rounded-xl mb-6 relative z-20"
                >
                    <button
                        type="button"
                        id="tab-publisher"
                        class="flex-1 py-2.5 text-sm font-bold rounded-lg transition-all shadow-sm text-[#0F392E] bg-white ring-1 ring-black/5"
                        onclick="switchTab('publisher')"
                    >
                        Publisher
                    </button>
                    <button
                        type="button"
                        id="tab-advertiser"
                        class="flex-1 py-2.5 text-sm font-bold rounded-lg transition-all text-gray-500 hover:text-[#0F392E]"
                        onclick="switchTab('advertiser')"
                    >
                        Advertiser
                    </button>
                </div>

                <!-- Publisher Form -->
                <form
                    id="publisher-form"
                    class="space-y-5 text-left relative z-20"
                    action="/auth/verify-email"
                >
                    <input type="hidden" name="role" value="publisher" />
                    <!-- Nama Lengkap -->
                    <div>
                        <label
                            for="pub_full_name"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Nama Lengkap</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="pub_full_name"
                                name="full_name"
                                type="text"
                                required
                                class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="John Doe"
                            />
                        </div>
                    </div>

                    <!-- Username -->
                    <div>
                        <label
                            for="pub_username"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Username Publisher</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="pub_username"
                                name="username"
                                type="text"
                                required
                                class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="johndoe123"
                            />
                        </div>
                    </div>

                    <!-- Nomer HP -->
                    <div>
                        <label
                            for="pub_phone"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Nomer HP / WhatsApp</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="pub_phone"
                                name="phone"
                                type="tel"
                                required
                                class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="08123456789"
                            />
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label
                            for="pub_email"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Email Address</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="pub_email"
                                name="email"
                                type="email"
                                required
                                class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="john@example.com"
                            />
                        </div>
                    </div>

                    <!-- Payment Method (Withdrawal) -->
                    <div class="pt-2 border-t border-gray-100">
                        <p
                            class="text-xs font-bold text-[#0F392E] uppercase tracking-wider mb-3"
                        >
                            Info Penarikan (Withdraw)
                        </p>

                        <!-- Bank Selection -->
                        <div class="mb-4">
                            <label
                                for="pub_bank"
                                class="block text-sm font-semibold text-gray-700 mb-1.5"
                                >Metode Pembayaran</label
                            >
                            <div class="relative">
                                <div
                                    class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                                >
                                    <svg
                                        class="h-5 w-5 text-gray-400"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                                        ></path>
                                    </svg>
                                </div>
                                <select
                                    id="pub_bank"
                                    name="bank_name"
                                    required
                                    class="appearance-none block w-full pl-10 pr-10 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50 text-gray-700"
                                >
                                    <option value="" disabled selected>
                                        Pilih Bank / E-Wallet
                                    </option>
                                    <option value="BRI">Bank BRI</option>
                                    <option value="BCA">Bank BCA</option>
                                    <option value="DANA">DANA</option>
                                </select>
                                <div
                                    class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none"
                                >
                                    <svg
                                        class="h-5 w-5 text-gray-400"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- Account Number -->
                        <div>
                            <label
                                for="pub_account_number"
                                class="block text-sm font-semibold text-gray-700 mb-1.5"
                                >Nomor Rekening / HP</label
                            >
                            <div class="relative">
                                <div
                                    class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                                >
                                    <svg
                                        class="h-5 w-5 text-gray-400"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"
                                        ></path>
                                    </svg>
                                </div>
                                <input
                                    id="pub_account_number"
                                    name="account_number"
                                    type="number"
                                    required
                                    class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                    placeholder="Contoh: 1234567890"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Password -->
                    <div>
                        <label
                            for="pub_password"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Password</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="pub_password"
                                name="password"
                                type="password"
                                required
                                class="appearance-none block w-full pl-10 pr-12 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="••••••••"
                            />
                            <button
                                type="button"
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none"
                                onclick="togglePassword('pub_password', this)"
                            >
                                <!-- Icons managed by JS -->
                                <svg
                                    class="w-5 h-5 eye-open"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    ></path></svg
                                >
                                <svg
                                    class="w-5 h-5 eye-closed hidden"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"
                                    ></path></svg
                                >
                            </button>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label
                            for="pub_confirm_password"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Konfirmasi Password</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="pub_confirm_password"
                                name="confirm_password"
                                type="password"
                                required
                                class="appearance-none block w-full pl-10 pr-12 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="Ulangi password"
                            />
                            <button
                                type="button"
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none"
                                onclick="togglePassword('pub_confirm_password', this)"
                            >
                                <svg
                                    class="w-5 h-5 eye-open"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    ></path></svg
                                >
                                <svg
                                    class="w-5 h-5 eye-closed hidden"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"
                                    ></path></svg
                                >
                            </button>
                        </div>
                        <p
                            id="pub-password-error"
                            class="text-xs text-red-500 font-bold hidden mt-1"
                        >
                            Password tidak cocok!
                        </p>
                    </div>

                    <button
                        type="submit"
                        id="pub-submit"
                        class="w-full py-3.5 bg-[#0F392E] text-white rounded-xl font-bold text-base hover:bg-[#164e3f] transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5 active:scale-[0.98] mt-4 disabled:opacity-50 disabled:cursor-not-allowed group-hover:shadow-[#0F392E]/20"
                    >
                        Daftar sebagai Publisher
                    </button>
                </form>

                <!-- Advertiser Form (Hidden by default) -->
                <form
                    id="advertiser-form"
                    class="space-y-5 text-left relative z-20 hidden"
                    action="/auth/verify-email"
                >
                    <input type="hidden" name="role" value="advertiser" />

                    <!-- Nama Lengkap / PIC -->
                    <div>
                        <label
                            for="adv_full_name"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Nama Lengkap</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="adv_full_name"
                                name="full_name"
                                type="text"
                                required
                                class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="Nama Penanggung Jawab"
                            />
                        </div>
                    </div>

                    <!-- Username -->
                    <div>
                        <label
                            for="adv_username"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Username Advertiser</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="adv_username"
                                name="username"
                                type="text"
                                required
                                class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="Brand / Agency"
                            />
                        </div>
                    </div>

                    <!-- Nomer HP -->
                    <div>
                        <label
                            for="adv_phone"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Nomer HP / WhatsApp</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="adv_phone"
                                name="phone"
                                type="tel"
                                required
                                class="appearance-none block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl placeholder-gray-400 focus:outline-none focus:ring-[#0F392E] focus:border-[#0F392E] text-sm transition-colors bg-gray-50/50"
                                placeholder="0812..."
                            />
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label
                            for="adv_email"
                            class="block text-sm font-semibold text-gray-700 mb-1.5"
                            >Email Bisnis</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                id="adv_email"
                                name="email"
                                type="email"
