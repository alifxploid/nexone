    <script is:inline>
        // Tab Switching Logic
        function switchTab(role) {
            const pubTab = document.getElementById("tab-publisher");
            const advTab = document.getElementById("tab-advertiser");
            const pubForm = document.getElementById("publisher-form");
            const advForm = document.getElementById("advertiser-form");

            if (role === "publisher") {
                pubTab.classList.remove(
                    "text-gray-500",
                    "hover:text-[#0F392E]",
                );
                pubTab.classList.add(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                advTab.classList.add("text-gray-500", "hover:text-[#0F392E]");
                advTab.classList.remove(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                pubForm.classList.remove("hidden");
                advForm.classList.add("hidden");
            } else {
                advTab.classList.remove(
                    "text-gray-500",
                    "hover:text-[#0F392E]",
                );
                advTab.classList.add(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                pubTab.classList.add("text-gray-500", "hover:text-[#0F392E]");
                pubTab.classList.remove(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                advForm.classList.remove("hidden");
                pubForm.classList.add("hidden");
            }
        }

        // Password Toggle
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const eyeOpen = button.querySelector(".eye-open");
            const eyeClosed = button.querySelector(".eye-closed");
            if (input.type === "password") {
                input.type = "text";
                eyeOpen.classList.add("hidden");
                eyeClosed.classList.remove("hidden");
            } else {
                input.type = "password";
                eyeOpen.classList.remove("hidden");
                eyeClosed.classList.add("hidden");
            }
        }

        // Password Validation Logic
        function setupValidation(passwordId, confirmId, errorId, submitId) {
            const passInput = document.getElementById(passwordId);
            const confirmInput = document.getElementById(confirmId);
            const errorMessage = document.getElementById(errorId);
            const submitButton = document.getElementById(submitId);

            function checkMatch() {
                const pass = passInput.value;
                const confirm = confirmInput.value;

                if (confirm.length > 0) {
                    if (pass !== confirm) {
                        confirmInput.classList.add(
                            "border-red-500",
                            "focus:border-red-500",
                            "focus:ring-red-500/20",
                        );
                        confirmInput.classList.remove(
                            "border-green-500",
                            "focus:border-green-500",
                            "focus:ring-green-500/20",
                        );
                        errorMessage.classList.remove("hidden");
                        submitButton.disabled = true;
                        submitButton.classList.add(
                            "opacity-50",
                            "cursor-not-allowed",
                        );
                    } else {
                        confirmInput.classList.remove(
                            "border-red-500",
                            "focus:border-red-500",
                            "focus:ring-red-500/20",
                        );
                        confirmInput.classList.add(
                            "border-green-500",
                            "focus:border-green-500",
                            "focus:ring-green-500/20",
                        );
                        errorMessage.classList.add("hidden");
                        submitButton.disabled = false;
                        submitButton.classList.remove(
                            "opacity-50",
                            "cursor-not-allowed",
                        );
                    }
                } else {
                    confirmInput.classList.remove(
                        "border-red-500",
                        "focus:border-red-500",
                        "focus:ring-red-500/20",
                        "border-green-500",
                        "focus:border-green-500",
                        "focus:ring-green-500/20",
                    );
                    errorMessage.classList.add("hidden");
                }
            }

            confirmInput.addEventListener("input", checkMatch);
            passInput.addEventListener("input", checkMatch);
        }

        // Initialize Validation for Both Forms
        setupValidation(
            "pub_password",
            "pub_confirm_password",
            "pub-password-error",
            "pub-submit",
        );
        setupValidation(
            "adv_password",
            "adv_confirm_password",
            "adv-password-error",
            "adv-submit",
        );
    </script>
