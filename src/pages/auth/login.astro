---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Login - NexOne">
    <div class="min-h-screen flex font-sans">
        <!-- Left Column: Form Section -->
        <div
            class="w-full lg:w-1/2 flex flex-col justify-center items-center p-6 lg:p-12 bg-gray-50/50 relative"
        >
            <!-- Card Container -->
            <div
                class="w-full max-w-[550px] bg-white p-8 md:p-10 rounded-[2rem] shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1)] border border-gray-100 transition-all hover:shadow-[0_25px_50px_-12px_rgba(15,57,46,0.1)]"
            >
                <!-- Logo inside card for cohesion -->
                <div class="mb-8 flex justify-center">
                    <a href="/" class="flex items-center gap-2 group">
                        <div
                            class="w-10 h-10 bg-[#0F392E] rounded-xl flex items-center justify-center text-[#D4F24F] font-bold text-xl group-hover:scale-110 transition-transform shadow-lg shadow-[#0F392E]/20"
                        >
                            N
                        </div>
                        <span
                            class="text-2xl font-bold text-[#0F1F1C] tracking-tight"
                            >NexOne</span
                        >
                    </a>
                </div>

                <div class="text-center mb-6">
                    <h1
                        class="text-2xl font-bold text-[#0F1F1C] mb-2 tracking-tight"
                    >
                        Welcome Back
                    </h1>
                    <p class="text-gray-500 text-sm">
                        Masukan detail akun kamu untuk melanjutkan.
                    </p>
                </div>

                <!-- Tab Switcher -->
                <div
                    class="flex p-1 bg-gray-100/80 rounded-xl mb-6 relative z-20"
                >
                    <button
                        type="button"
                        id="tab-publisher"
                        class="flex-1 py-2.5 text-sm font-bold rounded-lg transition-all shadow-sm text-[#0F392E] bg-white ring-1 ring-black/5"
                        onclick="switchLoginTab('publisher')"
                    >
                        Publisher
                    </button>
                    <button
                        type="button"
                        id="tab-advertiser"
                        class="flex-1 py-2.5 text-sm font-bold rounded-lg transition-all text-gray-500 hover:text-[#0F392E]"
                        onclick="switchLoginTab('advertiser')"
                    >
                        Advertiser
                    </button>
                </div>

                <form class="space-y-4" action="#" method="POST">
                    <input
                        type="hidden"
                        name="role"
                        id="login-role"
                        value="publisher"
                    />
                    <!-- Email Input -->
                    <div class="space-y-1.5 text-left">
                        <label
                            for="email"
                            class="text-xs font-bold text-[#0F1F1C] ml-1"
                            >Email Address</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                                    ></path></svg
                                >
                            </div>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                placeholder="contoh@email.com"
                                class="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-100 rounded-xl text-gray-900 placeholder-gray-400 text-sm focus:outline-none focus:ring-2 focus:ring-[#0F392E]/20 focus:border-[#0F392E] transition-all font-medium"
                                required
                            />
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div class="space-y-1.5 text-left">
                        <label
                            for="password"
                            class="text-xs font-bold text-[#0F1F1C] ml-1"
                            >Password</label
                        >
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                    ></path></svg
                                >
                            </div>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                placeholder="••••••••"
                                class="w-full pl-12 pr-12 py-3 bg-gray-50 border border-gray-100 rounded-xl text-gray-900 placeholder-gray-400 text-sm focus:outline-none focus:ring-2 focus:ring-[#0F392E]/20 focus:border-[#0F392E] transition-all font-medium"
                                required
                            />
                            <!-- Visibility Toggle -->
                            <button
                                type="button"
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none transition-colors"
                                onclick="togglePassword('password', this)"
                            >
                                <svg
                                    class="w-5 h-5 eye-open"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    ></path></svg
                                >
                                <svg
                                    class="w-5 h-5 eye-closed hidden"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"
                                    ></path></svg
                                >
                            </button>
                        </div>
                    </div>

                    <!-- Action Button -->
                    <button
                        type="submit"
                        id="login-submit-btn"
                        class="w-full py-3.5 bg-[#0F392E] text-white rounded-xl font-bold text-base hover:bg-[#164e3f] transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5 active:scale-[0.98] mt-2 group-hover:shadow-[#0F392E]/20"
                    >
                        Masuk sebagai Publisher
                    </button>
                </form>

                <!-- Divider -->
                <div class="relative my-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-100"></div>
                    </div>
                    <div class="relative flex justify-center text-xs">
                        <span class="px-3 bg-white text-gray-400 font-medium"
                            >Atau masuk dengan</span
                        >
                    </div>
                </div>

                <!-- Social Login -->
                <div class="flex gap-4 justify-center mb-8">
                    <button
                        class="w-full py-2.5 px-4 border border-gray-100 rounded-xl hover:bg-gray-50 hover:border-gray-200 transition-all flex justify-center items-center gap-2 group"
                    >
                        <img
                            src="https://www.svgrepo.com/show/475656/google-color.svg"
                            class="w-5 h-5 group-hover:scale-110 transition-transform"
                            alt="Google"
                        />
                        <span class="font-bold text-gray-700 text-sm"
                            >Google</span
                        >
                    </button>
                </div>

                <div class="text-center space-y-3">
                    <p class="text-gray-500 font-medium text-sm">
                        Belum punya akun?
                        <a
                            href="/auth/register"
                            class="text-[#0F392E] font-bold hover:underline"
                            >Daftar sekarang</a
                        >
                    </p>
                    <a
                        href="/auth/forgot-password"
                        class="inline-block text-xs font-semibold text-gray-400 hover:text-[#0F392E] transition-colors"
                        >Lupa Password?</a
                    >
                </div>
            </div>
        </div>

        <!-- Right Column: Visual Branding -->
        <div
            class="hidden lg:block w-1/2 relative overflow-hidden bg-[#0F392E]"
        >
            <!-- Original Right Column Code kept exactly as is -->
            <div
                class="absolute inset-0 w-full h-full bg-gradient-to-br from-[#0F392E] via-[#0b2b23] to-[#051410]"
            >
            </div>
            <div
                class="absolute -top-[20%] -right-[20%] w-[80%] h-[80%] bg-[#D4F24F] rounded-full blur-[120px] opacity-10 animate-float-slow"
            >
            </div>
            <div
                class="absolute top-[40%] -left-[20%] w-[60%] h-[60%] bg-[#1a5f4c] rounded-full blur-[100px] opacity-40 animate-float-delayed"
            >
            </div>

            <div
                class="relative z-10 h-full flex flex-col justify-center px-16 text-white"
            >
                <div class="mb-8 inline-flex">
                    <div class="w-12 h-1 bg-[#D4F24F] rounded-full"></div>
                </div>
                <h2
                    class="text-4xl xl:text-5xl font-bold leading-tight mb-6 tracking-tight"
                >
                    Kelola Bisnis Digital <br />
                    <span class="text-[#D4F24F]">Lebih Cepat & Efisien</span>
                </h2>
                <p
                    class="text-emerald-100 text-lg xl:text-xl leading-relaxed max-w-lg"
                >
                    Bergabung dengan ribuan pengguna NexOne lainnya dan nikmati
                    kemudahan transaksi dalam satu platform.
                </p>

                <div
                    class="mt-12 p-6 bg-white/10 backdrop-blur-md rounded-2xl border border-white/10 max-w-sm transform rotate-2 hover:rotate-0 transition-transform duration-500"
                >
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center"
                        >
                            ⚡
                        </div>
                        <div>
                            <div class="h-2 w-24 bg-white/30 rounded mb-1">
                            </div>
                            <div class="h-2 w-16 bg-white/10 rounded"></div>
                        </div>
                    </div>
                    <div class="h-2 w-full bg-white/10 rounded mb-2"></div>
                    <div class="h-2 w-3/4 bg-white/10 rounded"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script for toggle -->
    <script is:inline>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const eyeOpen = button.querySelector(".eye-open");
            const eyeClosed = button.querySelector(".eye-closed");
            if (input.type === "password") {
                input.type = "text";
                eyeOpen.classList.add("hidden");
                eyeClosed.classList.remove("hidden");
            } else {
                input.type = "password";
                eyeOpen.classList.remove("hidden");
                eyeClosed.classList.add("hidden");
            }
        }

        function switchLoginTab(role) {
            const pubTab = document.getElementById("tab-publisher");
            const advTab = document.getElementById("tab-advertiser");
            const roleInput = document.getElementById("login-role");
            const submitBtn = document.getElementById("login-submit-btn");

            if (role === "publisher") {
                pubTab.classList.remove(
                    "text-gray-500",
                    "hover:text-[#0F392E]",
                );
                pubTab.classList.add(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                advTab.classList.add("text-gray-500", "hover:text-[#0F392E]");
                advTab.classList.remove(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                roleInput.value = "publisher";
                submitBtn.textContent = "Masuk sebagai Publisher";
            } else {
                advTab.classList.remove(
                    "text-gray-500",
                    "hover:text-[#0F392E]",
                );
                advTab.classList.add(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                pubTab.classList.add("text-gray-500", "hover:text-[#0F392E]");
                pubTab.classList.remove(
                    "text-[#0F392E]",
                    "bg-white",
                    "ring-1",
                    "ring-black/5",
                    "shadow-sm",
                );

                roleInput.value = "advertiser";
                submitBtn.textContent = "Masuk sebagai Advertiser";
            }
        }
    </script>
</Layout>
