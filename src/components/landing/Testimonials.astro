---
/**
 * Testimonials Component
 * Customer reviews section
 * @version Astro 5.17 compatible
 */

interface Testimonial {
    name: string;
    role: string;
    content: string;
    avatar: string;
}

const testimonials: Testimonial[] = [
    {
        name: "Andi Saputra",
        role: "Owner Counter Pulsa",
        content: "Sejak pakai NexOne, transaksi jadi super cepat. Nggak ada lagi komplain pelanggan gara-gara pulsa telat masuk. Sistemnya stabil banget!",
        avatar: "https://i.pravatar.cc/150?u=a042581f4e29026024d",
    },
    {
        name: "Siska Wijaya",
        role: "Online Shop Owner",
        content: "Fitur manajemen link-nya ngebantu banget buat bio Instagram olshop saya. Tampilannya profesional dan analytics-nya lengkap.",
        avatar: "https://i.pravatar.cc/150?u=a042581f4e29026704d",
    },
    {
        name: "Budi Santoso",
        role: "Content Creator",
        content: "Tools social booster-nya gila sih. Engagement rate naik drastis dalam sebulan. Recommended banget buat yang mau grow akun sosmed.",
        avatar: "https://i.pravatar.cc/150?u=a04258114e29026302d",
    },
];
---

<section id="testimonials" class="py-20 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-[#0f172a] tracking-tight mb-4">
                Apa Kata Mereka?
            </h2>
            <p class="text-xl text-gray-500">
                Ribuan pebisnis digital telah mempercayakan operasional mereka pada NexOne.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {testimonials.map((item) => (
                <div class="bg-white p-8 rounded-2xl border border-gray-100 shadow-sm hover:shadow-md transition-shadow relative">
                    <!-- Quote Icon -->
                    <div class="absolute top-6 right-8 text-orange-100">
                        <i class="fa-solid fa-quote-right text-4xl"></i>
                    </div>

                    <p class="text-gray-600 mb-8 leading-relaxed relative z-10 pr-12">
                        "{item.content}"
                    </p>

                    <div class="flex items-center gap-4">
                        <img
                            src={item.avatar}
                            alt={item.name}
                            class="w-12 h-12 rounded-full object-cover ring-2 ring-orange-50"
                        />
                        <div>
                            <h3 class="font-bold text-[#0f172a] text-sm md:text-base">
                                {item.name}
                            </h3>
                            <p class="text-xs md:text-sm text-gray-500">
                                {item.role}
                            </p>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
