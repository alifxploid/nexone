---
/**
 * Footer Component
 * Site footer with links and social media
 * @version Astro 5.17 compatible
 */

interface FooterLink {
    label: string;
    href: string;
}

interface FooterSection {
    title: string;
    links: FooterLink[];
}

interface SocialLink {
    name: string;
    href: string;
    icon: string;
}

const footerSections: FooterSection[] = [
    {
        title: "Layanan",
        links: [
            { label: "Social Marketplace", href: "#" },
            { label: "Smart Link", href: "#" },
            { label: "PPOB & Payment", href: "#" },
            { label: "API Developer", href: "#" },
        ],
    },
    {
        title: "Dukungan",
        links: [
            { label: "Pusat Bantuan", href: "#" },
            { label: "Harga & Fee", href: "/pricing" },
            { label: "Status Server", href: "#" },
            { label: "Kontak Kami", href: "#" },
        ],
    },
    {
        title: "Legal",
        links: [
            { label: "Syarat & Ketentuan", href: "#" },
            { label: "Kebijakan Privasi", href: "#" },
            { label: "Refund Policy", href: "#" },
        ],
    },
];

const socialLinks: SocialLink[] = [
    { name: "Twitter", href: "#", icon: "fa-brands fa-x-twitter" },
    { name: "LinkedIn", href: "#", icon: "fa-brands fa-linkedin-in" },
    { name: "Instagram", href: "#", icon: "fa-brands fa-instagram" },
    { name: "YouTube", href: "#", icon: "fa-brands fa-youtube" },
];
---

<footer
    class="bg-[#18181b] text-gray-400 py-16 md:py-20 border-t border-white/5"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
            <!-- Brand & Contact -->
            <div class="col-span-1 md:col-span-1">
                <a href="#" class="flex items-center gap-2 mb-8 group">
                    <div
                        class="w-8 h-8 bg-gradient-to-br from-[#f97316] to-[#ea580c] rounded-lg flex items-center justify-center text-white font-bold text-lg group-hover:from-[#fb923c] group-hover:to-[#f97316] transition-all"
                    >
                        N
                    </div>
                    <span class="text-2xl font-bold text-white tracking-tight"
                        >NexOne</span
                    >
                </a>
                <p class="text-gray-500 text-sm mb-8 leading-relaxed">
                    Ecosystem Pertumbuhan Digital Terlengkap. Satu dashboard
                    untuk semua kebutuhan engagement, monetisasi, dan
                    pembayaran.
                </p>

                <div class="space-y-4 text-sm">
                    <a
                        href="mailto:hello@nexone.id"
                        class="flex items-center gap-3 hover:text-white transition-colors"
                    >
                        <i class="fa-solid fa-envelope text-gray-500"></i>
                        hello@nexone.id
                    </a>
                    <a
                        href="tel:+6281234567890"
                        class="flex items-center gap-3 hover:text-white transition-colors"
                    >
                        <i class="fa-solid fa-phone text-gray-500"></i>
                        +62 812 3456 7890
                    </a>
                </div>
            </div>

            <!-- Dynamic Link Sections -->
            {
                footerSections.map((section) => (
                    <div>
                        <h4 class="text-white font-semibold mb-6">
                            {section.title}
                        </h4>
                        <ul class="space-y-4 text-sm">
                            {section.links.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="hover:text-[#f97316] transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>

        <!-- Bottom Bar -->
        <div
            class="flex flex-col md:flex-row justify-between items-center pt-8 border-t border-white/5 gap-4"
        >
            <div class="text-sm">
                &copy; 2026 NexOne.id. All rights reserved.
            </div>

            <!-- Social Icons -->
            <div class="flex items-center gap-6">
                {
                    socialLinks.map((social) => (
                        <a
                            href={social.href}
                            class="text-gray-400 hover:text-white transition-colors"
                            aria-label={social.name}
                        >
                            <i class={`${social.icon} text-lg`} />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</footer>
