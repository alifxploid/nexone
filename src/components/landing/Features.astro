---
/**
 * Features Component
 * Main features section with 3 pillar cards
 * @version Astro 5.17 compatible
 */

interface FeaturePoint {
    text: string;
}

interface Product {
    name: string;
    price: string;
}

interface Notification {
    icon: string;
    iconBg: string;
    iconColor: string;
    title: string;
    time: string;
    description: string;
}

const socialFeatures: FeaturePoint[] = [
    { text: "100% Akun Asli Indonesia" },
    { text: "Garansi Uang Kembali" },
    { text: "Proses Otomatis & Cepat" },
];

const ppobProducts: Product[] = [
    { name: "Pulsa Telkomsel 100K", price: "Rp 96.500" },
    { name: "Token Listrik 50K", price: "Rp 50.150" },
    { name: "Diamond MLBB (86)", price: "Rp 19.200" },
    { name: "Dana Kaget 50K", price: "Rp 51.000" },
];

const notifications: Notification[] = [
    {
        icon: "fa-solid fa-dollar-sign",
        iconBg: "bg-orange-100",
        iconColor: "text-[#f97316]",
        title: "Payout Berhasil",
        time: "Baru saja",
        description: "Komisi Anda telah dikirim ke DANA.",
    },
    {
        icon: "fa-solid fa-eye",
        iconBg: "bg-blue-100",
        iconColor: "text-blue-600",
        title: "Traffic Spike",
        time: "5m lalu",
        description: "Link bio Instagram Anda sedang viral!",
    },
];
---

<section id="features" class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 md:mb-16">
            <h2
                class="text-3xl md:text-5xl font-bold text-[#0f172a] mb-4 md:mb-6 tracking-tight"
            >
                3 Pilar Utama Kesuksesan Digitalmu
            </h2>
            <p
                class="text-base md:text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed"
            >
                Kami menggabungkan layanan viral marketing, pembayaran digital,
                dan monetisasi link dalam satu ekosistem terintegrasi.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            <!-- Card 1: Social Engagement (Full Width) -->
            <div
                class="md:col-span-2 bg-gradient-to-br from-orange-50 to-amber-50 rounded-[2rem] p-6 md:p-12 overflow-hidden relative group"
            >
                <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
                    <div class="relative z-10 order-2 md:order-1">
                        <h3
                            class="text-2xl md:text-3xl font-bold text-[#0f172a] mb-3 md:mb-4"
                        >
                            Social Engagement Marketplace
                        </h3>
                        <p
                            class="text-gray-600 mb-6 md:mb-8 text-base md:text-lg leading-relaxed"
                        >
                            Dapatkan like, comment, & view dari <span
                                class="font-bold text-[#f97316]"
                                >real human</span
                            > Indonesia. Aman dari banned, algoritma friendly, dan
                            bikin konten auto FYP.
                        </p>
                        <ul class="space-y-3 mb-8 text-gray-600">
                            {
                                socialFeatures.map((feature) => (
                                    <li class="flex items-center gap-2">
                                        <i class="fa-solid fa-check text-[#f97316]" />
                                        {feature.text}
                                    </li>
                                ))
                            }
                        </ul>
                        <a
                            href="#"
                            class="inline-block px-6 py-3 bg-[#0f172a] text-white rounded-xl font-bold hover:bg-[#1e293b] transition-all hover:-translate-y-0.5 shadow-md active:scale-95"
                        >
                            <i class="fa-solid fa-rocket mr-2"></i> Mulai Viralkan
                            Bisnis
                        </a>
                    </div>

                    <!-- Chart UI Mockup -->
                    <div
                        class="bg-white rounded-xl p-6 shadow-sm order-1 md:order-2"
                    >
                        <div class="flex justify-between items-center mb-8">
                            <div class="flex items-center gap-2">
                                <span class="font-semibold text-gray-800"
                                    >Engagement Growth</span
                                >
                                <i
                                    class="fa-solid fa-arrow-trend-up text-[#f97316]"
                                ></i>
                            </div>
                            <div class="flex -space-x-2">
                                <div
                                    class="w-8 h-8 rounded-full bg-gray-200 border-2 border-white"
                                >
                                </div>
                                <div
                                    class="w-8 h-8 rounded-full bg-gray-300 border-2 border-white"
                                >
                                </div>
                                <div
                                    class="w-8 h-8 rounded-full bg-gray-400 border-2 border-white"
                                >
                                </div>
                            </div>
                        </div>

                        <!-- Bar Chart -->
                        <div
                            class="flex items-end justify-between h-48 gap-4 px-2"
                        >
                            <div class="w-full bg-gray-100 rounded-lg h-[40%]">
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[65%]">
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[35%]">
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[55%]">
                            </div>
                            <div
                                class="w-full bg-gradient-to-t from-[#ea580c] to-[#f97316] rounded-lg h-[90%] relative shadow-lg shadow-orange-500/20 group"
                            >
                                <div
                                    class="opacity-0 group-hover:opacity-100 absolute -top-10 left-1/2 -translate-x-1/2 bg-gray-800 text-white text-xs py-1 px-2 rounded whitespace-nowrap transition-opacity"
                                >
                                    +150% Viral
                                </div>
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[50%]">
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[60%]">
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[45%]">
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[30%]">
                            </div>
                            <div class="w-full bg-gray-100 rounded-lg h-[55%]">
                            </div>
                        </div>
                        <div
                            class="flex justify-between mt-4 text-xs text-gray-400"
                        >
                            <span>Day 1</span>
                            <span>Day 5</span>
                            <span>Day 10</span>
                            <span>Day 30</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 2: Digital Payment (PPOB) -->
            <div class="bg-slate-50 rounded-[2rem] p-8 md:p-10 flex flex-col">
                <div class="mb-10 text-center">
                    <h3 class="text-2xl font-bold text-[#0f172a] mb-3">
                        <i class="fa-solid fa-wallet text-[#f97316] mr-2"></i> Digital
                        Payment & PPOB
                    </h3>
                    <p class="text-gray-600">
                        Jual pulsa, kuota, topup game, & bayar tagihan dengan
                        harga pusat. Margin tebal, transaksi kilat 24/7.
                    </p>
                </div>

                <div class="bg-white rounded-xl p-6 shadow-sm flex-1">
                    <div
                        class="flex justify-between items-center mb-6 pb-4 border-b border-gray-100"
                    >
                        <span class="font-semibold text-gray-800"
                            >Produk Terlaris</span
                        >
                        <span
                            class="text-xs text-[#f97316] font-bold bg-orange-50 px-2 py-1 rounded"
                        >
                            <i
                                class="fa-solid fa-circle text-[6px] mr-1 animate-pulse"
                            ></i> Live
                        </span>
                    </div>

                    <div class="space-y-4">
                        {
                            ppobProducts.map((product) => (
                                <div class="flex justify-between items-center p-2 hover:bg-gray-50 rounded-lg transition-colors">
                                    <span class="text-gray-600 text-sm font-medium">
                                        {product.name}
                                    </span>
                                    <span class="text-sm font-bold text-[#0f172a]">
                                        {product.price}
                                    </span>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- Card 3: Smart Link Monetization -->
            <div class="bg-slate-50 rounded-[2rem] p-8 md:p-10 flex flex-col">
                <div class="mb-10 text-center">
                    <h3 class="text-2xl font-bold text-[#0f172a] mb-3">
                        <i class="fa-solid fa-link text-[#f97316] mr-2"></i> Smart
                        Link Monetization
                    </h3>
                    <p class="text-gray-600">
                        Jangan biarkan traffic terbuang. Shorten link, pasang di
                        bio, dan dapatkan penghasilan dari setiap klik.
                    </p>
                </div>

                <div class="bg-white rounded-xl p-6 shadow-sm flex-1">
                    <div class="flex justify-between items-center mb-6">
                        <span class="font-semibold text-gray-800"
                            >Komisi Terbaru</span
                        >
                        <div
                            class="flex items-center gap-1 text-xs text-[#f97316] bg-orange-50 px-2 py-1 rounded"
                        >
                            <i class="fa-solid fa-arrow-trend-up"></i> +12%
                        </div>
                    </div>

                    <div class="space-y-4">
                        {
                            notifications.map((notif) => (
                                <div class="flex gap-4 items-center">
                                    <div
                                        class={`w-10 h-10 rounded-full ${notif.iconBg} flex items-center justify-center ${notif.iconColor} shrink-0`}
                                    >
                                        <i class={notif.icon} />
                                    </div>
                                    <div class="flex-1">
                                        <div class="flex justify-between items-center">
                                            <h4 class="text-sm font-bold text-gray-800">
                                                {notif.title}
                                            </h4>
                                            <span class="text-xs text-gray-400">
                                                {notif.time}
                                            </span>
                                        </div>
                                        <p class="text-xs text-gray-500">
                                            {notif.description}
                                        </p>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
