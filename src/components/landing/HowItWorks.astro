---
/**
 * HowItWorks Component
 * Step-by-step guide section
 * @version Astro 5.17 compatible
 */

interface Step {
    number: number;
    title: string;
    description: string;
}

const steps: Step[] = [
    {
        number: 1,
        title: "Buat Akun Gratis",
        description:
            "Daftar dalam hitungan detik. Cukup isi data diri, verifikasi email, dan kamu langsung masuk ke dashboard.",
    },
    {
        number: 2,
        title: "Pilih Layanan",
        description:
            "Mau boosting sosmed? Jualan pulsa? Atau monetisasi link? Pilih tools yang kamu butuhkan di menu dashboard.",
    },
    {
        number: 3,
        title: "Otomatisasi & Cuan",
        description:
            "Sistem kami memproses pesanan 24/7. Kamu tinggal pantau grafik pertumbuhan dan tarik profitnya.",
    },
];
---

<section id="how-it-works" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-4xl font-bold text-[#0f172a] mb-4 tracking-tight"
            >
                Mulai Dalam 3 Langkah Mudah
            </h2>
            <p class="text-xl text-gray-500 max-w-2xl mx-auto">
                Tidak perlu keahlian teknis. Platform kami dirancang untuk semua
                orang.
            </p>
        </div>

        <div class="relative grid grid-cols-1 md:grid-cols-3 gap-12">
            <!-- Connecting Line (Desktop Only) -->
            <div
                class="hidden md:block absolute top-[2.25rem] left-[16%] right-[16%] h-0.5 bg-gradient-to-r from-orange-200 via-orange-300 to-orange-200 z-0"
            >
            </div>

            {
                steps.map((step) => (
                    <div class="relative z-10 flex flex-col items-center text-center group">
                        <div class="w-18 h-18 bg-white border-4 border-gray-50 rounded-full flex items-center justify-center mb-6 shadow-sm group-hover:border-orange-50 transition-colors duration-300">
                            <div class="w-14 h-14 bg-gradient-to-br from-[#f97316] to-[#ea580c] rounded-full flex items-center justify-center text-white font-bold text-xl shadow-lg">
                                {step.number}
                            </div>
                        </div>
                        <h3 class="text-xl font-bold text-[#0f172a] mb-3">
                            {step.title}
                        </h3>
                        <p class="text-gray-500 leading-relaxed">
                            {step.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
