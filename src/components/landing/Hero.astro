    >
        <!-- Badge -->
        <div
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white shadow-sm border border-gray-100 text-gray-800 text-[10px] md:text-xs font-bold uppercase tracking-widest mb-8 md:mb-10 hover:shadow-md transition-shadow cursor-default select-none"
        >
            <svg
                class="w-4 h-4 text-[#0F392E]"
                fill="currentColor"
                viewBox="0 0 24 24"
                ><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path></svg
            >
