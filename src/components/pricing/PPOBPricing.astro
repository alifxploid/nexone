---

<div class="max-w-5xl mx-auto space-y-8 font-sans">
    <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-[#0F1F1C]">Daftar Harga Agen</h3>
        <p class="text-gray-500 mt-2">Update real-time langsung dari server.</p>
    </div>

    <!-- A. Main Toggle (Prabayar / Pascabayar) -->
    <div class="flex justify-center mb-8">
        <div class="bg-gray-100 p-1.5 rounded-full inline-flex relative">
            <button
                id="btn-pra"
                onclick="setPaymentMode('pra')"
                class="relative z-10 px-8 py-2.5 rounded-full text-sm font-bold transition-all duration-300 bg-white text-emerald-800 shadow-sm"
            >
                Prabayar
            </button>
            <button
                id="btn-pasca"
                onclick="setPaymentMode('pasca')"
                class="relative z-10 px-8 py-2.5 rounded-full text-sm font-bold transition-all duration-300 text-gray-500 hover:text-gray-800"
            >
                Pascabayar
            </button>
        </div>
    </div>

    <!-- B. Filter & Search Bar -->
    <div
        class="bg-white p-4 rounded-xl border border-gray-200 shadow-sm flex flex-col md:flex-row gap-4 justify-between items-center z-10 relative"
    >
        <!-- Category Dropdown -->
        <div class="w-full md:w-auto relative">
            <select
                id="category-filter"
                onchange="applyFilters()"
                class="w-full md:w-64 appearance-none bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block p-2.5 pr-8 transition-shadow"
            >
                <!-- Options injected by JS -->
            </select>
            <div
                class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
            >
                <svg
                    class="fill-current h-4 w-4"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    ><path
                        d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                    ></path></svg
                >
            </div>
        </div>

        <!-- Search Input -->
        <div class="relative w-full md:w-auto flex-grow max-w-md">
            <div
                class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
            >
                <svg
                    class="w-4 h-4 text-gray-500"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 20 20"
                >
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"></path>
                </svg>
            </div>
            <input
                type="text"
                id="search-input"
                onkeyup="applyFilters()"
                class="block w-full p-2.5 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-emerald-500 focus:border-emerald-500 transition-shadow"
                placeholder="Ketik kode atau nama layanan..."
            />
        </div>
    </div>

    <!-- C. The Table -->
    <div
        class="overflow-x-auto rounded-lg shadow-sm border border-gray-200 bg-white"
    >
        <table class="w-full text-left border-collapse">
            <thead
                class="bg-gray-50/50 text-xs font-bold uppercase text-gray-500 tracking-wider"
            >
                <tr>
                    <th scope="col" class="px-6 py-4">KODE</th>
                    <th scope="col" class="px-6 py-4">LAYANAN</th>
                    <th scope="col" class="px-6 py-4">HARGA</th>
                    <th scope="col" class="px-6 py-4 text-center">STATUS</th>
                </tr>
            </thead>
            <tbody id="table-body" class="divide-y divide-gray-100 text-sm">
                <!-- Rows injected via JS -->
            </tbody>
        </table>
    </div>

    <div id="empty-state" class="hidden text-center py-12 text-gray-500">
        Tidak ada layanan ditemukan.
    </div>

    <div class="mt-8 text-center">
        <a
            href="#"
            class="inline-block px-8 py-3 bg-[#0F392E] text-white rounded-xl font-bold hover:bg-[#164e3f] transition-colors shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >Download Pricelist Lengkap</a
        >
    </div>
</div>

<script is:inline>
    // Data Source
    const allProducts = [
        // Prabayar - Token PLN
        {
            code: "PLN20",
            name: "Token PLN 20.000",
            desc: "Masukan No. Meter/ID Pel",
            price: "Rp 20.500",
            status: "Aktif",
            category: "Token PLN",
            type: "pra",
        },
        {
            code: "PLN50",
            name: "Token PLN 50.000",
            desc: "Masukan No. Meter/ID Pel",
            price: "Rp 50.500",
            status: "Aktif",
            category: "Token PLN",
            type: "pra",
        },
        {
            code: "PLN100",
            name: "Token PLN 100.000",
            desc: "Masukan No. Meter/ID Pel",
            price: "Rp 100.500",
            status: "Aktif",
            category: "Token PLN",
            type: "pra",
        },
        {
            code: "PLN200",
            name: "Token PLN 200.000",
            desc: "Masukan No. Meter/ID Pel",
            price: "Rp 200.500",
            status: "Gangguan",
            category: "Token PLN",
            type: "pra",
        },

        // Prabayar - Pulsa Telkomsel (Dummy additional for context)
        {
            code: "TSEL5",
            name: "Pulsa Telkomsel 5.000",
            desc: "Menambah masa aktif",
            price: "Rp 5.250",
            status: "Aktif",
            category: "Pulsa Telkomsel",
            type: "pra",
        },
        {
            code: "TSEL10",
            name: "Pulsa Telkomsel 10.000",
            desc: "Menambah masa aktif",
            price: "Rp 10.150",
            status: "Aktif",
            category: "Pulsa Telkomsel",
            type: "pra",
        },

        // Prabayar - E-Money
        {
            code: "DANA20",
            name: "Saldo DANA 20k",
            desc: "Topup saldo direct",
            price: "Rp 20.500",
            status: "Aktif",
            category: "E-Wallet",
            type: "pra",
        },

        // Pascabayar
        {
            code: "PLNPOST",
            name: "PLN Pascabayar",
            desc: "Cek tagihan & bayar",
            price: "Admin Rp 2.500",
            status: "Aktif",
            category: "Tagihan PLN",
            type: "pasca",
        },
        {
            code: "PDAM",
            name: "PDAM Aetra",
            desc: "Wilayah Jakarta",
            price: "Admin Rp 2.500",
            status: "Aktif",
            category: "PDAM",
            type: "pasca",
        },
    ];

    let currentType = "pra"; // pra | pasca

    window.setPaymentMode = function (mode) {
        currentType = mode;
        const btnPra = document.getElementById("btn-pra");
        const btnPasca = document.getElementById("btn-pasca");

        if (mode === "pra") {
            btnPra.classList.remove("text-gray-500", "hover:text-gray-800");
            btnPra.classList.add("bg-white", "text-emerald-800", "shadow-sm");

            btnPasca.classList.add("text-gray-500", "hover:text-gray-800");
            btnPasca.classList.remove(
                "bg-white",
                "text-emerald-800",
                "shadow-sm",
            );
        } else {
            btnPasca.classList.remove("text-gray-500", "hover:text-gray-800");
            btnPasca.classList.add("bg-white", "text-emerald-800", "shadow-sm");

            btnPra.classList.add("text-gray-500", "hover:text-gray-800");
            btnPra.classList.remove(
                "bg-white",
                "text-emerald-800",
                "shadow-sm",
            );
        }

        updateCategoryDropdown();
        applyFilters();
    };

    function updateCategoryDropdown() {
        const select = document.getElementById("category-filter");
        const categories = [
            ...new Set(
                allProducts
                    .filter((p) => p.type === currentType)
                    .map((p) => p.category),
            ),
        ];

        select.innerHTML =
            `<option value="all">Semua Kategori</option>` +
            categories
                .map((cat) => `<option value="${cat}">${cat}</option>`)
                .join("");

        // Default select 'Token PLN' if available for demo purpose when switching to Prabayar
        if (currentType === "pra" && categories.includes("Token PLN")) {
            select.value = "Token PLN";
        }
    }

    window.applyFilters = function () {
        const category = document.getElementById("category-filter").value;
        const search = document
            .getElementById("search-input")
            .value.toLowerCase();

        const filtered = allProducts.filter((item) => {
            const matchesType = item.type === currentType;
            const matchesCat = category === "all" || item.category === category;
            const matchesSearch =
                item.code.toLowerCase().includes(search) ||
                item.name.toLowerCase().includes(search) ||
                item.category.toLowerCase().includes(search);

            return matchesType && matchesCat && matchesSearch;
        });

        renderTable(filtered);
    };

    function renderTable(data) {
        const tbody = document.getElementById("table-body");
        const emptyState = document.getElementById("empty-state");

        tbody.innerHTML = "";

        if (data.length === 0) {
            emptyState.classList.remove("hidden");
            return;
        }
        emptyState.classList.add("hidden");

        data.forEach((item) => {
            const tr = document.createElement("tr");
            tr.className =
                "hover:bg-gray-50 transition-colors border-b border-gray-100 last:border-0";

            const badgeClass =
                item.status === "Aktif"
                    ? "bg-green-100 text-green-700 border border-green-200"
                    : "bg-red-100 text-red-700 border border-red-200";

            const statusIcon = item.status === "Aktif" ? "●" : "×";

            tr.innerHTML = `
                <td class="px-6 py-4 font-mono font-medium text-gray-500 whitespace-nowrap text-xs">
                    ${item.code}
                </td>
                <td class="px-6 py-4">
                    <div class="flex flex-col">
                        <span class="font-bold text-gray-800 text-sm">${item.name}</span>
                        <span class="text-xs text-gray-400 mt-0.5">${item.desc}</span>
                    </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="font-bold text-gray-900 text-base">${item.price}</span>
                </td>
                <td class="px-6 py-4 text-center whitespace-nowrap">
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wide ${badgeClass}">
                        <span class="text-[6px]">${statusIcon}</span> ${item.status}
                    </span>
                </td>
            `;
            tbody.appendChild(tr);
        });
    }

    // Init
    document.addEventListener("DOMContentLoaded", () => {
        updateCategoryDropdown();
        applyFilters();
    });
</script>
