---
/**
 * Prabayar Results Component
 * Displays nominal selection grid with checkout footer
 */
---

<div
    id="results-prabayar"
    class="soft-card p-6 md:p-8 border border-gray-100 min-h-[500px] flex flex-col relative transition-all"
>
    <div class="flex items-center justify-between mb-5">
        <h2 class="text-base font-bold text-gray-800">Pilihan Nominal</h2>
        <span
            class="text-[10px] font-bold text-gray-400 bg-white border border-gray-200 px-2 py-1 rounded-full"
        >
            Pulsa Reguler
        </span>
    </div>

    <!-- Nominal Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-24">
        <!-- Card 5k -->
        <button
            onclick="selectProduct(this, 5150)"
            class="product-card group relative bg-white p-3 rounded-xl border border-gray-200 text-left hover:border-[#ff6b6b] hover:shadow-md transition-all"
        >
            <p class="text-base font-bold text-gray-800 mb-0.5">5.000</p>
            <p
                class="text-xs text-gray-500 group-hover:text-[#ff6b6b] transition-colors font-medium"
            >
                Rp 5.150
            </p>
            <div
                class="absolute top-3 right-3 w-3 h-3 rounded-full border border-gray-200 group-hover:border-[#ff6b6b] flex items-center justify-center transition-colors"
            >
                <div
                    class="w-1.5 h-1.5 rounded-full bg-[#ff6b6b] opacity-0 transition-opacity"
                >
                </div>
            </div>
        </button>

        <!-- Card 10k -->
