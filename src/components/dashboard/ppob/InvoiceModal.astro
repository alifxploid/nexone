---
/**
 * Invoice Modal Component for PPOB
 * Confirmation dialog before payment
 */
---

<!-- INVOICE MODAL COMPONENT -->
<div id="invoice-modal" class="fixed inset-0 z-50 hidden">
    <!-- Backdrop -->
    <div
        class="absolute inset-0 bg-black/50 backdrop-blur-sm transition-opacity"
        onclick="closeInvoice()"
    >
    </div>

    <!-- Modal Card -->
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-sm p-4"
    >
        <div
            class="bg-white rounded-[2rem] shadow-2xl overflow-hidden animate-fade-in-up"
        >
            <!-- Modal Header -->
            <div
                class="bg-gradient-to-r from-[#ff6b6b] to-[#ff5252] p-6 text-center relative overflow-hidden"
            >
                <div class="relative z-10">
                    <div
                        class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-3"
                    >
                        <i class="fa-solid fa-file-invoice text-2xl text-white"
                        ></i>
                    </div>
                    <h3 class="text-white font-bold text-lg">
                        Konfirmasi Transaksi
                    </h3>
                    <p class="text-white/80 text-xs mt-1">
                        Pastikan detail pesanan sudah benar
                    </p>
                </div>
                <div
                    class="absolute top-0 left-0 w-full h-full opacity-20 bg-gradient-to-br from-white/10 to-transparent"
                >
                </div>
            </div>

            <!-- Invoice Content -->
            <div class="p-6 space-y-6">
                <!-- Service Info -->
                <div
                    class="flex items-center gap-4 bg-gray-50 p-4 rounded-2xl border border-gray-100"
                >
                    <div
                        class="w-12 h-12 bg-gradient-to-br from-[#ff6b6b] to-[#ff5252] rounded-full shadow-lg shadow-red-200 flex items-center justify-center text-white"
                    >
                        <i class="fa-solid fa-bolt text-lg"></i>
                    </div>
                    <div>
                        <p
                            class="text-xs text-gray-500 font-bold uppercase tracking-wider"
                        >
                            Layanan
                        </p>
                        <h4 id="inv-service" class="font-bold text-gray-800">
                            Pulsa Reguler
                        </h4>
                    </div>
                </div>

                <!-- Details List -->
                <div class="space-y-3">
                    <div
                        class="flex justify-between items-center pb-3 border-b border-gray-100"
                    >
                        <span class="text-gray-500 text-sm">Nomor Tujuan</span>
                        <span
                            id="inv-number"
                            class="font-bold text-gray-800 font-mono text-sm tracking-wide"
                            >0812-3456-7890</span
                        >
                    </div>
                    <div
                        class="flex justify-between items-center pb-3 border-b border-gray-100"
                    >
                        <span class="text-gray-500 text-sm">Produk</span>
                        <span
                            id="inv-product"
                            class="font-bold text-gray-800 text-sm"
                            >Pulsa 10.000</span
                        >
                    </div>
                    <div
                        class="flex justify-between items-center pb-3 border-b border-gray-100"
                    >
                        <span class="text-gray-500 text-sm">Biaya Admin</span>
                        <div class="text-right">
                            <span
                                class="text-xs text-gray-400 line-through mr-1"
                                >Rp 2.500</span
                            >
                            <span class="font-bold text-green-600 text-sm"
                                >GRATIS</span
                            >
                        </div>
                    </div>
                </div>

                <!-- Total -->
                <div
                    class="bg-gradient-to-r from-[#ff6b6b]/10 to-[#ff5252]/10 p-4 rounded-xl flex justify-between items-center border border-[#ff6b6b]/20"
                >
                    <span class="text-gray-600 font-bold text-sm"
                        >Total Bayar</span
                    >
                    <span
                        id="inv-total"
                        class="text-xl font-black text-[#ff6b6b]"
                        >Rp 10.150</span
                    >
                </div>

                <!-- Actions -->
                <div class="grid grid-cols-2 gap-3 pt-2">
                    <button
                        onclick="closeInvoice()"
                        class="py-3.5 rounded-xl border border-gray-200 font-bold text-gray-600 hover:bg-gray-50 transition-colors text-sm"
                    >
                        <i class="fa-solid fa-xmark mr-1"></i>
                        Batal
                    </button>
                    <button
                        class="py-3.5 rounded-xl bg-[#ff6b6b] text-white font-bold shadow-lg shadow-red-200 hover:bg-[#ff5252] transition-all transform active:scale-95 flex items-center justify-center gap-2 text-sm"
                    >
                        <span>Bayar</span>
                        <i class="fa-solid fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in-up {
        animation: fadeInUp 0.3s ease-out forwards;
    }
</style>
