---
const currentPath = Astro.url.pathname;
const isPublisher = currentPath.startsWith("/dashboard/publisher");
const isAdvertiser = currentPath.startsWith("/dashboard/advertiser");
const isAdmin = currentPath.startsWith("/admin");

// Determine base path for profile/settings
let basePath = "/dashboard";
if (isPublisher) basePath = "/dashboard/publisher";
if (isAdvertiser) basePath = "/dashboard/advertiser";
if (isAdmin) basePath = "/admin";

// Mock notifications
const notifications = [
    {
        id: 1,
        type: "success",
        title: "Deposit Berhasil",
        message: "Deposit Rp 500.000 telah dikonfirmasi",
        time: "5 menit lalu",
        read: false,
    },
    {
        id: 2,
        type: "info",
        title: "Misi Baru Tersedia",
        message: "Ada 3 misi baru yang cocok untuk Anda",
        time: "1 jam lalu",
        read: false,
    },
    {
        id: 3,
        type: "warning",
        title: "Withdraw Diproses",
        message: "Permintaan withdraw Rp 200.000 sedang diproses",
        time: "2 jam lalu",
        read: true,
    },
];
---

<!-- BEGIN: Header -->
<header class="flex flex-wrap items-center justify-between gap-2 md:gap-4 py-2">
    <!-- Mobile Menu Button -->
    <button
        id="mobile-menu-btn"
        class="md:hidden text-gray-500 hover:text-gray-800 p-2 bg-white rounded-full shadow-sm transition-colors"
    >
        <svg
            class="w-7 h-7"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>

    <!-- Role Badge / Breadcrumb -->
    <div
        class="hidden md:flex bg-white rounded-full p-1 md:p-1.5 px-3 md:px-4 items-center shadow-sm"
    >
        <span class="text-xs md:text-sm font-semibold text-gray-800">
            {
                isPublisher
                    ? "Publisher"
                    : isAdvertiser
                      ? "Advertiser"
                      : "Dashboard"
            }
        </span>
    </div>

    <!-- Right Side Actions & Profile -->
    <div
        class="flex items-center gap-3 md:gap-6 bg-white px-3 md:px-4 py-1.5 md:py-2 rounded-full shadow-sm"
    >
        <!-- Notification Dropdown -->
        <div class="relative" id="notification-dropdown-container">
            <button
                id="notification-btn"
                class="text-gray-400 hover:text-gray-800 relative transition-colors"
            >
                <i class="fa-regular fa-bell"></i>
                <span
                    class="absolute -top-1 -right-1 w-2 h-2 bg-[#ff6b6b] rounded-full border-2 border-white"
                ></span>
            </button>

            <!-- Notification Menu -->
            <div
                id="notification-menu"
                class="fixed md:absolute left-2 right-2 md:left-auto md:right-0 top-16 md:top-full md:mt-2 w-auto md:w-80 bg-white border border-gray-100 rounded-2xl shadow-xl transform opacity-0 scale-95 pointer-events-none transition-all duration-200 origin-top-right z-50"
            >
                <div class="p-4">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-sm font-bold text-gray-800">
                            Notifikasi
                        </h3>
                        <button
                            class="text-[10px] text-[#ff6b6b] font-bold hover:underline"
                        >
                            Tandai Semua Dibaca
                        </button>
                    </div>

                    <div class="space-y-3 max-h-64 overflow-y-auto">
                        {
                            notifications.map((notif) => (
                                <div
                                    class={`flex items-start gap-3 p-3 rounded-xl transition-colors cursor-pointer ${notif.read ? "bg-gray-50" : "bg-red-50 hover:bg-red-100"}`}
                                >
                                    <div
                                        class={`w-8 h-8 rounded-full flex items-center justify-center shrink-0 ${
                                            notif.type === "success"
                                                ? "bg-green-100 text-green-500"
                                                : notif.type === "warning"
                                                  ? "bg-amber-100 text-amber-500"
                                                  : "bg-blue-100 text-blue-500"
                                        }`}
                                    >
                                        <i
                                            class={`fa-solid ${
                                                notif.type === "success"
                                                    ? "fa-circle-check"
                                                    : notif.type === "warning"
                                                      ? "fa-clock"
                                                      : "fa-bell"
                                            } text-xs`}
                                        />
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center justify-between gap-2">
                                            <p class="text-xs font-bold text-gray-800 truncate">
                                                {notif.title}
                                            </p>
                                            {!notif.read && (
                                                <span class="w-2 h-2 bg-[#ff6b6b] rounded-full shrink-0" />
                                            )}
                                        </div>
                                        <p class="text-[10px] text-gray-500 truncate">
                                            {notif.message}
                                        </p>
                                        <p class="text-[10px] text-gray-400 mt-1">
                                            {notif.time}
                                        </p>
                                    </div>
                                </div>
                            ))
                        }
                    </div>

                    <a
                        href={`${basePath}/notifications`}
                        class="block mt-4 py-2 text-center text-xs font-bold text-[#ff6b6b] hover:bg-red-50 rounded-lg transition-colors"
                    >
                        Lihat Semua Notifikasi
                    </a>
                </div>
            </div>
        </div>

        <div class="h-6 w-[1px] bg-gray-200"></div>

        <!-- Profile Dropdown -->
        <div class="relative" id="profile-dropdown-container">
            <button
                id="profile-btn"
                class="flex items-center gap-3 hover:opacity-80 transition-opacity"
            >
                <img
                    alt="User Avatar"
                    class="w-10 h-10 rounded-full object-cover"
                    src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"
                />
                <div class="hidden md:block text-left">
                    <h4 class="text-sm font-bold text-gray-800 leading-tight">
                        James Passaquindici
                    </h4>
                    <p
                        class="text-[10px] text-[#ff6b6b] font-semibold tracking-wider uppercase"
                    >
                        {
                            isPublisher
                                ? "Publisher"
                                : isAdvertiser
                                  ? "Advertiser"
                                  : isAdmin
                                    ? "Admin"
                                    : "Member"
                        }
                    </p>
                </div>
            </button>

            <!-- Dropdown Menu -->
            <div
                id="profile-menu"
                class="absolute right-0 top-full mt-2 w-56 bg-white border border-gray-100 rounded-2xl shadow-xl transform opacity-0 scale-95 pointer-events-none transition-all duration-200 origin-top-right z-50"
            >
                <div class="p-2 space-y-1">
                    <div class="px-3 py-2 border-b border-gray-100 mb-1">
                        <p class="text-sm font-bold text-gray-800">
                            James Passaquindici
                        </p>
                        <p class="text-[10px] text-gray-400">
                            jamespass@emi.com
                        </p>
                    </div>

                    <a
                        href={`${basePath}/profile`}
                        class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-50 transition-colors"
                    >
                        <i class="fa-solid fa-user w-4"></i>
                        Profile Saya
                    </a>
                    <a
                        href={`${basePath}/settings`}
                        class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-50 transition-colors"
                    >
                        <i class="fa-solid fa-gear w-4"></i>
                        Settings
                    </a>
                    <a
                        href={`${basePath}/help`}
                        class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-50 transition-colors"
                    >
                        <i class="fa-solid fa-circle-question w-4"></i>
                        Bantuan
                    </a>

                    <div class="h-px bg-gray-100 my-1"></div>

                    <button
                        class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-bold text-[#ff6b6b] hover:bg-red-50 transition-colors"
                    >
                        <i class="fa-solid fa-arrow-right-from-bracket w-4"></i>
                        Keluar
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- END: Header -->

<script>
    function initDropdowns() {
        const profileBtn = document.getElementById("profile-btn");
        const profileMenu = document.getElementById("profile-menu");
        const notificationBtn = document.getElementById("notification-btn");
        const notificationMenu = document.getElementById("notification-menu");

        // Helper to close a dropdown
        function closeDropdown(menu: HTMLElement | null) {
            if (menu) {
                menu.classList.add(
                    "opacity-0",
                    "scale-95",
                    "pointer-events-none",
                );
            }
        }

        // Helper to open a dropdown
        function openDropdown(menu: HTMLElement | null) {
            if (menu) {
                menu.classList.remove(
                    "opacity-0",
                    "scale-95",
                    "pointer-events-none",
                );
            }
        }

        // Helper to check if dropdown is open
        function isOpen(menu: HTMLElement | null) {
            return menu && !menu.classList.contains("opacity-0");
        }

        // Profile button handler
        if (profileBtn && profileMenu) {
            profileBtn.addEventListener("click", (e) => {
                e.stopPropagation();
                // Close notification dropdown first
                closeDropdown(notificationMenu);
                // Toggle profile dropdown
                if (isOpen(profileMenu)) {
                    closeDropdown(profileMenu);
                } else {
                    openDropdown(profileMenu);
                }
            });
        }

        // Notification button handler
        if (notificationBtn && notificationMenu) {
            notificationBtn.addEventListener("click", (e) => {
                e.stopPropagation();
                // Close profile dropdown first
                closeDropdown(profileMenu);
                // Toggle notification dropdown
                if (isOpen(notificationMenu)) {
                    closeDropdown(notificationMenu);
                } else {
                    openDropdown(notificationMenu);
                }
            });
        }

        // Click outside to close all dropdowns
        document.addEventListener("click", (e) => {
            const target = e.target as Node;

            if (
                profileMenu &&
                !profileMenu.contains(target) &&
                profileBtn &&
                !profileBtn.contains(target)
            ) {
                closeDropdown(profileMenu);
            }

            if (
                notificationMenu &&
                !notificationMenu.contains(target) &&
                notificationBtn &&
                !notificationBtn.contains(target)
            ) {
                closeDropdown(notificationMenu);
            }
        });
    }

    initDropdowns();
    document.addEventListener("astro:page-load", initDropdowns);
</script>
