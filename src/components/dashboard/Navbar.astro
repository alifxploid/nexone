<header
    class="h-16 md:h-20 px-4 md:px-8 border-b border-[#1F3D36] flex items-center justify-between bg-[#0C1A18] sticky top-0 z-40"
>
    <!-- Left: Search Bar -->
    <!-- Left: Search Bar (Removed, only Mobile Toggle remains) -->
    <div class="flex-1 flex items-center gap-4">
        <button
            id="mobile-menu-btn"
            class="md:hidden text-gray-400 hover:text-white p-2 -ml-2 transition-transform duration-500"
        >
            <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                ></path>
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
            >
        </button>
    </div>

    <!-- Right: Actions -->
    <div class="flex items-center gap-4 ml-4">
        <button
            class="w-10 h-10 rounded-full bg-[#142925] hover:bg-[#1F3D36] text-gray-400 hover:text-white flex items-center justify-center transition-all relative"
        >
            <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                ></path></svg
            >
            <span
                class="absolute top-2 right-2.5 w-2 h-2 bg-red-500 rounded-full border-2 border-[#142925]"
            ></span>
        </button>

        <div class="h-8 w-px bg-[#1F3D36]"></div>

        <!-- Profile Dropdown -->
        <div class="relative ml-2" id="profile-dropdown-container">
            <button
                id="profile-btn"
                class="flex items-center gap-3 hover:bg-[#142925] p-1.5 pr-2.5 rounded-full transition-all border border-transparent hover:border-[#1F3D36]"
            >
                <div class="text-right hidden md:block">
                    <p class="text-xs font-bold text-white">
                        James Passaquindici
                    </p>
                    <p class="text-[10px] text-gray-400 font-mono">
                        ID: 8827632
                    </p>
                </div>
                <img
                    src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"
                    alt="User"
                    class="w-9 h-9 rounded-full bg-[#142925] border border-[#1F3D36]"
                />
            </button>

            <!-- Dropdown Menu -->
            <div
                id="profile-menu"
                class="absolute right-0 top-full mt-2 w-56 bg-[#0C1A18] border border-[#1F3D36] rounded-xl shadow-2xl transform opacity-0 scale-95 pointer-events-none transition-all duration-200 origin-top-right z-50"
            >
                <div class="p-2 space-y-1">
                    <div class="px-3 py-2 border-b border-[#1F3D36] mb-1">
                        <p class="text-xs font-bold text-white">
                            James Passaquindici
                        </p>
                        <p class="text-[10px] text-gray-400">
                            jamespass@emi.com
                        </p>
                    </div>

                    <a
                        href="/dashboard/profile"
                        class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-[#142925] transition-colors"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                            ></path></svg
                        >
                        Profile Saya
                    </a>
                    <a
                        href="/dashboard/settings"
                        class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-[#142925] transition-colors"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                            ></path><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                            ></path></svg
                        >
                        Settings
                    </a>
                    <a
                        href="/help"
                        class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-[#142925] transition-colors"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
                            ></path></svg
                        >
                        Bantuan
                    </a>

                    <div class="h-px bg-[#1F3D36] my-1"></div>

                    <button
                        class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-bold text-red-500 hover:bg-red-500/10 transition-colors"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                            ></path></svg
                        >
                        Keluar
                    </button>
                </div>
            </div>
        </div>

        <script>
            function initProfileMenu() {
                const btn = document.getElementById("profile-btn");
                const menu = document.getElementById("profile-menu");

                if (btn && menu) {
                    // Toggle
                    btn.addEventListener("click", (e) => {
                        e.stopPropagation();
                        menu.classList.toggle("opacity-0");
                        menu.classList.toggle("scale-95");
                        menu.classList.toggle("pointer-events-none");
                    });

                    // Outside click
                    document.addEventListener("click", (e) => {
                        if (
                            !menu.contains(e.target as Node) &&
                            !btn.contains(e.target as Node)
                        ) {
                            menu.classList.add("opacity-0");
                            menu.classList.add("scale-95");
                            menu.classList.add("pointer-events-none");
                        }
                    });
                }
            }

            // Init on load
            initProfileMenu();
            document.addEventListener("astro:page-load", initProfileMenu);
        </script>
    </div>
</header>
