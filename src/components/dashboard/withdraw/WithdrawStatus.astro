<!-- Status Modal (Success / Failed / Maintenance) -->
<div id="withdraw-status-modal" class="fixed inset-0 z-[10000] hidden">
    <div
        class="absolute inset-0 bg-[#0C1A18]/90 backdrop-blur-md transition-opacity opacity-0"
        id="status-backdrop"
    >
    </div>

    <div class="absolute inset-0 flex items-center justify-center p-4">
        <div
            class="w-full max-w-sm text-center transform scale-90 opacity-0 transition-all duration-300"
            id="status-content"
        >
            <!-- Loading State -->
            <div id="status-loading" class="hidden flex-col items-center">
                <div
                    class="w-20 h-20 border-4 border-[#D4F24F]/30 border-t-[#D4F24F] rounded-full animate-spin mb-6"
                >
                </div>
                <h3 class="text-xl font-bold text-white">
                    Memproses Penarikan...
                </h3>
                <p class="text-gray-400 mt-2">Mohon tunggu sebentar</p>
            </div>

            <!-- Success State -->
            <div id="status-success" class="hidden flex-col items-center">
                <div
                    class="w-24 h-24 bg-emerald-500/10 rounded-full flex items-center justify-center mb-6 relative"
                >
                    <div
                        class="absolute inset-0 bg-emerald-500/20 rounded-full animate-ping"
                    >
                    </div>
                    <svg
                        class="w-12 h-12 text-emerald-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 13l4 4L19 7"></path></svg
                    >
                </div>
                <h3 class="text-2xl font-bold text-white mb-2">
                    Penarikan Berhasil!
                </h3>
                <p class="text-gray-400 mb-8">
                    Dana akan masuk ke rekening Anda dalam 5-10 menit.
                </p>
                <button
                    onclick="window.location.reload()"
                    class="w-full py-3.5 bg-emerald-500 hover:bg-emerald-600 text-white font-bold rounded-xl shadow-lg transition-all"
                >
                    Selesai
                </button>
            </div>

            <!-- Failed State -->
            <div id="status-failed" class="hidden flex-col items-center">
                <div
                    class="w-24 h-24 bg-red-500/10 rounded-full flex items-center justify-center mb-6"
                >
                    <svg
                        class="w-12 h-12 text-red-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path></svg
                    >
                </div>
                <h3 class="text-2xl font-bold text-white mb-2">
                    Penarikan Gagal
                </h3>
                <p class="text-gray-400 mb-8">
                    Saldo tidak mencukupi atau terjadi kesalahan server.
                </p>
                <div class="grid grid-cols-2 gap-3 w-full">
                    <button
                        onclick="closeStatusModal()"
                        class="py-3.5 bg-gray-800 hover:bg-gray-700 text-white font-bold rounded-xl transition-all"
                    >
                        Coba Lagi
                    </button>
                    <button
                        onclick="window.location.href='/dashboard/ticket'"
                        class="py-3.5 bg-white text-[#0C1A18] font-bold rounded-xl transition-all"
                    >
                        Bantuan
                    </button>
                </div>
            </div>

            <!-- Maintenance State -->
            <div id="status-maintenance" class="hidden flex-col items-center">
                <div
                    class="w-24 h-24 bg-amber-500/10 rounded-full flex items-center justify-center mb-6"
                >
                    <svg
                        class="w-12 h-12 text-amber-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                        ></path></svg
                    >
                </div>
                <h3 class="text-2xl font-bold text-white mb-2">
                    Sedang Gangguan
                </h3>
                <p class="text-gray-400 mb-8">
                    Sistem penarikan sedang dalam pemeliharaan. Silakan coba
                    beberapa saat lagi.
                </p>
                <button
                    onclick="closeStatusModal()"
                    class="w-full py-3.5 bg-gray-800 hover:bg-gray-700 text-white font-bold rounded-xl transition-all"
                >
                    Tutup
                </button>
            </div>
        </div>
    </div>
</div>
