---
const currentPath = Astro.url.pathname;

const menuItems = [
    {
        name: "Overview",
        icon: "home",
        href: "/dashboard",
        active: currentPath === "/dashboard" || currentPath === "/dashboard/",
    },
    {
        name: "Pulsa & PPOB",
        icon: "plus-circle",
        active: currentPath.startsWith("/dashboard/ppob"),
        submenu: [
            { name: "Pesanan", href: "/dashboard/ppob" },
            { name: "Riwayat Pesanan", href: "/dashboard/ppob/history" },
        ],
    },
    {
        name: "Deposit",
        icon: "wallet",
        active: currentPath.startsWith("/dashboard/deposit"),
        submenu: [
            { name: "New Deposit", href: "/dashboard/deposit" },
            { name: "Riwayat Deposit", href: "/dashboard/deposit/history" },
        ],
    },
    {
        name: "Earnings",
        icon: "list",
        active: currentPath.startsWith("/dashboard/tasks"),
        submenu: [
            { name: "Sosial Booster", href: "/dashboard/tasks/social" },
            { name: "Clipper", href: "/dashboard/tasks/clipper" },
            { name: "Riwayat Task", href: "/dashboard/tasks/history" },
        ],
    },
    {
        name: "Withdraw",
        icon: "credit-card",
        href: "/dashboard/withdraw",
        active: currentPath.startsWith("/dashboard/withdraw"),
    },
    {
        name: "Share & Earn",
        icon: "share-earn",
        href: "/dashboard/referral",
        active: currentPath.startsWith("/dashboard/referral"),
    },
    {
        name: "Tiket Bantuan",
        icon: "help-circle",
        href: "/dashboard/ticket",
        active: currentPath.startsWith("/dashboard/ticket"),
    },
];
---

<aside
    id="sidebar"
    class="w-72 bg-[#0C1A18] border-r border-[#1F3D36] flex flex-col fixed inset-y-0 left-0 z-50 transform -translate-x-full md:translate-x-0 transition-transform duration-300"
>
    <!-- Logo Area -->
    <div class="px-6 py-6 border-b border-[#1F3D36] flex items-center gap-3">
        <a href="/" class="flex items-center gap-3 group">
            <div
                class="w-10 h-10 bg-[#142925] rounded-xl flex items-center justify-center text-[#D4F24F] font-bold text-xl group-hover:scale-110 transition-transform shadow-lg shadow-[#D4F24F]/5 border border-[#1F3D36]"
            >
                N
            </div>
            <h1 class="text-2xl font-bold text-white tracking-tight">NexOne</h1>
        </a>
    </div>

    <!-- Workspace Switcher -->
    <div class="px-4 mb-6 mt-6">
        <!-- Role Badge -->
        <div
            class="w-full flex items-center justify-center p-3 rounded-xl bg-[#0C1A18] border border-[#D4F24F] shadow-[0_0_15px_rgba(212,242,79,0.05)] group hover:shadow-[0_0_20px_rgba(212,242,79,0.1)] transition-all"
        >
            <p
                class="text-sm font-black text-[#D4F24F] uppercase tracking-wide group-hover:tracking-widest transition-all"
            >
                Publisher Account
            </p>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 px-4 space-y-1.5 overflow-y-auto">
        {
            menuItems.map((item) =>
                item.submenu ? (
                    <div class="mb-1">
                        <button
                            class:list={[
                                "w-full flex items-center justify-between gap-3 px-4 py-3.5 rounded-xl text-[15px] font-bold transition-all duration-200 group submenu-toggle",
                                item.active
                                    ? "bg-[#D4F24F] text-[#0F1F1C] shadow-[0_4px_12px_-4px_rgba(212,242,79,0.3)]"
                                    : "text-gray-400 hover:text-white hover:bg-[#142925]",
                            ]}
                        >
                            <div class="flex items-center gap-3">
                                {item.icon === "plus-circle" && (
                                    <img
                                        src="https://img.icons8.com/?size=100&id=7Mc0qnzxDnRO&format=png&color=000000"
                                        class:list={[
                                            "w-5 h-5 transition-all duration-200",
                                            item.active
                                                ? ""
                                                : "invert opacity-60 group-hover:opacity-100",
                                        ]}
                                        alt="Pulsa"
                                    />
                                )}
                                {item.icon === "wallet" && (
                                    <img
                                        src="https://img.icons8.com/?size=100&id=NP5g4BeVSfb3&format=png&color=000000"
                                        class:list={[
                                            "w-5 h-5 transition-all duration-200",
                                            item.active
                                                ? ""
                                                : "invert opacity-60 group-hover:opacity-100",
                                        ]}
                                        alt="Deposit"
                                    />
                                )}
                                {item.icon === "list" && (
                                    <img
                                        src="https://img.icons8.com/?size=100&id=TW81vSHbKLzb&format=png&color=000000"
                                        class:list={[
                                            "w-5 h-5 transition-all duration-200",
                                            item.active
                                                ? ""
                                                : "invert opacity-60 group-hover:opacity-100",
                                        ]}
                                        alt="Earnings"
                                    />
                                )}
                                {item.icon === "share-earn" && (
                                    <img
                                        src="https://img.icons8.com/?size=100&id=Tf7LXmfOzfk5&format=png&color=000000"
                                        class:list={[
                                            "w-5 h-5 transition-all duration-200",
                                            item.active
                                                ? ""
                                                : "invert opacity-60 group-hover:opacity-100",
                                        ]}
                                        alt="Share & Earn"
                                    />
                                )}
                                {item.icon !== "plus-circle" &&
                                    item.icon !== "wallet" &&
                                    item.icon !== "list" &&
                                    item.icon !== "share-earn" && (
                                        <svg
                                            class="w-5 h-5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"
                                            />
                                        </svg>
                                    )}
                                {item.name}
                            </div>
                            <svg
                                class:list={[
                                    "w-4 h-4 transition-transform duration-200 chevron",
                                    item.active ? "rotate-180" : "",
                                ]}
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19 9l-7 7-7-7"
                                />
                            </svg>
                        </button>
                        <div
                            class:list={[
                                "pl-4 mt-1 space-y-1 submenu-content",
                                !item.active && "hidden",
                            ]}
                        >
                            {item.submenu.map((sub) => {
                                const isSubActive =
                                    currentPath === sub.href ||
                                    (sub.href !== "/dashboard/ppob" &&
                                        sub.href !== "/dashboard/deposit" &&
                                        currentPath.startsWith(sub.href));
                                return (
                                    <a
                                        href={sub.href}
                                        class:list={[
                                            "flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all ml-4",
                                            isSubActive
                                                ? "text-white bg-[#142925]"
                                                : "text-gray-500 hover:text-white hover:bg-[#142925]",
                                        ]}
                                    >
                                        <div
                                            class:list={[
                                                "w-1.5 h-1.5 rounded-full transition-colors",
                                                isSubActive
                                                    ? "bg-[#D4F24F] shadow-[0_0_8px_rgba(212,242,79,0.5)]"
                                                    : "bg-gray-600",
                                            ]}
                                        />
                                        {sub.name}
                                    </a>
                                );
                            })}
                        </div>
                    </div>
                ) : (
                    <a
                        href={item.href}
                        class:list={[
                            "flex items-center gap-3 px-4 py-3.5 rounded-xl text-[15px] font-bold transition-all duration-200 mb-1",
                            item.active
                                ? "bg-[#D4F24F] text-[#0F1F1C] shadow-[0_4px_12px_-4px_rgba(212,242,79,0.3)]"
                                : "text-gray-400 hover:text-white hover:bg-[#142925]",
                        ]}
                    >
                        {item.icon === "home" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                />
                            </svg>
                        )}
                        {item.icon === "wallet" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"
                                />
                            </svg>
                        )}
                        {item.icon === "list" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                                />
                            </svg>
                        )}
                        {item.icon === "credit-card" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                                />
                            </svg>
                        )}
                        {item.icon === "share-earn" && (
                            <img
                                src="https://img.icons8.com/?size=100&id=Tf7LXmfOzfk5&format=png&color=000000"
                                class:list={[
                                    "w-5 h-5 transition-all duration-200",
                                    item.active
                                        ? ""
                                        : "invert opacity-60 group-hover:opacity-100",
                                ]}
                                alt="Share & Earn"
                            />
                        )}
                        {item.icon === "help-circle" && (
                            <img
                                src="https://img.icons8.com/?size=100&id=CtviHbVsMacY&format=png&color=000000"
                                class:list={[
                                    "w-5 h-5 transition-all duration-200",
                                    item.active
                                        ? ""
                                        : "invert opacity-60 group-hover:opacity-100",
                                ]}
                                alt="Tiket Bantuan"
                            />
                        )}
                        {item.name}
                    </a>
                ),
            )
        }
    </nav>

    <script>
        document.addEventListener("astro:page-load", () => {
            // Handle submenu toggles
            const toggles = document.querySelectorAll(".submenu-toggle");
            toggles.forEach((toggle) => {
                toggle.addEventListener("click", () => {
                    const content = toggle.nextElementSibling;
                    const chevron = toggle.querySelector(".chevron");

                    if (content && chevron) {
                        content.classList.toggle("hidden");
                        chevron.classList.toggle("rotate-180");
                    }
                });
            });
        });

        // Fallback for non-SPA navigation (initial load)
        const toggles = document.querySelectorAll(".submenu-toggle");
        toggles.forEach((toggle) => {
            toggle.addEventListener("click", () => {
                const content = toggle.nextElementSibling;
                const chevron = toggle.querySelector(".chevron");

                if (content && chevron) {
                    content.classList.toggle("hidden");
                    chevron.classList.toggle("rotate-180");
                }
            });
        });
        // Sidebar Profile Toggle Logic
        function initSidebarProfile() {
            const btn = document.getElementById("sidebar-profile-btn");
            const menu = document.getElementById("sidebar-profile-menu");
            const chevron = document.getElementById("sidebar-profile-chevron");

            if (btn && menu && chevron) {
                btn.addEventListener("click", (e) => {
                    e.stopPropagation();
                    menu.classList.toggle("opacity-0");
                    menu.classList.toggle("scale-95");
                    menu.classList.toggle("pointer-events-none");
                    chevron.classList.toggle("rotate-180");
                });

                document.addEventListener("click", (e) => {
                    if (
                        !menu.contains(e.target as Node) &&
                        !btn.contains(e.target as Node)
                    ) {
                        menu.classList.add("opacity-0");
                        menu.classList.add("scale-95");
                        menu.classList.add("pointer-events-none");
                        chevron.classList.remove("rotate-180");
                    }
                });
            }
        }

        initSidebarProfile();
        document.addEventListener("astro:page-load", initSidebarProfile);
    </script>

    <!-- User Profile at Bottom -->
    <div
        class="p-4 m-4 border-t border-[#1F3D36] relative"
        id="sidebar-profile-container"
    >
        <button
            id="sidebar-profile-btn"
            class="w-full flex items-center gap-3 cursor-pointer hover:bg-[#142925] p-2 rounded-xl transition-colors group text-left"
        >
            <div class="relative w-10 h-10 flex-shrink-0">
                <div
                    class="w-10 h-10 rounded-full bg-[#142925] flex items-center justify-center overflow-hidden border border-[#1F3D36]"
                >
                    <img
                        src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"
                        alt="User"
                        class="w-full h-full object-cover"
                    />
                </div>
                <!-- Green Online Dot -->
                <div
                    class="absolute bottom-0 right-0 w-3 h-3 bg-emerald-500 border-2 border-[#0C1A18] rounded-full"
                >
                </div>
            </div>

            <div class="flex-1 overflow-hidden">
                <p
                    class="text-sm font-bold text-white truncate group-hover:text-[#D4F24F] transition-colors"
                >
                    James Passaquindici
                </p>
                <p class="text-[11px] text-gray-400 truncate">
                    jamespass@emi.com
                </p>
            </div>
            <svg
                class="w-4 h-4 text-gray-500 transition-transform duration-200"
                id="sidebar-profile-chevron"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"></path></svg
            >
        </button>

        <!-- Sidebar Profile Popover -->
        <div
            id="sidebar-profile-menu"
            class="absolute bottom-full left-0 mb-2 w-full bg-[#0C1A18] border border-[#1F3D36] rounded-xl shadow-2xl transform opacity-0 scale-95 pointer-events-none transition-all duration-200 origin-bottom z-50 p-2 space-y-1"
        >
            <a
                href="/dashboard/profile"
                class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-[#142925] transition-colors"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path></svg
                >
                Profile Saya
            </a>
            <a
                href="/dashboard/settings"
                class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-[#142925] transition-colors"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                    ></path><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                >
                Settings
            </a>
            <a
                href="/help"
                class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-[#142925] transition-colors"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
                    ></path></svg
                >
                Bantuan
            </a>

            <div class="h-px bg-[#1F3D36] my-1"></div>

            <button
                class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-bold text-red-500 hover:bg-red-500/10 transition-colors"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                    ></path></svg
                >
                Keluar
            </button>
        </div>
    </div>
</aside>
