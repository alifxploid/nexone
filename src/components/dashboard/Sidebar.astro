---
const currentPath = Astro.url.pathname;

const menuItems = [
    {
        name: "Overview",
        icon: "home",
        href: "/dashboard",
        active: currentPath === "/dashboard" || currentPath === "/dashboard/",
    },
    {
        name: "Pulsa & PPOB",
        icon: "plus-circle",
        active: currentPath.startsWith("/dashboard/ppob"),
        submenu: [
            { name: "Pesanan", href: "/dashboard/ppob" },
            { name: "Riwayat Pesanan", href: "/dashboard/ppob/history" },
        ],
    },
    {
        name: "Deposit",
        icon: "wallet",
        active: currentPath.startsWith("/dashboard/deposit"),
        submenu: [
            { name: "New Deposit", href: "/dashboard/deposit" },
            { name: "Riwayat Deposit", href: "/dashboard/deposit/history" },
        ],
    },
    {
        name: "Earnings",
        icon: "list",
        active: currentPath.startsWith("/dashboard/tasks"),
        submenu: [
            { name: "Sosial Booster", href: "/dashboard/tasks/social" },
            { name: "Clipper", href: "/dashboard/tasks/clipper" },
            { name: "Riwayat Task", href: "/dashboard/tasks/history" },
        ],
    },
    {
        name: "Withdraw",
        icon: "credit-card",
        href: "/dashboard/withdraw",
        active: currentPath.startsWith("/dashboard/withdraw"),
    },
    {
        name: "Tiket Bantuan",
        icon: "help-circle",
        href: "/dashboard/ticket",
        active: currentPath.startsWith("/dashboard/ticket"),
    },
];
---

<aside
    id="sidebar"
    class="w-72 bg-[#0C1A18] border-r border-[#1F3D36] flex flex-col fixed inset-y-0 left-0 z-50 transform -translate-x-full md:translate-x-0 transition-transform duration-300"
>
    <!-- Logo Area -->
    <div class="px-6 py-6 border-b border-[#1F3D36] flex items-center gap-3">
        <a href="/" class="flex items-center gap-3 group">
            <div class="relative">
                <div
                    class="absolute -inset-2 bg-gradient-to-r from-[#D4F24F] to-[#20B2AA] rounded-full blur-lg opacity-20 group-hover:opacity-40 transition-opacity"
                >
                </div>
                <h1
                    class="text-2xl font-bold text-white relative tracking-tight"
                >
                    NexOne
                </h1>
            </div>
        </a>
    </div>

    <!-- Workspace Switcher -->
    <div class="px-4 mb-6 mt-6">
        <!-- Role Badge -->
        <div
            class="w-full flex items-center justify-center p-3 rounded-xl bg-[#0C1A18] border border-[#D4F24F] shadow-[0_0_15px_rgba(212,242,79,0.05)] group hover:shadow-[0_0_20px_rgba(212,242,79,0.1)] transition-all"
        >
            <p
                class="text-sm font-black text-[#D4F24F] uppercase tracking-wide group-hover:tracking-widest transition-all"
            >
                Publisher Account
            </p>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 px-4 space-y-1.5 overflow-y-auto">
        {
            menuItems.map((item) =>
                item.submenu ? (
                    <div class="mb-1">
                        <button class="w-full flex items-center justify-between gap-3 px-4 py-3.5 rounded-xl text-[15px] font-bold text-gray-400 hover:text-white hover:bg-[#142925] transition-all duration-200 group submenu-toggle">
                            <div class="flex items-center gap-3">
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"
                                    />
                                </svg>
                                {item.name}
                            </div>
                            <svg
                                class="w-4 h-4 transition-transform duration-200 chevron"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19 9l-7 7-7-7"
                                />
                            </svg>
                        </button>
                        <div
                            class:list={[
                                "pl-4 mt-1 space-y-1 submenu-content",
                                !item.active && "hidden",
                            ]}
                        >
                            {item.submenu.map((sub) => {
                                const isSubActive =
                                    currentPath === sub.href ||
                                    (sub.href !== "/dashboard/ppob" &&
                                        currentPath.startsWith(sub.href));
                                return (
                                    <a
                                        href={sub.href}
                                        class:list={[
                                            "flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all ml-4",
                                            isSubActive
                                                ? "text-white bg-[#142925]"
                                                : "text-gray-500 hover:text-white hover:bg-[#142925]",
                                        ]}
                                    >
                                        <div
                                            class:list={[
                                                "w-1.5 h-1.5 rounded-full transition-colors",
                                                isSubActive
                                                    ? "bg-[#D4F24F] shadow-[0_0_8px_rgba(212,242,79,0.5)]"
                                                    : "bg-gray-600",
                                            ]}
                                        />
                                        {sub.name}
                                    </a>
                                );
                            })}
                        </div>
                    </div>
                ) : (
                    <a
                        href={item.href}
                        class:list={[
                            "flex items-center gap-3 px-4 py-3.5 rounded-xl text-[15px] font-bold transition-all duration-200 mb-1",
                            item.active
                                ? "bg-[#D4F24F] text-[#0F1F1C] shadow-[0_4px_12px_-4px_rgba(212,242,79,0.3)]"
                                : "text-gray-400 hover:text-white hover:bg-[#142925]",
                        ]}
                    >
                        {item.icon === "home" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                />
                            </svg>
                        )}
                        {item.icon === "wallet" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"
                                />
                            </svg>
                        )}
                        {item.icon === "list" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                                />
                            </svg>
                        )}
                        {item.icon === "credit-card" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                                />
                            </svg>
                        )}
                        {item.icon === "help-circle" && (
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-4.418-1.79-8-4"
                                />
                            </svg>
                        )}
                        {item.name}
                    </a>
                ),
            )
        }
    </nav>

    <script>
        document.addEventListener("astro:page-load", () => {
            // Handle submenu toggles
            const toggles = document.querySelectorAll(".submenu-toggle");
            toggles.forEach((toggle) => {
                toggle.addEventListener("click", () => {
                    const content = toggle.nextElementSibling;
                    const chevron = toggle.querySelector(".chevron");

                    if (content && chevron) {
                        content.classList.toggle("hidden");
                        chevron.classList.toggle("rotate-180");
                    }
                });
            });
        });

        // Fallback for non-SPA navigation (initial load)
        const toggles = document.querySelectorAll(".submenu-toggle");
        toggles.forEach((toggle) => {
            toggle.addEventListener("click", () => {
                const content = toggle.nextElementSibling;
                const chevron = toggle.querySelector(".chevron");

                if (content && chevron) {
                    content.classList.toggle("hidden");
                    chevron.classList.toggle("rotate-180");
                }
            });
        });
    </script>

    <!-- User Profile at Bottom -->
    <div class="p-4 m-4 border-t border-[#1F3D36]">
        <div
            class="flex items-center gap-3 cursor-pointer hover:bg-[#142925] p-2 rounded-xl transition-colors group"
        >
            <div class="relative w-10 h-10">
                <div
                    class="w-10 h-10 rounded-full bg-[#142925] flex items-center justify-center overflow-hidden border border-[#1F3D36]"
                >
                    <img
                        src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"
                        alt="User"
                        class="w-full h-full object-cover"
                    />
                </div>
                <!-- Green Online Dot -->
                <div
                    class="absolute bottom-0 right-0 w-3 h-3 bg-emerald-500 border-2 border-[#0C1A18] rounded-full"
                >
                </div>
            </div>

            <div class="flex-1 overflow-hidden">
                <p
                    class="text-sm font-bold text-white truncate group-hover:text-[#D4F24F] transition-colors"
                >
                    James Passaquindici
                </p>
                <p class="text-[11px] text-gray-400 truncate">
                    jamespass@emi.com
                </p>
            </div>
            <svg
                class="w-4 h-4 text-gray-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"></path></svg
            >
        </div>
    </div>
</aside>
