<div
    class="bg-[#142925] rounded-[2rem] border border-[#1F3D36] overflow-hidden"
>
    <div class="px-8 py-6 border-b border-[#1F3D36] bg-[#0C1A18]/50">
        <h2 class="text-lg font-bold text-white flex items-center gap-3">
            <svg
                class="w-5 h-5 text-[#D4F24F]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                ></path><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
            >
            General Configuration
        </h2>
    </div>
    <div class="p-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
            <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider"
                >Application Name</label
            >
            <input
                type="text"
                value="NexOne"
                class="w-full px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white font-medium focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all"
            />
        </div>
        <div class="space-y-2">
            <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider"
                >Contact Support Email</label
            >
            <input
                type="email"
                value="support@nexone.id"
                class="w-full px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white font-medium focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all"
            />
        </div>
        <div class="space-y-2">
            <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider"
                >SEO Title</label
            >
            <input
                type="text"
                value="NexOne - #1 Social Media & PPOB Platform"
                class="w-full px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white font-medium focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all"
            />
        </div>
        <div class="space-y-2">
            <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider"
                >System Mode</label
            >
            <select
                class="w-full px-4 py-3 bg-[#0C1A18] border border-[#1F3D36] rounded-xl text-white font-medium focus:outline-none focus:ring-2 focus:ring-[#D4F24F]/50 focus:border-[#D4F24F] transition-all cursor-pointer"
            >
                <option value="live">Live Production</option>
                <option value="maintenance">Maintenance Mode</option>
                <option value="debug">Development Debug</option>
            </select>
        </div>

        <!-- Logo Upload -->
        <div class="space-y-2">
            <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider"
                >Site Logo</label
            >
            <div class="flex items-center gap-4">
                <div
                    class="w-14 h-14 bg-[#0C1A18] rounded-xl border border-[#1F3D36] flex items-center justify-center"
                >
                    <span class="text-2xl font-bold text-[#D4F24F]">N</span>
                </div>
                <div class="flex-1">
                    <label
                        class="inline-flex items-center gap-2 px-4 py-2 bg-[#1F3D36] hover:bg-[#2A4D45] text-white text-xs font-bold rounded-lg cursor-pointer transition-colors border border-[#2A4D45]"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"
                            ></path></svg
                        >
                        Choose Logo
                        <input
                            type="file"
                            class="hidden"
                            onchange="document.getElementById('logo-filename').innerText = this.files[0]?.name || 'No file chosen'"
                        />
                    </label>
                    <span
                        id="logo-filename"
                        class="text-[10px] text-gray-500 ml-2"
                        >No file chosen</span
                    >
                    <p class="text-[10px] text-gray-500 mt-1">
                        Rec: 512x512px (PNG/SVG)
                    </p>
                </div>
            </div>
        </div>

        <!-- Favicon Upload -->
        <div class="space-y-2">
            <label
                class="text-xs font-bold text-gray-400 uppercase tracking-wider"
                >Favicon</label
            >
            <div class="flex items-center gap-4">
                <div
                    class="w-14 h-14 bg-[#0C1A18] rounded-xl border border-[#1F3D36] flex items-center justify-center p-3"
                >
                    <div class="w-full h-full rounded-full bg-[#D4F24F]"></div>
                </div>
                <div class="flex-1">
                    <label
                        class="inline-flex items-center gap-2 px-4 py-2 bg-[#1F3D36] hover:bg-[#2A4D45] text-white text-xs font-bold rounded-lg cursor-pointer transition-colors border border-[#2A4D45]"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"
                            ></path></svg
                        >
                        Choose Favicon
                        <input
                            type="file"
                            class="hidden"
                            onchange="document.getElementById('favicon-filename').innerText = this.files[0]?.name || 'No file chosen'"
                        />
                    </label>
                    <span
                        id="favicon-filename"
                        class="text-[10px] text-gray-500 ml-2"
                        >No file chosen</span
                    >
                    <p class="text-[10px] text-gray-500 mt-1">
                        Rec: 32x32px (ICO/PNG)
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
